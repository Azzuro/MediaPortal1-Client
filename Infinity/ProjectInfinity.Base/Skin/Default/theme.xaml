      <Rectangle HorizontalAlignment="Stretch" Name="PART_Track" Height="20"  Fill="Transparent" />
      <Rectangle HorizontalAlignment="Left"  Name="PART_Indicator" Height="20" Fill="Red" />
    </Grid>
  </ControlTemplate>

