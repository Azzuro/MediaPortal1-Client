<Page x:Class="MyTv.TvHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ns="clr-namespace:Dialogs;assembly=dialogs"
    Title="MyTv" Loaded="OnLoaded" Background="{StaticResource backGroundBrush}" WindowWidth="800" WindowHeight="600"
    >
  <Grid >
    <DockPanel >
      <StackPanel DockPanel.Dock="Top" Height="100">
        <DockPanel>
          <StackPanel DockPanel.Dock="Left">
            <Label Name="labelHeader" Style="{StaticResource LabelHeaderStyle}" >
              television
            </Label>
          </StackPanel>
          <StackPanel DockPanel.Dock="Right" >
            <Label x:Name="labelDate" Style="{StaticResource LabelNormalStyle}" HorizontalAlignment="Right" Margin="0,20,20,0" >
              Sunday 18 March 09:54
            </Label>
          </StackPanel>
        </DockPanel>
      </StackPanel>
      <StackPanel DockPanel.Dock="Left" Width="180" Margin="30,0,10,0" KeyboardNavigation.DirectionalNavigation="Cycle">
        <Button Name="buttonTvGuide" Template="{StaticResource MpButton}" Height="32"  Click="OnTvGuideClicked"  MouseEnter="OnMouseEnter" >TvGuide</Button>
        <Button Name="buttonRecordNow" Template="{StaticResource MpButton}" Height="32" MouseEnter="OnMouseEnter" Click="OnRecordClicked" >Record now</Button>
        <Button Name="buttonChannel" Template="{StaticResource MpButton}" Height="32" Click="OnChannelClicked" MouseEnter="OnMouseEnter"  >Channel</Button>
        <Button Name="buttonTvStreams" Template="{StaticResource MpButton}" Height="32" Click="OnTvStreamsClicked" MouseEnter="OnMouseEnter"  >Tv Streams</Button>
        <CheckBox x:Name="buttonTvOnOff" Template="{StaticResource MpRadioButton}" Height="32" MouseEnter="OnMouseEnter" Click="OnTvOnOff" >Tv On</CheckBox>
        <Button Name="buttonScheduled" Template="{StaticResource MpButton}" Height="32" MouseEnter="OnMouseEnter" Click="OnScheduledClicked" >Scheduled</Button>
        <Button Name="buttonRecorded" Template="{StaticResource MpButton}" Height="32" MouseEnter="OnMouseEnter" Click="OnRecordedClicked">Recorded</Button>
        <Button Name="buttonSearch" Template="{StaticResource MpButton}" Height="32" MouseEnter="OnMouseEnter" Click="OnSearchClicked"  >Search</Button>
        <Button Name="buttonTeletext" Template="{StaticResource MpButton}" Height="32" MouseEnter="OnMouseEnter"  >Teletext</Button>
      </StackPanel>


      <Grid >
        <Grid.ColumnDefinitions>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="0" Grid.Row="0" Grid.RowSpan="12" Grid.ColumnSpan="6" x:Name="videoWindow" RadiusX="4" RadiusY="4" Fill="Black" StrokeThickness="14" Stroke="#FF1253A3"  ></Rectangle>
        <ProgressBar Template="{StaticResource MpProgressBar}" Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="6" x:Name="progressBar" Width="400" Height="30"  ></ProgressBar>

        <Label Grid.Column="0" Grid.Row="13" Grid.ColumnSpan="9"  x:Name="labelTitle" Style="{StaticResource LabelNormalStyle}"/>
        <Label Grid.Column="0" Grid.Row="14" Grid.ColumnSpan="6" x:Name="labelStart" Style="{StaticResource LabelNormalStyle}"/>
        <Label Grid.Column="6" Grid.Row="14" Grid.ColumnSpan="3" x:Name="labelChannel" Style="{StaticResource LabelNormalStyle}" HorizontalAlignment="Right" Margin="0,0,50,0"/>
        <TextBlock Grid.Column="0" Grid.Row="15" Grid.RowSpan="4" Grid.ColumnSpan="9" x:Name="labelDescription" Style="{StaticResource TextBlockNormalStyle}" />
      </Grid>
    </DockPanel>
  </Grid>
</Page>
