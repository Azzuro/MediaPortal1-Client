<Plugin
    Version = "1.0"
    Name = "Configuration"
    Author = "Team MediaPortal"
    Copyright = "GPL"
    Description = "Configuration"
    PluginVersion = "1.0">

  <Runtime>
    <Assembly FileName = "Configuration.Framework.dll"/>
  </Runtime>

  <Builder Name = "Setting" ClassName = "Components.Configuration.Builders.SettingBuilder"/>

  <Register Location = "/Resources/Language">
    <Resource Id = "Configuration" Directory = "Language" Type = "Language"/>
  </Register>

  <Register Location = "/Configuration/Settings">
    <Setting
        Id = "general"
        Type = "Section"
        Text = "[configuration.settings.general]"
        IconSmall ="images\general-22.png"
        IconLarge ="images\general-48.png"/>
    <Setting
        Id = "regional"
        Type = "Section"
        Text = "[configuration.settings.regional]"
        IconSmall = "images\globe-22.png"
        IconLarge = "images\globe-48.png"/>
    <Setting
        Id = "appearance"
        Type = "Section"
        Text = "[configuration.settings.appearance]"
        IconSmall = "images\skin-22.png"
        IconLarge = "images\skin-48.png"/>
    <Setting
        Id = "folders"
        Type = "Section"
        Text = "[configuration.settings.folders]"
        IconSmall = "images\folders-22.png"
        IconLarge = "images\folders-48.png"/>
    <Setting
        Id = "hardware"
        Type = "Section"
        Text = "[configuration.settings.hardware]"
        IconSmall = "images\hardware-22.png"
        IconLarge = "images\hardware-48.png"/>
  </Register>

  <Register Location = "/Configuration/Settings/General">
    <Setting
        Id = "system"
        Type = "Group"
        Text = "[configuration.system]"/>
  </Register>

  <Register Location = "/Configuration/Settings/General/System">
    <Setting
        Id = "autostart"
        Type = "YesNo"
        Text = "[configuration.system.autostart]"
        Help = "[configuration.system.autostart.help]"
        ClassName = "Components.Configuration.Settings.Autostart"/>
    <Setting
        Id = "balloontips"
        Type = "YesNo"
        Text = "[configuration.system.balloontips]"
        Help = "[configuration.system.balloontips.help]"
        ClassName ="Components.Configuration.Settings.Balloontips"/>
  </Register>

  <Register Location = "/Configuration/Settings/Regional">
    <Setting
        Id = "language"
        Type = "Group"
        Text = "[configuration.language]"/>
  </Register>

  <Register Location = "/Configuration/Settings/Regional/Language">
    <Setting
        Id= "language.main"
        Type = "SingleSelectionList"
        Text = "[configuration.language.main]"
        Help = "[configuration.language.main.help]"
        ClassName = "Components.Configuration.Settings.MainLanguage"/>
  </Register>

  <Register Location = "/Configuration/Settings/Regional">
    <Setting
        Id = "location"
        Type = "Group" 
        Text = "[configuration.location]"/>
  </Register>

  <Register Location = "/Configuration/Settings/Regional/Location">
    <Setting
        Id = "country"
        Type = "SingleSelectionList"
        Text = "[configuration.location.country]"
        Help = "[configuration.location.country.help]"
        ClassName = "Components.Configuration.Settings.Country"/>
    <Setting
        Id = "region"
        Type = "SingleSelectionList"
        Text = "[configuration.location.region]"
        Help = "[configuration.location.region.help]"
        ClassName = "Components.Configuration.Settings.Region"/>
    <Setting
        Id = "city"
        Type = "SingleSelectionList"
        Text = "[configuration.location.city]"
        Help = "[configuration.location.city.help]"
        ClassName = "Components.Configuration.Settings.City"/>
  </Register>
  
</Plugin>