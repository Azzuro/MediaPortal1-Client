<?xml version="1.0" encoding="utf-8"?>
<styles>

  <!-- styles for the list control small list-->
  <style name="list_button_style_small">
    <image source="theme-list-button-focus" visible="#script:HasFocus" position="0,0" center="200,16"  width="400" height="32"/>
    <image source="theme-list-button-nofocus" visible="#script:HasNoFocus" position="0,0" center="200,16" width="400" height="32"/>
    <image source="theme-list-button-nofocus" visible="false" position="0,0" width="400" center="200,17" height="34"/>
    <image source="#script:ListItemLabel(CoverArt)"  position="7,8"  width="16" height="16"/>
    <label font="font13" position="25,2" label="#script:ListItemLabel(Name)" width="270" height="32" scroll="#script:HasFocus"/>
    <label font="font12" position="-10,4" align="right" label="#script:ListItemLabel(#model.SortMode?Name:Size,Size:Size,Date:Date)"  width="400" height="32"/>
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
  </style>

  <!-- styles for the list control  big list-->
  <style name="list_button_style_big">
    <image source="theme-list-button-focus" visible="#script:HasFocus" position="0,0" center="200,32"  width="400" height="64"/>
    <image source="theme-list-button-nofocus" visible="#script:HasNoFocus" position="0,0" center="200,32" width="400" height="64"/>
    <image source="theme-list-button-nofocus" visible="false" position="0,0" width="400" center="200,32" height="68"/>
    <image source="#script:ListItemLabel(CoverArt)"  position="7,16"  width="32" height="32"/>
    <label font="font13" position="40,20" label="#script:ListItemLabel(Name)" width="270" height="32" scroll="#script:HasFocus"/>
    <label font="font12" position="-10,22" align="right" label="#script:ListItemLabel(#model.SortMode?Name:Size,Size:Size,Date:Date)"  width="400" height="32"/>

    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
  </style>

  <!-- styles for the list control  thumbnail list-->
  <style name="thumb_button_style">
    <animation trigger="onwindowopen" type="zoom" from="0.01" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="#script:ListItemLabel(CoverArt)"  position="2,2"  width="96" height="96"/>
    <label font="font13" position="45,30" label="#script:ListItemLabel(Size)"  width="50" height="32"/>
  </style>

  <style name="thumb_button_style_big">
    <animation trigger="onwindowopen" type="zoom" from="0.01" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="#script:ListItemLabel(CoverArt)"  position="5,5"  width="90" height="90"/>
    <label font="font13" position="0,100" label="#script:ListItemLabel(Name)"  width="100" height="32" scroll="#script:HasFocusNoScrolling"/>
  </style>

  <style name="thumb_focus_button_style">
    <image source="white_border.png" visible="#script:HasFocus"  position="0,0"  width="100" height="100"/>
    <animation trigger="isvisible" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
  </style>
  <style name="style_white_border_thumb">
    <image source="white_border.png" visible="#script:HasFocus"  position="0,0"  width="95" height="130"/>
    <animation trigger="isvisible" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
  </style>

  <!-- styles for the list container -->
  <styles name="style_list">

    <style name="list_style_small" position="260,97" move="0,1,0,1" wrap="false">
      <animation trigger="onwindowopen" type="zoom" from="0.01" to="1.0" tween="back" ease="easeout" duration="1300" />
      <animation trigger="onwindowopen" type="rotate" axis="y"  from="-90" to="-10" tween="back" ease="easeout" duration="1300" />
      <animation trigger="onwindowopen" type="rotate" axis="x"  from="-90" to="0" tween="back" ease="easeout" duration="1300" />
      <animation trigger="onwindowopen" type="fade" from="0.0" to="1"  duration="1300"/>
      <label font="font13" position="0,-32" scroll="true" label="#script:SelectedListItem(Name)"  width="400" height="32" />
      <group layout="stack">
        <controls>
          <button style="list_button_style_small"  item="#script:ListItem(0)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(2)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(3)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(4)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(5)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(6)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(7)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(8)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(9)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(10)" visible="#script:HasListItem"/>
          <button style="list_button_style_small"  item="#script:ListItem(11)" visible="#script:HasListItem"/>
        </controls>
      </group>
    </style>

    <style name="list_thumb" position="200,230" move="3,0,3,0" wrap="true" clip="160,210,720,576">
      <group>
        <animation trigger="#script:IsScrollingRight" type="slide" from="0,0,0" to="-100,0,0" duration="500" tween="circle" ease="easeout"/>
        <animation trigger="#script:IsScrollingLeft" type="slide" from="0,0,0" to="100,0,0" duration="500" tween="circle" ease="easeout"/>
        <controls>
          <button style="thumb_button_style" focusable="false" position="-200,0" item="#script:ListItem(-6)"/>
          <button style="thumb_button_style" focusable="false" position="-200,100" item="#script:ListItem(-5)"/>
          <button style="thumb_button_style" focusable="false" position="-200,200" item="#script:ListItem(-4)"/>

          <button style="thumb_button_style" focusable="false" position="-100,0" item="#script:ListItem(-3)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="-100,100" item="#script:ListItem(-2)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="-100,200" item="#script:ListItem(-1)" visible="#script:HasListItem"/>

          <button style="thumb_button_style" position="0,0" item="#script:ListItem(0)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" position="0,100" item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" position="0,200" item="#script:ListItem(2)" visible="#script:HasListItem"/>

          <button style="thumb_button_style" position="100,0" item="#script:ListItem(3)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" position="100,100" item="#script:ListItem(4)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" position="100,200" item="#script:ListItem(5)" visible="#script:HasListItem"/>

          <button style="thumb_button_style" position="200,0" item="#script:ListItem(6)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" position="200,100" item="#script:ListItem(7)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" position="200,200" item="#script:ListItem(8)" visible="#script:HasListItem"/>

          <button style="thumb_button_style" focusable="false" position="300,0" item="#script:ListItem(9)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="300,100" item="#script:ListItem(10)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="300,200" item="#script:ListItem(11)" visible="#script:HasListItem"/>

          <button style="thumb_button_style" focusable="false" position="400,0" item="#script:ListItem(12)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="400,100" item="#script:ListItem(13)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="400,200" item="#script:ListItem(14)" visible="#script:HasListItem"/>

          <button style="thumb_button_style" focusable="false" position="500,0" item="#script:ListItem(15)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="500,100" item="#script:ListItem(16)" visible="#script:HasListItem"/>
          <button style="thumb_button_style" focusable="false" position="500,200" item="#script:ListItem(17)" visible="#script:HasListItem"/>

          <button style="thumb_button_style" focusable="false" position="600,0" item="#script:ListItem(18)"/>
          <button style="thumb_button_style" focusable="false" position="600,100" item="#script:ListItem(19)"/>
          <button style="thumb_button_style" focusable="false" position="600,200" item="#script:ListItem(20)"/>
        </controls>
      </group>
      <label font="font13" position="0,300" scroll="true" container="list" label="#script:SelectedListItem(Name)" width="300" height="32" color="greytransparent"/>
      <button name="thumbFocus" style="thumb_focus_button_style" position="#script:SelectItemPosition" focusable="false" container="list" />
    </style>

    <style name="list_style_big" position="260,97" move="0,1,0,1" wrap="false">
      <animation trigger="onwindowopen" type="zoom" from="0.01" to="1.0" tween="back" ease="easeout" duration="1300" />
      <animation trigger="onwindowopen" type="fade" from="0.0" to="1"  duration="1300"/>
      <label font="font13" position="0,-32" scroll="true" label="#script:SelectedListItem(Name)"  width="400" height="32" />
      <group layout="stack">
        <controls>
          <button style="list_button_style_big" item="#script:ListItem(0)" visible="#script:HasListItem"/>
          <button style="list_button_style_big" item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button style="list_button_style_big" item="#script:ListItem(2)" visible="#script:HasListItem"/>
          <button style="list_button_style_big" item="#script:ListItem(3)" visible="#script:HasListItem"/>
          <button style="list_button_style_big" item="#script:ListItem(4)" visible="#script:HasListItem"/>
          <button style="list_button_style_big" item="#script:ListItem(5)" visible="#script:HasListItem"/>
        </controls>
      </group>
    </style>

    <style name="list_thumb_big" position="250,50" move="0,4,0,4" wrap="true">
      <group clip="0,50,720,520" >
        <animation trigger="#script:IsScrollingDown" type="slide" from="0,0,0" to="0,-130,0" duration="500" tween="circle" ease="easeout"/>
        <animation trigger="#script:IsScrollingUp" type="slide" from="0,0,0" to="0,130,0" duration="500" tween="circle" ease="easeout"/>
        <controls>
          <button style="thumb_button_style_big" focusable="false" position="0,-130" item="#script:ListItem(-4)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" focusable="false" position="100,-130" item="#script:ListItem(-3)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" focusable="false" position="200,-130" item="#script:ListItem(-2)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" focusable="false" position="300,-130" item="#script:ListItem(-1)" visible="#script:HasListItem"/>

          <button style="thumb_button_style_big" position="0,0" item="#script:ListItem(0)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="100,0" item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="200,0" item="#script:ListItem(2)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="300,0" item="#script:ListItem(3)" visible="#script:HasListItem"/>

          <button style="thumb_button_style_big" position="0,130" item="#script:ListItem(4)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="100,130" item="#script:ListItem(5)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="200,130" item="#script:ListItem(6)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="300,130" item="#script:ListItem(7)" visible="#script:HasListItem"/>

          <button style="thumb_button_style_big" position="0,260" item="#script:ListItem(8)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="100,260" item="#script:ListItem(9)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="200,260" item="#script:ListItem(10)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="300,260" item="#script:ListItem(11)" visible="#script:HasListItem"/>

          <button style="thumb_button_style_big" position="0,390" item="#script:ListItem(12)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="100,390" item="#script:ListItem(13)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="200,390" item="#script:ListItem(14)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="300,390" item="#script:ListItem(15)" visible="#script:HasListItem"/>

          <button style="thumb_button_style_big" position="0,520"   focusable="false" item="#script:ListItem(16)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="100,520" focusable="false" item="#script:ListItem(17)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="200,520" focusable="false" item="#script:ListItem(18)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_big" position="300,520" focusable="false" item="#script:ListItem(19)" visible="#script:HasListItem"/>
        </controls>
      </group>
      <button name="whiteBorderThumbBig" style="style_white_border_thumb" position="#script:SelectItemPosition" focusable="false" container="list" />
    </style>

  </styles>

</styles>