    <label font="font13" position="10,4" visible="#script:HasFocus"   height="32" label="#script:buttonLabel" color="white"/>
    <label font="font13" position="10,4" visible="#script:HasNoFocus" height="32" label="#script:buttonLabel" color="lightblue"/>
  </style>
  
	<!-- styles for a checkbox -->
	<style name="checkbox_style_main">
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
		<image source="theme-list-button-green-focus" visible="#script:HasFocus" position="0,0"  height="32"/>
		<image source="theme-list-button-green-nofocus" visible="#script:HasNoFocus" position="0,0"  height="32"/>

		<image source="check-box.png" visible="#script:IsSelected" position="30,6" align="right" width="16" height="16"/>
    <image source="check-boxNF.png" visible="#script:IsNotSelected" position="30,6" align="right" width="16" height="16"/>
		<label font="font12" position="10,6"  height="32" label="#script:buttonLabel" color="white"/>
	</style>

	<!-- styles for the up/down control -->
	<style name="pageup_style">
		<image source="arrow_round_up_focus.png" visible="#script:HasFocus" position="0,0" width="26" height="27" />
		<image source="arrow_round_up_nofocus.png" visible="#script:HasNoFocus" position="0,0" width="26" height="27"/>
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300"/>
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
	</style>

	<style name="pagedown_style">
		<image source="arrow_round_down_focus.png" visible="#script:HasFocus" position="0,0" width="26" height="27" />
		<image source="arrow_round_down_nofocus.png" visible="#script:HasNoFocus" position="0,0" width="26" height="27"/>
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300"/>
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
	</style>

	<!-- style for the updown control-->
	<style name="updown_style">
		<button style="pagedown_style" position="0,0" command="#script:PageDown" />
		<button style="pageup_style" position="27,0" command="#script:PageUp" />
		<label font="font13" position="-105,1" label="#script:buttonLabel" width="100" height="32" align="right"/>
	</style>

