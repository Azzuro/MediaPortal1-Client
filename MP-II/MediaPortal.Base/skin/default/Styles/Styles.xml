  <style name="button_style_main">
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
		<image source="theme-list-button-green-focus" visible="#script:HasFocus" position="0,0"  height="35"/>
		<image source="theme-list-button-green-nofocus" visible="#script:HasNoFocus" position="0,0"  height="35"/>
		<label font="font13" position="10,4" visible="#script:HasFocus"   height="32" label="#script:buttonLabel" color="white"/>
		<label font="font13" position="10,4" visible="#script:HasNoFocus"  height="32" label="#script:buttonLabel" color="lightblue"/>
	</style>

	<!-- styles for a the previous window back button -->
	<style name="button_style_back">
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
		<animation trigger="hasfocus" type="fade" from="0.5" to="1.0" duration="300" />
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
		<animation trigger="!hasfocus" type="fade" from="1.0" to="0.5" duration="300" />
		<image source="nav_back_nofocus.png" position="0,0" width="64" height="64"/>
		<animation trigger="isvisible" type="fade" from="0" to="1"  duration="300" />
		<animation trigger="!isvisible" type="fade" from="1" to="0"  duration="300" />
	</style>

	<!-- style for the user icon button -->
	<style name="button_user_icon">
		<label name="username"  font="font13" position="83,7" label="#script:buttonLabel" width="500" height="32" />
		<image source="user_bg.png" position="0,0" width="40" height="40"/>
	</style>
	
	<!-- styles for the video overlay button -->
	<style name="button_small_video">
    <image source="rectangle_light.png" position="0,0" width="104" height="104" />
    <image source="white_border.png" visible="#script:HasFocus" position="0,0"  width="104" height="104"/>
    <image item="Players.OSD.MediaItem" source="#script:ListItemLabel(CoverArt)" keepaspectratio="true" zoom="true" default="#script:ListItemLabel(defaulticon)"  position="2,2" width="100" height="100"/>
		<image source="#video1" position="2,2" width="100" height="100"/>
    <image source="logo_pause.png" position="18,18"  width="64" height="64" visible="#script:IsVideoPaused"/>
    <label font="font13" position="104,10" width="400" height="30" label="Players.OSD.Title" color="white" visible="#script:HasFocus"/>
    <label font="font12" position="104,40" width="400" height="30" item="Players.OSD.MediaItem"  label="#script:ListItemLabel(artist)" color="whitehalftransparent" visible="#script:HasFocus"/>
    <label font="font12" position="104,60" width="104" height="30" label="Players.OSD.CurrentTime" color="whitehalftransparent" visible="#script:HasFocus"/>
	</style>



