<?xml version="1.0" encoding="utf-8"?>
<styles>
  <!-- styles for the close dialog button -->
  <style name="button_style_close">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
    <animation trigger="hasfocus" type="fade" from="0.7" to="1.0" duration="300" />
    <animation trigger="!hasfocus" type="fade" from="1.0" to="0.7" duration="300"/>
    <image source="dialogue_shutdown_nofocus.png" position="0,0"  width="40" height="40"/>
  </style>

  <!-- styles for a dialog menu item-->
  <style name="list_button_style_menu">
    <image source="dialog_item_focus.png" visible="#script:HasFocus" position="0,0" center="200,16"  width="430" height="50"/>
    <image source="dialog_item_nofocus.png" visible="#script:HasNoFocus" position="0,0" center="200,16" width="430" height="50"/>
    <image source="dialog_item_nofocus.png" visible="false" position="0,0" width="430" center="200,17" height="50"/>
    <image source="#script:ListItemLabel(CoverArt)"  position="7,8"  width="16" height="16"/>
    <label font="font13" position="25,10" label="#script:ListItemLabel(Name)" width="300" height="32" scroll="#script:HasFocus"/>
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
  </style>
  
  <!-- styles for a dialog menu item-->
  <style name="thumb_button_style_menu">
    <image source="dialog_item_focus.png" visible="#script:HasFocus" position="0,0" center="200,16"  width="430" height="140"/>
    <image source="dialog_item_nofocus.png" visible="#script:HasNoFocus" position="0,0" center="200,16" width="430" height="140"/>
    <image source="dialog_item_nofocus.png" visible="false" position="0,0" width="430" center="200,17" height="140"/>
    <image source="#script:ListItemLabel(CoverArt)"  position="20,20"  width="90" height="90"/>
    <label font="font13" position="150,50" label="#script:ListItemLabel(Name)" width="300" height="32" scroll="#script:HasFocus"/>
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
  </style>

  <!-- styles for the listcontainer in a dialog-->
  <styles name="style_list_dialog">
    <style name="list_style_small" position="0,0" move="0,1,0,1" wrap="false" layout="stack">
      <group position="0,0" layout="stack">
        <animation trigger="#script:ContentChange" type="fade" from="0.0" to="1.0"  duration="300" delay="200"/>
        <animation trigger="#script:IsScrollingDown" type="slide" from="0,0" to="0,-50" tween="quad" ease="easeout" duration="300"/>
        <animation trigger="#script:IsScrollingUp" type="slide" from="0,0" to="0,50" tween="quad" ease="easeout" duration="300"/>
        <controls>
          <button style="list_button_style_menu"  item="#script:ListItem(-1)" focusable="false" visible="#script:IsScrollingUp">
            <animation trigger="#script:IsScrollingUp" type="fade" from="0.0" to="1.0" duration="100"/>
          </button>
          <button style="list_button_style_menu"  item="#script:ListItem(0)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingDown" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button style="list_button_style_menu"  item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button style="list_button_style_menu"  item="#script:ListItem(2)" visible="#script:HasListItem"/>
          <button style="list_button_style_menu"  item="#script:ListItem(3)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingUp" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button style="list_button_style_menu"  item="#script:ListItem(4)" focusable="false" visible="#script:IsScrollingDown">
            <animation trigger="#script:IsScrollingDown" type="fade" from="0.0" to="1.0" duration="100"/>
          </button>
        </controls>
      </group>
    </style>
  </styles>


  <!-- styles for a dialog menu item-->
  <style name="list_button_style_menu_wide">
    <image source="dialog_item_focus.png" visible="#script:HasFocus" position="0,0" center="200,16"  width="530" height="50"/>
    <image source="dialog_item_nofocus.png" visible="#script:HasNoFocus" position="0,0" center="200,16" width="530" height="50"/>
    <image source="dialog_item_nofocus.png" visible="false" position="0,0" width="530" center="200,17" height="50"/>
    <image source="#script:ListItemLabel(CoverArt)"  position="7,8"  width="16" height="16"/>
    <label font="font13" position="25,10" label="#script:ListItemLabel(Name)" width="450" height="32" scroll="#script:HasFocus"/>
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
  </style>
  
  <!-- styles for the listcontainer in a dialog-->
  <styles name="style_list_dialog_wide">
    <style name="list_style_small" position="0,0" move="0,1,0,1" wrap="false" layout="stack">
      <group position="0,0" layout="stack">
        <animation trigger="#script:ContentChange" type="fade" from="0.0" to="1.0"  duration="300" delay="200"/>
        <animation trigger="#script:IsScrollingDown" type="slide" from="0,0" to="0,-50" tween="quad" ease="easeout" duration="300"/>
        <animation trigger="#script:IsScrollingUp" type="slide" from="0,0" to="0,50" tween="quad" ease="easeout" duration="300"/>
        <controls>
          <button style="list_button_style_menu_wide"  item="#script:ListItem(-1)" focusable="false" visible="#script:IsScrollingUp">
            <animation trigger="#script:IsScrollingUp" type="fade" from="0.0" to="1.0" duration="100"/>
          </button>
          <button style="list_button_style_menu_wide"  item="#script:ListItem(0)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingDown" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button style="list_button_style_menu_wide"  item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button style="list_button_style_menu_wide"  item="#script:ListItem(2)" visible="#script:HasListItem"/>
          <button style="list_button_style_menu_wide"  item="#script:ListItem(3)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingUp" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button style="list_button_style_menu_wide"  item="#script:ListItem(4)" focusable="false" visible="#script:IsScrollingDown">
            <animation trigger="#script:IsScrollingDown" type="fade" from="0.0" to="1.0" duration="100"/>
          </button>
        </controls>
      </group>
    </style>
  </styles>
  
  <!-- styles for the listcontainer in a dialog-->
  <styles name="style_thumb_dialog">
    <style name="list_style_small" position="0,0" move="0,1,0,1" wrap="false" layout="stack">
      <group position="0,0" layout="stack" >
        <controls>
          <button style="thumb_button_style_menu"  item="#script:ListItem(0)" visible="#script:HasListItem"/>
          <button style="thumb_button_style_menu"  item="#script:ListItem(1)" visible="#script:HasListItem"/>
        </controls>
      </group>
    </style>
  </styles>
</styles>