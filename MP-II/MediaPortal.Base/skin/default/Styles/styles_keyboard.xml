<?xml version="1.0" encoding="utf-8"?>
<styles>
  <!-- style for the keyboard buttons-->
  <style name="button_key_style">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="key.png" position="0,0" width="50" height="50"/>
    <label font="font13" visible="#script:HasNoFocus" position="10,10" width="30" height="30" label="#script:buttonLabel" color="almostblack"/>
    <label font="font13" visible="#script:HasFocus" position="10,10" width="30" height="30" label="#script:buttonLabel" color="black"/>
  </style>
  <style name="button_key_style_enter">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="key.png" position="0,0" width="100" height="50"/>
    <label font="font13" visible="#script:HasNoFocus" position="20,10" width="90" height="30" label="#script:buttonLabel" color="almostblack"/>
    <label font="font13" visible="#script:HasFocus" position="20,10" width="90" height="30" label="#script:buttonLabel" color="black"/>
  </style>
  <style name="button_spacekey_style">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.03" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.03" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="key_space.png" position="0,0" width="350" height="40"/>
    <label font="font13" align="center"  visible="#script:HasNoFocus" position="10,10" width="350" height="40" label="#script:buttonLabel" color="almostblack"/>
    <label font="font13" align="center" visible="#script:HasFocus" position="10,10" width="350" height="40" label="#script:buttonLabel" color="black"/>
  </style>
  <style name="button_backspacekey_style">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.03" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.03" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="key_space.png" position="0,0" width="100" height="50"/>
    <label font="font13" align="center"  visible="#script:HasNoFocus" position="10,10" width="100" height="40" label="#script:buttonLabel" color="almostblack"/>
    <label font="font13" align="center" visible="#script:HasFocus" position="10,10" width="100" height="40" label="#script:buttonLabel" color="black"/>
  </style>
  <style name="button_showhide_style">
    <image source="textbox_selected.png" position="0,0" width="300" height="50" visible="#script:IsSelected"/>
    <image source="textbox_notselected.png" visible="#script:IsNotSelected"  position="0,0" width="300" height="50"/>
    <image source="textbox_glow.png" visible="#script:HasFocus"  position="0,0" width="300" height="50">
      <animation trigger="isvisible" type="fade" from="0.0" to="1.0" duration="200"/>
      <animation trigger="!isvisible" type="fade" from="1.0" to="0.0" duration="200"/>
    </image>
    <label font="font13" align="left"  visible="#script:HasNoFocus" position="10,13" width="240" height="40" label="#script:buttonLabel" color="almostblack"/>
    <label font="font13" align="left" visible="#script:HasFocus" position="10,12" width="240" height="40" label="#script:buttonLabel" color="black" scroll="true"/>
  </style>
  <style name="button_keyboard_style">
    <image source="textbox_selected.png" position="0,0" width="300" height="50" visible="#script:HasFocus"/>
    <image source="textbox_notselected.png" visible="#script:HasNoFocus"  position="0,0" width="300" height="50"/>
    <image source="textbox_glow.png" visible="#script:HasFocus"  position="0,0" width="300" height="50">
      <animation trigger="isvisible" type="fade" from="0.0" to="1.0" duration="200"/>
      <animation trigger="!isvisible" type="fade" from="1.0" to="0.0" duration="200"/>
    </image>
    <label font="font13" align="left"  visible="#script:HasNoFocus" position="10,13" width="240" height="40" label="#script:buttonLabel" color="almostblack"/>
    <label font="font13" align="left" visible="#script:HasFocus" position="10,12" width="240" height="40" label="#script:buttonLabel" color="black" scroll="true"/>
  </style>

  <!-- style for the keyboard -->
  <styles name ="keyboard_styles_closed">
    <style name="keyboard_style">
      <group>
        <controls>
          <button style="button_keyboard_style" label="container.Container.CurrentString" position="0,0" width="400" height="50" command="WindowManager.ShowDialog" parameter="dialogKeyboard" commandresult="container.Container.CurrentString=dialogKeyboard.Result"/>
        </controls>
      </group>
    </style>
  </styles>
  <styles name ="keyboard_styles_open">
    <style name="keyboard_style">
      <group>
        <controls>
          <checkbox style="button_showhide_style" label="container.Container.CurrentString" position="0,0" width="400" height="50"/>
        </controls>
      </group>
      <group >
        <animation trigger="isvisible" type="fade" from="0.0" to="1.0" duration="500"/>
        <animation trigger="!isvisible" type="fade" from="1.0" to="0.0" duration="500"/>
        <controls>
          <group layout="flow" position="0,50">
            <controls>
              <button name="QButton" label="Q"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="q"/>
              <button name="WButton" label="W"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="w"/>
              <button name="EButton" label="E"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="e"/>
              <button name="RButton" label="R"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="r"/>
              <button name="TButton" label="T"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="t"/>
              <button name="ZButton" label="Z"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="z"/>
              <button name="UButton" label="U"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="u"/>
              <button name="IButton" label="I"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="i"/>
              <button name="OButton" label="O"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="o"/>
              <button name="PButton" label="P"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="p"/>
              <button name="BackButton" label="&lt;--"  style="button_key_style" width = "50" command="container.Container.Container.PressAKey" parameter="BACKSPACE"/>
            </controls>
          </group>
          <group  position="0,100">
            <controls>
              <button name="AButton" label="A"  position="0,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="a"/>
              <button name="SButton" label="S"  position="50,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="s"/>
              <button name="DButton" label="D"  position="100,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="d"/>
              <button name="FButton" label="F"  position="150,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="f"/>
              <button name="GButton" label="G"  position="200,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="g"/>
              <button name="HButton" label="H"  position="250,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="h"/>
              <button name="JButton" label="J"  position="300,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="j"/>
              <button name="KButton" label="K"  position="350,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="k"/>
              <button name="LButton" label="L"  position="400,0" style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="l"/>
              <button name="EnterButton" label="enter" position="450,0"  style="button_key_style_enter" width="100" height="50" command="WindowManager.CloseDialog"/>
            </controls>
          </group>
          <group layout="flow" position="0,150">
            <controls>
              <button name="YButton" label="Y"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="y"/>
              <button name="XButton" label="X"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="x"/>
              <button name="CButton" label="C"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="c"/>
              <button name="VButton" label="V"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="v"/>
              <button name="BButton" label="B"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="b"/>
              <button name="NButton" label="N"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="n"/>
              <button name="MButton" label="M"  style="button_key_style" width="50" height="50" command="container.Container.Container.PressAKey" parameter="m"/>
            </controls>
          </group>
          <button name="ABButton" label="SPACE"  style="button_spacekey_style" position="0,200"  width="350" height="50" command="container.Container.PressAKey" parameter="SPACE"/>
        </controls>
      </group>
    </style>
  </styles>
</styles>