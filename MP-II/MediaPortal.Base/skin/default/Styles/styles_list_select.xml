<?xml version="1.0" encoding="utf-8"?>
<styles>

  <style name="style_select_checkbox_button_selected">
    <image source="checkbox-selected-focused.png"  position="0,0"  visible="#script:HasFocus" width="32" height="32"/>
    <image source="checkbox-selected-non-focused.png"  position="0,0" visible="#script:HasNoFocus" width="32" height="32" />
  </style>
  <style name="style_select_checkbox_button_not_selected">
    <image source="checkbox-focused.png"  position="0,0" visible="#script:HasFocus" width="32" height="32"/>
    <image source="checkbox-non-focused.png"  position="0,0" visible="#script:HasNoFocus" width="32" height="32"/>
  </style>

  <!-- styles for the list control small list-->
  <style name="style_select_button_small">
    <image source="theme-list-button-focus" position="0,0" center="230,16"  width="460" height="46">
      <animation trigger="#script:HasFocus" type="fade" from="0.0" to="1.0" duration="100"/>
      <animation trigger="#script:HasNoFocus" type="fade" from="1.0" to="0.0" duration="100"/>
    </image>
    <image source="theme-list-button-nofocus" position="0,0" center="230,16" width="460" height="46">
      <animation trigger="#script:HasNoFocus" type="fade" from="0.0" to="1.0" duration="100"/>
      <animation trigger="#script:HasFocus" type="fade" from="1.0" to="0.0" duration="100"/>
    </image>
    <image source="theme-list-button-nofocus" visible="false" position="0,0" width="460" center="200,17" height="46"/>

    <image name="imgcoverart"  source="#script:ListItemLabel(CoverArt)" keepaspectratio="true" zoom="true" default="#script:ListItemLabel(defaulticon)"  position="10,8"  width="32" height="32"/>
    <label name="lblfocus" font="font13" position="50,9" label="#script:ListItemLabel(Name)" width="250" height="32" scroll="#script:HasFocus" color="green" visible="#script:ListItemLabelIsTrue(selected)"/>
    <label name="lblnofocus" font="font13" position="50,9" label="#script:ListItemLabel(Name)" width="250" height="32" scroll="#script:HasFocus" visible="#script:ListItemLabelIsFalse(selected)"/>
    <button style="style_select_checkbox_button_selected" position="420,8" command="model.SelectCurrentListItem" visible="#script:ListItemLabelIsTrue(selected)"/>
    <button style="style_select_checkbox_button_not_selected" position="420,8" command="model.SelectCurrentListItem" visible="#script:ListItemLabelIsFalse(selected)"/>
    <animation trigger="isvisible" type="fade" from="0.0" to="1.0"  duration="100" />
    <animation trigger="!isvisible" type="fade" from="1.0" to="0.0"  duration="100" />
  </style>


  <!-- styles for the list container -->
  <styles name="style_list_select">

    <style name="style_select_smalllist" position="200,120" move="0,1,0,1" wrap="false">
      <animation trigger="onwindowopen" type="zoom" from="0.01" to="1.0" tween="back" ease="easeout" duration="1300" />
      <animation trigger="onwindowopen" type="rotate" axis="y"  from="-90" to="0" tween="back" ease="easeout" duration="1300" />
      <animation trigger="onwindowopen" type="rotate" axis="x"  from="-90" to="0" tween="back" ease="easeout" duration="1300" />
      <animation trigger="onwindowopen" type="fade" from="0.0" to="1"  duration="1300"/>
      <animation trigger="visiblechange" type="fade" from="0.0" to="1.0" duration="300"/>
      <label font="font13" position="0,-32" scroll="true" label="#script:SelectedListItem(Name)"  width="400" height="32" />
      <group name="small_list" position="0,-46" layout="stack">
        <animation trigger="#script:ContentChange" type="fade" from="0.0" to="1.0"  duration="300" delay="200"/>
        <animation trigger="#script:IsScrollingDown" type="slide" from="0,0" to="0,-46" tween="quad" ease="easeout" duration="300"/>
        <animation trigger="#script:IsScrollingUp" type="slide" from="0,0" to="0,46" tween="quad" ease="easeout" duration="300"/>
        <controls>
          <button name="b1"  style="style_select_button_small"  item="#script:ListItem(-1)" focusable="false" visible="#script:IsScrollingUp">
            <animation trigger="#script:IsScrollingUp" type="fade" from="0.0" to="1.0" duration="100"/>
          </button>
          <button name="b2"  style="style_select_button_small"  item="#script:ListItem(0)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingDown" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button name="b3"  style="style_select_button_small"  item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button name="b4"  style="style_select_button_small"  item="#script:ListItem(2)" visible="#script:HasListItem"/>
          <button name="b5"  style="style_select_button_small"  item="#script:ListItem(3)" visible="#script:HasListItem"/>
          <button name="b6"  style="style_select_button_small"  item="#script:ListItem(4)" visible="#script:HasListItem"/>
          <button name="b7"  style="style_select_button_small"  item="#script:ListItem(5)" visible="#script:HasListItem"/>
          <button name="b8"  style="style_select_button_small"  item="#script:ListItem(6)" visible="#script:HasListItem"/>
          <button name="b10"  style="style_select_button_small"  item="#script:ListItem(7)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingUp" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button name="b11"  style="style_select_button_small"  item="#script:ListItem(8)" focusable="false" visible="#script:IsScrollingDown">
            <animation trigger="#script:IsScrollingDown" type="fade" from="0.0" to="1.0" duration="100"/>
          </button>
        </controls>
      </group>
      <visualbrush position="0,0" width="400" height="414" source="260,97,400,414" visible="#script:ContentAboutToChange" clip="260,97,400,414" effect="normal">
        <animation trigger="#script:ContentChange" type="fade" from="1.0" to="0.0"  duration="200"/>
      </visualbrush>
    </style>

  </styles>



</styles>