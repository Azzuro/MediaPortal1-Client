<?xml version="1.0" encoding="utf-8"?>
<styles>
	<!-- styles for the list control  big list-->
	<style name="list_button_login">
		<image source="login_item_selected.png"  visible="#script:HasFocus" position="0,0" center="200,32"  width="420" height="100"/>
		<image source="login_item_unselected.png" visible="#script:HasNoFocus" position="0,0" center="200,32" width="420" height="100"/>
		<image source="#script:ListItemLabel(UserImage)" default="DefaultUser.png"  visible="#script:HasFocus" position="13,10" width="78" height="78"/>
		<image source="#script:ListItemLabel(UserImage)"  visible="#script:HasNoFocus" position="24,34" width="34" height="34" effect="greyscale"/>
		<image source="DefaultUser.png"  visible="#script:HasNoFocus" position="30,8" width="60" height="60"/>
		<image source="locked.png"  visible="#script:SelectedListItemLabelTrue(NeedsPassword)" position="367,40"  width="30" height="30"/>
		<image source="unlocked.png"  visible="#script:SelectedListItemLabelFalse(NeedsPassword)" position="367,40"  width="30" height="30"/>
		<label font="font13" position="100,35" label="#script:ListItemLabel(UserName)" visible="#script:HasNoFocus" width="270" height="32" scroll="#script:HasFocus" color="lightgrey"/>
		<label font="font13" position="130,24" label="#script:ListItemLabel(UserName)" visible="#script:HasFocus" width="270" height="32" scroll="#script:HasFocus" color="white"/>
		<label font="font12" position="130,55" label="#script:ListItemLabel(LastLogin)" visible="#script:HasFocus" width="400" height="32" scroll="#script:HasFocus" color="lightgrey"/>
		<animation trigger="#script:HasFocus" type="zoom" from="1.0" to="1.05" duration="100" ease="easeout" tween="back"/>
		<animation trigger="#script:HasNoFocus" type="zoom" from="1.05" to="1.0" duration="100" ease="easeout" tween="back"/>
	</style>

	<!-- styles for the list container -->
	<styles name="style_list_login">
		<style name="list_style_login" position="0,0" move="0,1,0,1" wrap="false">
			<group layout="stack" position="0,-64">
				<animation trigger="#script:IsScrollingDown" type="slide" from="0,0" to="0,-68" tween="quad" ease="easeout" duration="300"/>
				<animation trigger="#script:IsScrollingUp" type="slide" from="0,0" to="0,68" tween="quad" ease="easeout" duration="300"/>
				<controls>
					<button style="list_button_login" item="#script:ListItem(0)" visible="#script:HasListItem"/>
					<button style="list_button_login" item="#script:ListItem(1)" visible="#script:HasListItem"/>
					<button style="list_button_login" item="#script:ListItem(2)" visible="#script:HasListItem"/>
				</controls>
			</group>
		</style>
	</styles>
</styles>