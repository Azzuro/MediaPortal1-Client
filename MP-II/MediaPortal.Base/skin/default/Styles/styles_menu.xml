<?xml version="1.0" encoding="utf-8"?>
<styles>
  <!-- styles for a menu-item -->
  <style name="style_menu_item">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="menu_list_focus.png" visible="#script:HasItemFocus" position="-10,-2"  width="230" height="36"/>
    <label font="font13" position="10,1" width="190" height="32" label="#script:ListItemLabel(Name)" color="white"/>
  </style>



  <!-- styles for a menu -->
  <styles name="style_list_menu">
    <style name="list_style_menu_1" position="350,136" move="0,1,0,1" wrap="true" clip="0,208,720,216" >
      <group layout="stack">
        <controls>
          <button style="style_menu_item" item="#script:ListItem(-5)" focusable="false" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(-4)" focusable="false" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(-3)" focusable="false" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(-2)" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(-1)"  visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(0)" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(1)" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(2)" focusable="false" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(3)" focusable="false" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(4)" focusable="false" visible="#script:HasListItem"/>
          <button style="style_menu_item" item="#script:ListItem(5)" focusable="false" visible="#script:HasListItem"/>
        </controls>
        <animation trigger="#script:IsScrollingDown" type="slide" from="0,0,0" to="0,-36,0" duration="300" />
        <animation trigger="#script:IsScrollingUp" type="slide" from="0,0,0" to="0,36,0" duration="300" />
      </group>
      <image source="#script:SelectedListItem(CoverArt)" position="-200,40" width="200" height="200"/>
    </style>
  </styles>
</styles>