<?xml version="1.0" encoding="utf-8"?>
<MyXaml >
  <ResourceDictionary>

    <Style Key="Style_button_pause" BasedOn="{Null}" TargetType="{Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate  >
            <Grid Width="32" Height="32">
              <Canvas IsVisible="{Binding Path=!Players.Paused}">
                <Image Name="imgFocus" Source="osd_pause_focus.png" Margin="-10,0,0,0"  Width="32" Height="32"/>
                <Image Name="imgNoFocus" Source="osd_pause_nofocus.png"  Margin="-10,0,0,0" Width="32" Height="32"/>
              </Canvas>
              <Canvas IsVisible="{Binding Path=Players.Paused}">
                <Image Name="imgFocus2" Source="play_enabled.png" Margin="-10,0,0,0"  Width="32" Height="32"/>
                <Image Name="imgNoFocus2" Source="play_disabled.png" Margin="-10,0,0,0" Width="32" Height="32"/>
              </Canvas>
            </Grid>
            <ControlTemplate.Triggers>
              <Trigger Property="HasFocus" Value="True">
                <Setter TargetName="imgFocus" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgFocus2" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgNoFocus" Property="Visibility" Value="Hidden" />
                <Setter TargetName="imgNoFocus2" Property="Visibility" Value="Hidden" />
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
