<?xml version="1.0" encoding="utf-8"?>
<styles>

  <style name="style_playlistUp">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="playlist_item_up_focus.png" visible="#script:HasFocus" position="0,0" width="32" height="32" />
    <image source="playlist_item_up_nofocus.png" visible="#script:HasNoFocus" position="0,0" width="32" height="32"/>
  </style>
  <style name="style_playlistDown">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="playlist_item_down_focus.png" visible="#script:HasFocus" position="0,0" width="32" height="32" />
    <image source="playlist_item_down_nofocus.png" visible="#script:HasNoFocus" position="0,0" width="32" height="32"/>
  </style>
  <style name="style_playlistRemove">
    <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
    <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
    <image source="playlist_item_delete_focus.png" visible="#script:HasFocus" position="0,0" width="32" height="32" />
    <image source="playlist_item_delete_nofocus.png" visible="#script:HasNoFocus" position="0,0" width="32" height="32" />
  </style>

	<!-- styles for the list control small list-->
	<style name="style_playlist_button_small">
    <image name="btnfocus"  source="theme-list-button-focus" position="0,0" center="230,16"  width="460" height="46">
      <animation trigger="#script:HasFocus" type="fade" from="0.0" to="1.0" duration="100"/>
      <animation trigger="#script:HasNoFocus" type="fade" from="1.0" to="0.0" duration="100"/>
    </image>
    <image name="btnnofocus"  source="theme-list-button-nofocus" position="0,0" center="230,16" width="460" height="46">
			<animation trigger="#script:HasNoFocus" type="fade" from="0.0" to="1.0" duration="100"/>
			<animation trigger="#script:HasFocus" type="fade" from="1.0" to="0.0" duration="100"/>
		</image>
		<image name="imgnofocus"  source="theme-list-button-nofocus" visible="false" position="0,0" width="460" center="200,17" height="46"/>
		<image name="imgcoverart"  source="#script:ListItemLabel(CoverArt)" keepaspectratio="true" zoom="true" default="#script:ListItemLabel(defaulticon)"  position="18,8"  width="32" height="32"/>
    <label name="lblfocus" font="font13" position="60,9" label="#script:ListItemLabel(Name)" width="250" height="32" scroll="#script:HasFocus" color="green" visible="#script:ListItemLabelIsTrue(isplaying)"/>
    <label name="lblnofocus" font="font13" position="60,9" label="#script:ListItemLabel(Name)" width="250" height="32" scroll="#script:HasFocus" visible="#script:ListItemLabelIsFalse(isplaying)"/>
    <label name="lblduration" font="font12" position="-10,9" align="right" label="#script:ListItemLabel(Size)"  width="360" height="32"/>

    <button name="btnMoveUp"  style="style_playlistUp" position="366,7" command="model.MoveUp"/>
    <button name="btnMoveDown"  style="style_playlistDown" position="394,7" command="model.MoveDown"/>
    <button name="btnMoveDel"   style="style_playlistRemove" position="422,7" command="model.RemoveFromPlayList"/>
    
    <animation trigger="isvisible" type="fade" from="0.0" to="1.0"  duration="100" />
		<animation trigger="!isvisible" type="fade" from="1.0" to="0.0"  duration="100" />
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
	</style>


	<!-- styles for the list container -->
	<styles name="style_playlist">

		<style name="style_playlist_smalllist" position="200,97" move="0,1,0,1" wrap="false">
			<animation trigger="onwindowopen" type="zoom" from="0.01" to="1.0" tween="back" ease="easeout" duration="1300" />
			<animation trigger="onwindowopen" type="rotate" axis="y"  from="-90" to="0" tween="back" ease="easeout" duration="1300" />
			<animation trigger="onwindowopen" type="rotate" axis="x"  from="-90" to="0" tween="back" ease="easeout" duration="1300" />
			<animation trigger="onwindowopen" type="fade" from="0.0" to="1"  duration="1300"/>
			<animation trigger="visiblechange" type="fade" from="0.0" to="1.0" duration="300"/>
			<label font="font13" position="0,-32" scroll="true" label="#script:SelectedListItem(Name)"  width="400" height="32" />
			<group name="small_list" position="0,-46" layout="stack">
				<animation trigger="#script:ContentChange" type="fade" from="0.0" to="1.0"  duration="300" delay="200"/>
				<animation trigger="#script:IsScrollingDown" type="slide" from="0,0" to="0,-46" tween="quad" ease="easeout" duration="300"/>
				<animation trigger="#script:IsScrollingUp" type="slide" from="0,0" to="0,46" tween="quad" ease="easeout" duration="300"/>
				<controls>
					<button name="b1"  style="style_playlist_button_small"  item="#script:ListItem(-1)" focusable="false" visible="#script:IsScrollingUp">
						<animation trigger="#script:IsScrollingUp" type="fade" from="0.0" to="1.0" duration="100"/>
					</button>
					<button name="b2"  style="style_playlist_button_small"  item="#script:ListItem(0)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingDown" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button name="b3"  style="style_playlist_button_small"  item="#script:ListItem(1)" visible="#script:HasListItem"/>
					<button name="b4"  style="style_playlist_button_small"  item="#script:ListItem(2)" visible="#script:HasListItem"/>
          <button name="b5"  style="style_playlist_button_small"  item="#script:ListItem(3)" visible="#script:HasListItem"/>
          <button name="b6"  style="style_playlist_button_small"  item="#script:ListItem(4)" visible="#script:HasListItem"/>
          <button name="b7"  style="style_playlist_button_small"  item="#script:ListItem(5)" visible="#script:HasListItem"/>
          <button name="b8"  style="style_playlist_button_small"  item="#script:ListItem(6)" visible="#script:HasListItem"/>
          <button name="b9"  style="style_playlist_button_small"  item="#script:ListItem(7)" visible="#script:HasListItem"/>
					<button name="b10"  style="style_playlist_button_small"  item="#script:ListItem(8)" visible="#script:HasListItem">
            <animation trigger="#script:IsScrollingUp" type="fade" from="1.0" to="0.0" duration="100"/>
          </button>
          <button name="b11"  style="style_playlist_button_small"  item="#script:ListItem(9)" focusable="false" visible="#script:IsScrollingDown">
						<animation trigger="#script:IsScrollingDown" type="fade" from="0.0" to="1.0" duration="100"/>
					</button>
				</controls>
			</group>
			<visualbrush position="0,0" width="400" height="414" source="260,97,400,414" visible="#script:ContentAboutToChange" clip="260,97,400,414" effect="normal">
				<animation trigger="#script:ContentChange" type="fade" from="1.0" to="0.0"  duration="200"/>
			</visualbrush>
		</style>

	</styles>



</styles>