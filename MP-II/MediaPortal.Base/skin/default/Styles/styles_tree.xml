<?xml version="1.0" encoding="utf-8"?>
<styles>

  <!-- styles for a checkbox -->
  <style name="tree_checkbox">
    <image source="checkbox-non-focused.png" position="0,0" width="16" height="16"/>
    <image source="check-box.png" position="0,0" width="16" height="16" visible="this.Parent.Parent.IsExpanded"/>
  </style>
  <style name="style_select_checkbox_button_selected">
    <image source="checkbox-selected-focused.png"  position="0,0"  visible="#script:HasFocus" width="32" height="32"/>
    <image source="checkbox-selected-non-focused.png"  position="0,0" visible="#script:HasNoFocus" width="32" height="32" />
  </style>
  <style name="style_select_checkbox_button_not_selected">
    <image source="checkbox-focused.png"  position="0,0" visible="#script:HasFocus" width="32" height="32"/>
    <image source="checkbox-non-focused.png"  position="0,0" visible="#script:HasNoFocus" width="32" height="32"/>
  </style>

  <style name="tree_item_style">
    <image source="checkbox-non-focused.png" position="10,16" width="16" height="16"/>
    <image source="check-box.png" position="10,16" width="16" height="16" visible="this.Container.IsExpanded"/>
    
    <button style="style_select_checkbox_button_selected" position="40,8" command="model.SelectListItem" parameter="this.Container.ListItem" visible="#script:ListItemLabelIsTrue(selected)"/>
    <button style="style_select_checkbox_button_not_selected" position="40,8" command="model.SelectListItem" parameter="this.Container.ListItem" visible="#script:ListItemLabelIsFalse(selected)"/>

    <image source="theme-list-button-focus" position="0,0" center="200,16"  width="400" height="46">
      <animation trigger="#script:HasFocus" type="fade" from="0.0" to="1.0" duration="100"/>
      <animation trigger="#script:HasNoFocus" type="fade" from="1.0" to="0.0" duration="100"/>
    </image>
    <image source="theme-list-button-nofocus" position="0,0" center="200,16" width="400" height="46">
      <animation trigger="#script:HasNoFocus" type="fade" from="0.0" to="1.0" duration="100"/>
      <animation trigger="#script:HasFocus" type="fade" from="1.0" to="0.0" duration="100"/>
    </image>
    <image source="theme-list-button-nofocus" visible="false" position="0,0" width="400" center="200,17" height="46"/>
    <image source="#script:ListItemLabel(CoverArt)" keepaspectratio="true" zoom="true" default="#script:ListItemLabel(defaulticon)"  position="88,8"  width="32" height="32"/>
    <label font="font13" position="120,9" label="#script:ListItemLabel(Name)" width="300" height="32" scroll="#script:HasFocus" color="green" visible="#script:ListItemLabelIsTrue(selected)"/>
    <label font="font13" position="120,9" label="#script:ListItemLabel(Name)" width="300" height="32" scroll="#script:HasFocus" visible="#script:ListItemLabelIsFalse(selected)"/>
  </style>

  <styles name="tree_sub_style">
    <style name="tree_sub_style1" move="1,1,1,1" wrap="false" >
      <group name="grpsub1" layout="stack">
        <controls>
          <repeater start="0" end="this.Container.Items.Count">
            <treeitem name="s1"  style="tree_item_style"  item="#script:TreeItem($x)"  command="model.GetSubItems+this.Expand" parameter="this.ListItem+"/>
          </repeater>
        </controls>
      </group>
    </style>
  </styles>

  <styles name="tree_style">
    <style name="styletree" move="1,1,1,1" wrap="false" >
      <group  name="grptree" layout="stack">
        <controls>
          <treeitem name="t1" style="tree_item_style"  item="#script:TreeItem(0)" visible="#script:HasListItem" command="model.GetSubItems+this.Expand" parameter="this.ListItem+"/>
          <treeitem name="t2" style="tree_item_style"  item="#script:TreeItem(1)" visible="#script:HasListItem"  command="model.GetSubItems+this.Expand" parameter="this.ListItem+"/>
          <treeitem name="t3" style="tree_item_style"  item="#script:TreeItem(2)" visible="#script:HasListItem"  command="model.GetSubItems+this.Expand" parameter="this.ListItem+"/>
          <treeitem name="t4" style="tree_item_style"  item="#script:TreeItem(3)" visible="#script:HasListItem"  command="model.GetSubItems+this.Expand" parameter="this.ListItem+"/>
          <treeitem name="t5" style="tree_item_style"  item="#script:TreeItem(4)" visible="#script:HasListItem"  command="model.GetSubItems+this.Expand" parameter="this.ListItem+"/>
          <treeitem name="t6" style="tree_item_style"  item="#script:TreeItem(5)" visible="#script:HasListItem"  command="model.GetSubItems+this.Expand" parameter="this.ListItem+"/>
        </controls>
      </group>
    </style>
  </styles>
</styles>