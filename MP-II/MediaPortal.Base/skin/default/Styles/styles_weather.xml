<?xml version="1.0" encoding="utf-8"?>
<styles>

	<!-- style for the search button in weather setup -->
	<style name="button_style_search">
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300" />
		<image source="theme-list-button-green-focus" visible="#script:HasFocus" position="0,0"  width="120" height="45"/>
		<image source="theme-list-button-green-nofocus" visible="#script:HasNoFocus" position="0,0" width="120" height="45"/>
		<label font="font13" position="10,9" visible="#script:HasFocus"  width="90" height="32" label="#script:buttonLabel" color="white"/>
		<label font="font13" position="10,9" visible="#script:HasNoFocus" width="90" height="32" label="#script:buttonLabel" color="lightblue"/>
	</style>
	
	<!-- styles for the coverflow button-->
	<style name="list_button_forecast">
		<animation trigger="onwindowopen" type="zoom" from="0.5" to="1.0" tween="back" ease="easeout" duration="800"/>
		<animation trigger="onwindowopen" type="fade" from="0.0" to="1.0" duration="800"/>
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.2" tween="back" ease="easeout" duration="300"/>
		<animation trigger="!hasfocus" type="zoom" from="1.2" to="1.0" tween="back" ease="easeout" duration="300"/>
		<label font="font13" label="#script:ListItemLabel(Day)" align="center" position="0,0" width="100" height="30" color="white"/>
		<label font="font12" label="#script:ListItemLabel(High)" align="left" position="40,30" width="50" height="20" color="white"/>
		<label font="font12" label="#script:ListItemLabel(Low)" align="left" position="40,60" width="50" height="20" color="white"/>
	</style>

	<!-- styles for the delete button in the setup list-->
	<style name="list_button_style_location_delete">
		<image source="delete_item.png" visible="#script:HasFocus" position="0,0" center="200,16"  width="35" height="35">
			<animation trigger="isvisible" type="fade" from="0.0" to="1.0" duration="300"/>
		</image>
		<image source="delete_item.png" visible="#script:HasNoFocus" position="0,0" center="200,16"  width="35" height="35" effect="greyscale">
			<animation trigger="!isvisible" type="fade" from="1.0" to="0.0" duration="300"/>
		</image>
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
	</style>

	<!-- styles for a list item in setup-->
	<style name="list_button_style_weather_setup">
		<image source="dialog_item_focus.png" visible="#script:HasFocus" position="0,0" center="200,16"  width="430" height="50"/>
		<image source="dialog_item_nofocus.png" visible="#script:HasNoFocus" position="0,0" center="200,16" width="430" height="50"/>
		<label font="font13" position="25,10" label="#script:ListItemLabel(Name)" width="300" height="32" scroll="#script:HasFocus"/>
		<image source="delete_item.png" visible="#script:HasFocus" position="382,9" width="30" height="30">
			<animation trigger="isvisible" type="fade" from="0.0" to="1.0" duration="200"/>
			<animation trigger="!isvisible" type="fade" from="1.0" to="0.0" duration="200"/>
		</image>
		<image source="delete_item.png" visible="#script:HasNoFocus" position="382,9" width="30" height="30" effect="greyscale">
			<animation trigger="!isvisible" type="fade" from="0.5" to="0.0" duration="200"/>
			<animation trigger="isvisible" type="fade" from="0.0" to="0.5" duration="200"/>
		</image>
		<animation trigger="hasfocus" type="zoom" from="1.0" to="1.1" tween="back" ease="easeout" duration="300" />
		<animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" tween="back" ease="easeout" duration="300"/>
	</style>

	<!-- styles for the weather forecast listbox -->
	<styles name="style_forecast">
		<style name="list_forecast" position="0,0" move="1,0,1,0" wrap="true" >
			<group>
				<animation trigger="#script:ContentChange" type="fade" from="0.0" to="1.0"  duration="300" delay="200"/>
				<animation trigger="onwindowopen" type="rotate" duration="1" axis="x" from="0" to="10"/>
				<controls>
					<image source="coverflow_bg.png" position="0,0" width="1000" height="600"/>
					<button style="list_button_forecast" position="250,0" focusable="false" item="#script:ListItem(-2)" visible="#script:HasListItem">
						<animation trigger="onwindowopen" type="rotate" axis="y" from="0" to="-90" duration="1"/>
						<animation trigger="#script:IsScrollingLeft" type="slide" from="0,0,0" to="50,0,0" duration="250" ease="easeout" tween="quad" />
						<animation trigger="#script:IsScrollingRight" type="slide" from="0,0,0" to="-50,0,0" duration="250" ease="easeout" tween="quad" />
					</button>
					<button style="list_button_forecast" position="300,0" focusable="false" item="#script:ListItem(-1)" visible="#script:HasListItem">
						<animation trigger="hasfocus" type="rotate" axis="y" from="-90" to="0" duration="250" ease="easeout" tween="quad"/>
						<animation trigger="!hasfocus" type="rotate" axis="y" from="0" to="-90" duration="250" ease="easeout" tween="quad"/>
						<animation trigger="#script:IsScrollingLeft" type="slide" from="0,0,0" to="100,0,0" duration="250" ease="easeout" tween="quad" />
						<animation trigger="#script:IsScrollingRight" type="slide" from="0,0,0" to="-50,0,0" duration="250" ease="easeout" tween="quad" />
					</button>

					<button style="list_button_forecast" position="400,0" focusable="true" item="#script:ListItem(0)" visible="#script:HasListItem">
						<animation trigger="#script:IsScrollingLeft" type="rotate" axis="y" from="0" to="90" duration="250" ease="easeout" tween="quad"/>
						<animation trigger="#script:IsScrollingRight" type="rotate" axis="y" from="0" to="-90" duration="250" ease="easeout" tween="quad"/>
						<animation trigger="#script:IsScrollingLeft" type="slide" from="0,0,0" to="100,0,0" duration="250" ease="easeout" tween="quad" />
						<animation trigger="#script:IsScrollingRight" type="slide" from="0,0,0" to="-100,0,0" duration="250" ease="easeout" tween="quad" />
					</button>

					<button style="list_button_forecast" position="500,0" focusable="false" item="#script:ListItem(1)" visible="#script:HasListItem">
						<animation trigger="hasfocus" type="rotate" axis="y" from="90" to="0" duration="250" ease="easeout" tween="quad"/>
						<animation trigger="!hasfocus" type="rotate" axis="y" from="0" to="90" duration="250" ease="easeout" tween="quad"/>
						<animation trigger="#script:IsScrollingLeft" type="slide" from="0,0,0" to="50,0,0" duration="250" ease="easeout" tween="quad" />
						<animation trigger="#script:IsScrollingRight" type="slide" from="0,0,0" to="-100,0,0" duration="250" ease="easeout" tween="quad" />
					</button>

					<button style="list_button_forecast" position="550,0" focusable="false" item="#script:ListItem(2)" visible="#script:HasListItem">
						<animation trigger="onwindowopen" type="rotate" axis="y" from="0" to="90" duration="1" />
						<animation trigger="#script:IsScrollingLeft" type="slide" from="0,0,0" to="50,0,0" duration="250" ease="easeout" tween="quad" />
						<animation trigger="#script:IsScrollingRight" type="slide" from="0,0,0" to="-50,0,0" duration="250" ease="easeout" tween="quad" />
					</button>
				</controls>
			</group>
		</style>
	</styles>
	
	<!-- styles for the listcontainer in setup-->
	<styles name="style_list_weather_setup">
		<style name="list_style_small" position="0,0" move="0,1,0,1" wrap="false" layout="stack">
			<group position="0,0" layout="stack">
				<animation trigger="#script:ContentChange" type="fade" from="0.0" to="1.0"  duration="300" delay="200"/>
				<animation trigger="#script:IsScrollingDown" type="slide" from="0,0" to="0,-50" tween="quad" ease="easeout" duration="300"/>
				<animation trigger="#script:IsScrollingUp" type="slide" from="0,0" to="0,50" tween="quad" ease="easeout" duration="300"/>
				<controls>
					<button style="list_button_style_weather_setup"  item="#script:ListItem(-1)" focusable="false" visible="#script:IsScrollingUp">
						<animation trigger="#script:IsScrollingUp" type="fade" from="0.0" to="1.0" duration="100"/>
					</button>
					<button style="list_button_style_weather_setup"  item="#script:ListItem(0)" visible="#script:HasListItem">
						<animation trigger="#script:IsScrollingDown" type="fade" from="1.0" to="0.0" duration="100"/>
					</button>
					<button style="list_button_style_weather_setup"  item="#script:ListItem(1)" visible="#script:HasListItem"/>
					<button style="list_button_style_weather_setup"  item="#script:ListItem(2)" visible="#script:HasListItem"/>
					<button style="list_button_style_weather_setup"  item="#script:ListItem(3)" visible="#script:HasListItem">
						<animation trigger="#script:IsScrollingUp" type="fade" from="1.0" to="0.0" duration="100"/>
					</button>
					<button style="list_button_style_weather_setup"  item="#script:ListItem(4)" focusable="false" visible="#script:IsScrollingDown">
						<animation trigger="#script:IsScrollingDown" type="fade" from="0.0" to="1.0" duration="100"/>
					</button>
				</controls>
			</group>
		</style>
	</styles>

</styles>