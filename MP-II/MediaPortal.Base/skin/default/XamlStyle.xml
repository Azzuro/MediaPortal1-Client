<?xml version="1.0" encoding="utf-8"?>
<MyXaml >
  <ResourceDictionary>

    <LinearGradientBrush Key="linearBrushRedGreenBlue" StartPoint="0.5,0" EndPoint="0.5,1.0" Opacity="1.0">
      <GradientStop Offset="0.0" Color="Red"/>
      <GradientStop Offset="0.5" Color="Green"/>
      <GradientStop Offset="1.0" Color="Blue"/>
    </LinearGradientBrush>


    <Style Key="styleButton">
      <Setter Property="Template">
        <Value>
          <ControlTemplate>
            <Resources>
              <!-- storyboard which shows the animation when a button has focus -->
              <Storyboard Key="focusedStoryBoard" >
                <PointAnimationUsingKeyFrames RepeatBehaviour="Forever" AutoReverse="True" BeginTime="00:00:00" TargetName="border.Background" TargetProperty="GradientOrigin">
                  <SplinePointKeyFrame KeyTime="00:00:00" Value="0.5,1.709"/>
                  <SplinePointKeyFrame KeyTime="00:00:02" Value="0.5,0.899"/>
                  <SplinePointKeyFrame KeyTime="00:00:04" Value="0.5,1.719"/>
                </PointAnimationUsingKeyFrames>
                <ColorAnimationUsingKeyFrames RepeatBehaviour="Forever" AutoReverse="True" BeginTime="00:00:00" TargetName="border.Background.GradientStops[1]" TargetProperty="Color">
                  <SplineColorKeyFrame KeyTime="00:00:00" Value="#FF05814D"/>
                  <SplineColorKeyFrame KeyTime="00:00:02" Value="#FF05814D"/>
                  <SplineColorKeyFrame KeyTime="00:00:04" Value="#FF05814D"/>
                </ColorAnimationUsingKeyFrames>
                <ColorAnimationUsingKeyFrames RepeatBehaviour="Forever" AutoReverse="True" BeginTime="00:00:00" TargetName="border.Background.GradientStops[0]" TargetProperty="Color">
                  <SplineColorKeyFrame KeyTime="00:00:00" Value="#FF49D5B4"/>
                  <SplineColorKeyFrame KeyTime="00:00:02" Value="#FF52E5C2"/>
                  <SplineColorKeyFrame KeyTime="00:00:04" Value="#FF49D5B4"/>
                </ColorAnimationUsingKeyFrames>
                <ColorAnimationUsingKeyFrames RepeatBehaviour="Forever" AutoReverse="True" BeginTime="00:00:00" TargetName="border.BorderBrush" TargetProperty="Color">
                  <SplineColorKeyFrame KeyTime="00:00:00" Value="#FF19A05D"/>
                  <SplineColorKeyFrame KeyTime="00:00:02" Value="#FF19A05D"/>
                  <SplineColorKeyFrame KeyTime="00:00:04" Value="#FF19A05D"/>
                </ColorAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames RepeatBehaviour="Forever" AutoReverse="True" BeginTime="00:00:00" TargetName="border.Background.RelativeTransform[0]" TargetProperty="ScaleX">
                  <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1.264"/>
                  <SplineDoubleKeyFrame KeyTime="00:00:02" Value="1.179"/>
                  <SplineDoubleKeyFrame KeyTime="00:00:04" Value="1.335"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames RepeatBehaviour="Forever" AutoReverse="True" BeginTime="00:00:00" TargetName="border.Background.RelativeTransform[3]" TargetProperty="X">
                  <SplineDoubleKeyFrame KeyTime="00:00:00" Value="-0.009"/>
                  <SplineDoubleKeyFrame KeyTime="00:00:02" Value="0.019"/>
                  <SplineDoubleKeyFrame KeyTime="00:00:04" Value="0.027"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames RepeatBehaviour="Forever" AutoReverse="True"  BeginTime="00:00:00" TargetName="border.Background.RelativeTransform[3]" TargetProperty="Y">
                  <SplineDoubleKeyFrame KeyTime="00:00:02" Value="0.119"/>
                  <SplineDoubleKeyFrame KeyTime="00:00:04" Value="-0.006"/>
                </DoubleAnimationUsingKeyFrames>
              </Storyboard>
            </Resources>
            <Border Name="border" BorderThickness="2" CornerRadius="4" BorderBrush="#FF2866BD">
              <Background>
                <RadialGradientBrush GradientOrigin="0.85,0.82">
                  <RelativeTransform>
                    <TransformGroup>
                      <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.335" ScaleY="1.582"/>
                      <SkewTransform AngleX="0" AngleY="0" CenterX="0.5" CenterY="0.5"/>
                      <RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
                      <TranslateTransform X="0.027" Y="-0.006"/>
                    </TransformGroup>
                  </RelativeTransform>
                  <GradientStop Color="#FF2A5EB4" Offset="0"/>
                  <GradientStop Color="#FF2A5EB4" Offset="1"/>
                </RadialGradientBrush>
              </Background>
            </Border>
            <Label Text="hallo" Margin="10,0,10,0" Font="font13"/>
            <Triggers>
              <EventTrigger RoutedEvent="OnGotFocus" Storyboard="{StaticResource focusedStoryBoard}"/>
            </Triggers>
          </ControlTemplate>
        </Value>
      </Setter>
    </Style>
  </ResourceDictionary>
</MyXaml>