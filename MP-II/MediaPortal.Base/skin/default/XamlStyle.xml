<?xml version="1.0" encoding="utf-8"?>
<MyXaml >
  <ResourceDictionary>

    <LinearGradientBrush Key="linearBrushRedGreenBlue" StartPoint="0.5,0" EndPoint="0.5,1.0" Opacity="1.0">
      <GradientStop Offset="0.0" Color="Red"/>
      <GradientStop Offset="0.5" Color="Green"/>
      <GradientStop Offset="1.0" Color="Blue"/>
    </LinearGradientBrush>


    <Style Key="styleButton">
      <Setter Property="Template">
        <Value>
          <ControlTemplate>
            <Resources>
              <Storyboard Key="animateBtnFocus">
                <PointAnimation From="0.85,0.82" To="0.5,1.709" Duration="00:00:04" AutoReverse="True" TargetName="border.Background" TargetProperty="GradientOrigin"/>
                <ColorAnimation From="#FF05814D" To="#FF05814D" Duration="00:00:04" AutoReverse="True"  TargetName="border.Background.GradientStops[1]" TargetProperty="Color"/>
                <ColorAnimation From="#FF49D5B4" To="#FF52E5C2" Duration="00:00:04" AutoReverse="True"  TargetName="border.Background.GradientStops[0]" TargetProperty="Color"/>
                <ColorAnimation From="#FF19A05D" To="#FF19A05D" Duration="00:00:04" AutoReverse="True"  TargetName="border.BorderBrush" TargetProperty="Color"/>
                
                <DoubleAnimation From="1.264" To="1.335" Duration="00:00:04" AutoReverse="True"  TargetName="border.Background.RelativeTransform[0]" TargetProperty="ScaleX"/>
                <DoubleAnimation From="-0.009" To="0.027" Duration="00:00:04" AutoReverse="True"  TargetName="border.Background.RelativeTransform[3]" TargetProperty="X"/>
                <DoubleAnimation From="0.119" To="-0.006" Duration="00:00:04" AutoReverse="True"  TargetName="border.Background.RelativeTransform[3]" TargetProperty="Y"/>
                
              </Storyboard>
            </Resources>
            <Border Name="border" BorderThickness="2" CornerRadius="4" >
              <Background>
                <RadialGradientBrush GradientOrigin="0.85,0.82">
                  <RelativeTransform>
                    <TransformGroup>
                      <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.335" ScaleY="1.582"/>
                      <SkewTransform AngleX="0" AngleY="0" CenterX="0.5" CenterY="0.5"/>
                      <RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
                      <TranslateTransform X="0.027" Y="-0.006"/>
                    </TransformGroup>
                  </RelativeTransform>
                  <GradientStop Color="#FF2A5EB4" Offset="0"/>
                  <GradientStop Color="#FF2A5EB4" Offset="1"/>
                </RadialGradientBrush>
              </Background>
              <BorderBrush>
                <SolidColorBrush Color="#FF2866BD"/>
              </BorderBrush>
            </Border>
            <Label Text="hallo" Margin="10,0,10,0" Font="font13"/>
            <Triggers>
              <EventTrigger RoutedEvent="OnGotFocus" Storyboard="{StaticResource animateBtnFocus}"/>
            </Triggers>
          </ControlTemplate>
        </Value>
      </Setter>
    </Style>
  </ResourceDictionary>
</MyXaml>