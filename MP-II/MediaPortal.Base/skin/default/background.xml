<?xml version="1.0" encoding="utf-8"?>
<skin>
  <image name="background" source="theme-image-background" width="720" height="576" position="0,0"/>
  <image source="bgsatin.png" width="720" height="576" position="0,0">
    <animationgroup trigger="onwindowopen" duration="60000" repeat="-1">
      <animation trigger="onwindowopen" type="rotate" axis="z" from="0" to="360" duration="60000" center="360,288"/>
      <animation trigger="onwindowopen" type="zoom" from="0.9" to="1.5" center="360,288"  duration="15000"/>
      <animation trigger="onwindowopen" type="zoom" from="1.5" to="0.9" center="360,288"  duration="15000" delay="15000"/>
      <animation trigger="onwindowopen" type="zoom" from="0.9" to="1.5" center="360,288"  duration="15000" delay="30000"/>
      <animation trigger="onwindowopen" type="zoom" from="1.5" to="0.9" center="360,288"  duration="15000" delay="45000"/>

      <animation trigger="onwindowopen" type="fade" from="0.3" to="0.6"  duration="30000"/>
      <animation trigger="onwindowopen" type="fade" from="0.6" to="0.3"  duration="30000" delay="30000"/>
    </animationgroup>
  </image>

  <image  source="bgwave.png" width="720" height="576" position="0,0">
    <animationgroup trigger="onwindowopen" duration="60000" repeat="-1">
    <animation trigger="onwindowopen" type="rotate" axis="z" from="0" to="-360" duration="60000" center="360,288"/>
    <animation trigger="onwindowopen" type="zoom" from="0.9" to="1.5" center="360,288"  duration="15000"/>
    <animation trigger="onwindowopen" type="zoom" from="1.5" to="0.9" center="360,288"  duration="15000" delay="15000"/>
    <animation trigger="onwindowopen" type="zoom" from="0.9" to="1.5" center="360,288"  duration="15000" delay="30000"/>
    <animation trigger="onwindowopen" type="zoom" from="1.5" to="0.9" center="360,288"  duration="15000" delay="45000"/>

    <animation trigger="onwindowopen" type="fade" from="0.4" to="0.7"  duration="30000"/>
    <animation trigger="onwindowopen" type="fade" from="0.7" to="0.4"  duration="30000" delay="30000"/>
    </animationgroup>
  </image>
  <button style="button_style_back" position="7,7" command="WindowManager.ShowPreviousWindow" visible="#script:IsMouseUsed"/>
  <label name="time" font="font13" position="630,15" label="#script:Time" width="1000" height="32" color="whitehalftransparent"/>
</skin>