<?xml version="1.0" encoding="utf-8"?>
<skin defaultfocus="list">
	<models>
		<model name="model" assembly="mypicture" class="PictureModel"/>
	</models>
	<styles>
		<include name="styles.xml"/>
		<include name="styles_dialogs.xml"/>
	</styles>
	<group>
		<controls>
			<visualbrush source="0,0,720,576" position="0,0" width="720" height="576" effect="dialogbg">
				<animation trigger="onwindowopen" type="fade" from="0.0" to="1.0" duration="500"/>
				<animation trigger="onwindowclose" type="fade" from="1.0" to="0.0" duration="500" delay="300"/>
			</visualbrush>
			<group position="116,64">
				<controls>
					<image source="context_background_blue.png" width="500" height="345" position="0,0"/>
					<group>
						<controls>
							<image source="dialog_highlight.png" position="15,12" width="100" height="35"/>
							<label font="font13" position="25,18" label="[system.5]" width="100" height="32" color="darkgrey"/>
							<label font="font13" position="136,18" label="[general.sort]" width="100" height="32" color="darkyellow"/>
							<button name="closebtn" style="button_style_close" position="440,10" command="WindowManager.CloseDialog" />
							<list name="list" style="style_list_dialog" position="34,40" items="model.SortOptions" command="model.Sort+WindowManager.CloseDialog" parameter="list.#script:SelectedItem+"/>
						</controls>
					</group>
				</controls>
				<animation trigger="onwindowopen" type="zoom" from="0.3" to="1.0" tween="back" ease="easeout" duration="600" center="95,15"/>
				<animation trigger="onwindowopen" type="slide" from="-600,1000" to="0,0"  duration="500" tween="quad" ease="easeout"/>
				<animation trigger="onwindowopen" type="fade" from="0.0" to="1.0"  duration="700"/>
				<animation trigger="onwindowclose" type="fade" from="1.0" to="0"  duration="400"/>
				<animation trigger="onwindowclose" type="rotate" axis="x" from="0" to="90"  duration="400"/>
				<animation trigger="onwindowclose" type="zoom" from="1.0" to="0.6" tween="quad" ease="easein" duration="400"/>
			</group>
		</controls>
	</group>
</skin>