<?xml version="1.0" encoding="utf-8"?>
<skin open="#script:IsVideoPlaying" history="false">
  <styles>
    <include name="styles.xml"/>
  </styles>
  <group>
    <controls>
      <image name="video" source="#video1" position="0,0" width="720" height="576"/>

      <button style="button_style_back" position="7,7" command="WindowManager.ShowPreviousWindow" visible="#script:IsMouseUsed"/>
      <group name="grouptopbar" visible="Players.OSD.IsTopBarVisible">
				<animation trigger="!isvisible" type="fade" from="1.0" to="0"  duration="400"/>
				<animation trigger="!isvisible"  type="rotate" axis="x" from="0" to="90"  duration="400"/>
				<animation trigger="!isvisible"  type="zoom" from="1.0" to="0.6" tween="quad" ease="easein" duration="400"/>
        <controls>
          <image name="topbarbg" source="osd_bg_top.png" position="0,418" width="720" height="158"/>
          <image name="progressbg" source="osd_progress_background.png" position="224,436" width="395" height="19"/>
          <image name="thumb,back" source="thumb_back.png" position="14,428" width="200" height="135"/>
          <image name="progressLeft" source="osd_progress_left.png" position="226,438" width="12" height="14"/>
          <image name="Clock" source="Clock.png" position="610,510" width="25" height="25"/>
          <progress name="progress" source="osd_progress_mid.png" position="238,438" width="380" height="14" progress="Players.OSD.PercentPlayed"/>
          <label name="startTime" font="font12" align="center" position="145,438" color="black" width="100" height="30" label="Players.OSD.CurrentTime" />
          <label name="endTime" font="font12" align="center" position="609,438"  color="black" width="100" height="30" label="Players.OSD.RemainingTime" />
           <label name="osd name" font="font12" align="left" position="225,510" color="black" width="190" height="30" label="Video" />
           <label name="time" font="font13" position="637,513" label="#script:Time" width="100" height="32" color="black"/>
            <label name="osd Title" font="font13" align="left" position="225,466" color="black" width="260" height="30" label="Players.OSD.Title" />
            <label name="osd Time" font="font13" align="left" position="25,445" color="black" width="190" height="30" label="Players.OSD.CurrentTime" />
            <label name="osd Duration" font="font13" align="left" position="225,533" color="black" width="190" height="30" label="Players.OSD.Duration" />

          <!--
          <label name="row1" font="font13" position="614,30" width="100" height="30" color="black" label="Players.OSD.CurrentZoomMode" />
-->
          <label name="row1" font="font13" position="129,530" width="100" height="30" color="black" label="Players.OSD.SeekTime" />
          <image name="pause" source="video-pause.png" position="144,449" width="25" height="32"  visible="#script:IsVideoPaused"/>
          <image name="play" source="video-play.png" position="144,449" width="25" height="32"  visible="#script:IsVideoNotPaused"/>
        </controls>

      </group>
      <include source="osd.xml"/>
      <image name="thumb,back" source="thumb_back_pip.png" position="14,428" width="200" height="135" visible="Players.OSD.PIP"/>
      <image name="videoPIP" source="#video2" position="21,438" width="103" height="93"/>
      <image name="thumb,back" source="thumb_back_glow.png" position="14,428" width="200" height="135" visible="Players.OSD.PIP"/>
    </controls>
    <animation trigger="onwindowclose" type="fade" from="1" to="0"  duration="800"/>
    <animation trigger="onwindowopen" type="fade" from="0" to="1"  duration="800"/>
  </group>
  <keybinding key="DvdMenu" command="Players.ShowDvdMenu" />
  <keybinding key="DvdUp" command="Players.DvdNavigate" parameter="Up"/>
  <keybinding key="DvdDown" command="Players.DvdNavigate" parameter="Down"/>
  <keybinding key="DvdLeft" command="Players.DvdNavigate" parameter="Left"/>
  <keybinding key="DvdRight" command="Players.DvdNavigate" parameter="Right"/>
  <keybinding key="DvdSelect" command="Players.DvdSelect"/>
  <keybinding key="ContextMenu" command="WindowManager.ShowDialog" parameter="dialogVideoContextMenu"/>
  <keybinding key="ZoomMode" command="Players.OSD.NextZoomMode"/>
  <keybinding key="Left" command="Players.SeekBackward"/>
  <keybinding key="Right" command="Players.SeekForward"/>
</skin>