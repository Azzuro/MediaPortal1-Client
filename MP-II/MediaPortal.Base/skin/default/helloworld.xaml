<?xml version="1.0" encoding="utf-8"?>
<Canvas
    xmlns="www.team-mediaportal.com/2008/mse/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding Source={Model AssemblyName=HelloWorld,ClassName=Model},Path=Instance}"
    FocusedElement="{Binding ElementName=BtnChangeText}">
  <Canvas.Resources>
    <ResourceDictionary Source="XamlStyle.xml"/>
  </Canvas.Resources>
  <Canvas Background="{StaticResource backGroundBrush}" Width="720" Height="576">
    <StackPanel>
      <Button Margin="0,10,0,0" x:Name="BtnChangeText" Width="100" Height="40" Style="{StaticResource MpButton}" Command="{Command Path=ChangeHelloWorldString}">Click Me!</Button>
      <Label Margin="0,0,0,0" Font="font13" Text="{Binding Path=HelloString}" Width="500" Height="50"/>
    </StackPanel>
  </Canvas>
</Canvas>