<?xml version="1.0" encoding="utf-8"?>
<skin defaultfocus="listPlugins">
	<models>
		<model name="modelLogin" assembly="mylogin" class="LoginModel"/>
		<model name="modelMenu" assembly="menu" class="HomeMenu"/>
	</models>
	<styles>
		<include name="styles.xml"/>
		<include name="styles_menu_vista.xml"/>
	</styles>
	<group>
		<controls>
			<group>
				<controls>
					<include source="background.xml"/>
					<label name="header"  font="font26" position="70,15" label="[login.welcome]" width="500" height="32" />
					<label name="headerReflection"  font="font26" position="70,55" label="[login.welcome]" width="500" height="32">
						<animation trigger="onwindowopen" type="rotate" axis="x" from="180" to="180" duration="1" center="0,25"/>
						<opacitymask>
              <gradientstop offset="0.0" color="100" />
              <gradientstop offset="0.7" color="20" />
              <gradientstop offset="1.0" color="0" />
            </opacitymask>
					</label>
          <!-- REMOVED FOR INFINITY RELEASE
					<label name="username"  font="font13" position="113,72" label="modelLogin.CurrentUser.UserName" width="500" height="32" />
					<image source="user_bg.png" position="70,65" width="40" height="40"/>
					<image source="modelLogin.CurrentUser.UserImage" default="DefaultUser.png" position="75,70" width="30" height="30"/>
          -->
					<list name="listPlugins" style="style_vista_menu" items="modelMenu.Plugins" >
					</list>


          <button name="smallvideo" style="button_small_video" visible="#script:IsVideoPlaying" position="31,450"  command="WindowManager.ShowWindow" parameter="fullscreenvideo">
            <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1"  duration="300" center="104,104"/>
            <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" duration="300" center="104,104" />
          </button>
          <include source="osd.xml"/>
        </controls>
      </group>
		</controls>
		<animation trigger="onwindowclose" type="fade" from="1" to="0"  duration="800"/>
		<animation trigger="onwindowopen" type="fade" from="0" to="1" duration="800"/>
  </group>
</skin>