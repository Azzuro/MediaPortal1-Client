<?xml version="1.0" encoding="utf-8"?>
<skin>
	<group>
		<controls>
			<image name="startbackground" source="start_bg.png" width="720" height="576" position="0,0">
				<animation trigger="onwindowopen" type="fade" from="0" to="1" delay="0" duration="2000"/>
				<animation trigger="onwindowopen" type="fade" from="1" to="0" delay="3000" duration="800"/>
			</image>
			<group name="logo">
				<animation trigger="onwindowopen" type="slide" from="-60,0" to="0,0" ease="easeout" tween="quad" delay="800"  duration="1500"/>
				<animation trigger="onwindowopen" type="fade" from="0" to="1" delay="1000"  duration="1000"/>
				<animation trigger="onwindowopen" type="fade" from="1" to="0" delay="2200"  duration="300"/>
				<animation trigger="onwindowopen" type="zoom" from="1.0" to="0.8" center="360,250" delay="2000"  duration="1000" ease="easeout" tween="quad"/>
				<controls>
					<image name="startglow" source="start_glow.png" position="215,160" width="152" height="152">
						<animation trigger="onwindowopen" type="zoom" from="0.3" to="1.0" delay="1000"  duration="200"/>
					</image>
					<image name="startlogo" source="start_logo.png" position="250,200" width="237" height="82">
					</image>
				</controls>
			</group>
			<group name="logoreflect" position="0,50">
				<animation trigger="onwindowopen" type="slide" from="-60,0" to="0,0" ease="easeout" tween="quad" delay="800"  duration="1500"/>
				<animation trigger="onwindowopen" type="fade" from="0" to="1" delay="1000"  duration="1000"/>
				<animation trigger="onwindowopen" type="fade" from="1" to="0" delay="2200"  duration="300"/>
				<animation trigger="onwindowopen" type="zoom" from="1.0" to="0.8" center="360,250" delay="2000"  duration="1000" ease="easeout" tween="quad"/>
				<controls>
					<image name="startglowreflect" source="start_glow.png" position="215,160" width="152" height="152">
						<animation trigger="onwindowopen" type="zoom" from="0.3" to="1.0" delay="1000"  duration="200"/>
						<animation trigger="onwindowopen" type="rotate" axis="x" from="180" to="180" duration="1"/>
						<opacitymask>
							<gradientstop offset="0.0" color="100" />
							<gradientstop offset="0.8" color="60" />
							<gradientstop offset="1.0" color="0" />
						</opacitymask>
					</image>
					<image name="startlogoreflect" source="start_logo.png" position="250,200" width="237" height="82">
						<animation trigger="onwindowopen" type="rotate" axis="x" from="180" to="180" duration="1"/>
						<opacitymask>
							<gradientstop offset="0.0" color="100" />
							<gradientstop offset="0.8" color="60" />
							<gradientstop offset="1.0" color="0" />
						</opacitymask>
					</image>
				</controls>
			</group>
		</controls>
	</group>
</skin>