<?xml version="1.0" encoding="utf-8"?>
<skin defaultfocus="mainMenu" history="false">
  <models>
    <model name="model" assembly="mymovies" class="Model"/>
  </models>
  <styles>
    <include name="styles.xml"/>
    <include name="styles_list.xml"/>
  </styles>

  <group name="maingroup">
    <controls>
      <image source="#video1" position="0.0" width="720" height="576" alphamask="0.4,0.4,0.4,0.4"/>
      <label font="font26" position="20,30" label="Players.OSD.Title" width="680" height="32" align="center" />
      <image source="logo_stop.png" position="170,90"/>
      <label font="font26" position="240,100" label="[playback.38]" width="500" height="32" color="whitehalftransparent"/>
      <group name="menuPanel">
        <controls>
          <group position="240,170" name="menu" layout="stack">
            <controls>
              <list name="mainMenu" position="0,0" style="style_list_menu" items="model.MovieEndedMenu" />
            </controls>
          </group>
        </controls>
      </group>
    </controls>
    <animation trigger="onwindowclose" type="fade" from="1" to="0"  duration="800"/>
    <animation trigger="onwindowopen" type="fade" from="0" to="1"  duration="800"/>
  </group>
</skin>