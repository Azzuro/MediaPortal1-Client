<?xml version="1.0" encoding="utf-8"?>
<MyXaml >

  <Canvas IsVisible="{Binding Path=Players.OSD.IsMouseUsed}">
    <Canvas.Resources>
      <ResourceDictionary Source="styles\styles_osd.xaml"/>
    </Canvas.Resources>
    <Image Source="osd_background.png" Canvas.Left="330" Canvas.Top="542" Height="10" Width="198" IsVisible="{Binding Path=Players.OSD.IsVideo}"/>
    <Image Source="osd_background.png" Canvas.Left="330" Canvas.Top="542" Height="10" Width="198" IsVisible="{Binding Path=Players.OSD.IsAudio}"/>
    <Canvas IsVisible="{Binding Path=Players.OSD.IsMouseUsed}" Canvas.Left="350" Canvas.Top="530" >
      <Canvas IsVisible="{Binding Path=Players.OSD.IsVideo}">
        <Button Style="{StaticResource Style_button_rewind}" Canvas.Left="0" Canvas.Top="0"  Command="{Binding Path=Players.Rewind}" />
        <Button Style="{StaticResource Style_button_stop}" Canvas.Left="34" Canvas.Top="0"  Command="{Binding Path=Players.Pause+WindowManager.ShowDialog}" Parameter="+movieStopped"  />
        <Button Style="{StaticResource Style_button_pause}" Canvas.Left="68" Canvas.Top="0"  Command="{Binding Path=Players.TogglePause}" />
        <Button Style="{StaticResource Style_button_forward}" Canvas.Left="102" Canvas.Top="0"   Command="{Binding Path=Players.Forward}" />
        <Button Style="{StaticResource Style_button_mute}"  Canvas.Left="136" Canvas.Top="0"   Command="{Binding Path=Players.Mute}" />
      </Canvas>
      <Canvas IsVisible="{Binding Path=Players.OSD.IsAudio}">
        <Button Style="{StaticResource Style_button_rewind}" Canvas.Left="0" Canvas.Top="0"  Command="{Binding Path=Players.Rewind}" />
        <Button Style="{StaticResource Style_button_stop}" Canvas.Left="34" Canvas.Top="0"  Command="{Binding Path=Players.Stop" />
        <Button Style="{StaticResource Style_button_pause}" Canvas.Left="68" Canvas.Top="0"  Command="{Binding Path=Players.TogglePause}" />
        <Button Style="{StaticResource Style_button_forward}" Canvas.Left="102" Canvas.Top="0"   Command="{Binding Path=Players.Forward}" />
        <Button Style="{StaticResource Style_button_mute}"  Canvas.Left="136" Canvas.Top="0"   Command="{Binding Path=Players.Mute}" />
      </Canvas>
    </Canvas>
  </Canvas>
</MyXaml>