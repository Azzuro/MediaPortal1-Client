<?xml version="1.0" encoding="utf-8"?>
<skin>
  <styles>
    <include name="styles_osd.xml"/>
  </styles>
  <group visible="#script:IsMouseUsed">
    <controls>
      <image source="osd_background.png" position="330,542" height="10" width="198" visible="#script:IsVideoPlaying"/>
      <image source="osd_background.png" position="330,542" height="10" width="198" visible="#Players.OSD.IsAudio"/>
      <group visible="#script:IsMouseUsed" position="350,530" >
        <controls>
          <group visible="#script:IsVideoPlaying">
            <controls>
              <button style="style_button_rewind" position="0,0"  command="Players.Rewind" visible="Players.OSD.IsAudio"/>
              <button style="style_button_rewind" position="0,0"  command="Players.Rewind" visible="Players.OSD.IsVideo"/>
              <button style="style_button_stop" position="34,0"  command="Players.Pause+WindowManager.ShowDialog" parameter="+movieStopped"  visible="Players.OSD.IsVideo"/>
              <button style="style_button_stop" position="34,0"  command="Players.Stop" visible="Players.OSD.IsAudio"/>
              <button style="style_button_pause" position="68,0"  command="Players.TogglePause" visible="Players.OSD.IsAudio"/>
              <button style="style_button_pause" position="68,0"  command="Players.TogglePause" visible="Players.OSD.IsVideo"/>
              <button style="style_button_forward" position="102,0"   command="Players.Forward" visible="Players.OSD.IsAudio"/>
              <button style="style_button_forward" position="102,0"   command="Players.Forward" visible="Players.OSD.IsVideo"/>
              <button style="style_button_mute"  position="136,0"   command="Players.Mute" visible="Players.OSD.IsAudio"/>
              <button style="style_button_mute"  position="136,0"   command="Players.Mute" visible="Players.OSD.IsVideo"/>
            </controls>

          </group>
        </controls>
      </group>
    </controls>
    <animation trigger="isvisible" type="fade" from="0" to="1"  duration="300" />
    <animation trigger="!isvisible" type="fade" from="1" to="0" duration="300"  />
  </group>
</skin>