<?xml version="1.0" encoding="utf-8"?>
<skin defaultfocus="view" opencommand="model.SlideShow.UpdateCurrentPicture">
  <models>
    <model name="model" assembly="mypicture" class="PictureModel"/>
  </models>
  <styles>
    <include name="styles.xml"/>
  </styles>
  <group>
    <controls>
      <include source="background.xml"/>
      <image name="picture" source="model.SlideShow.CurrentPicture" position="0,0" width="720" height="576" usethumbnail="false" visible="model.SlideShow.CurrentPictureVisibile">
        <animation trigger="isvisible" type="zoom" from="1" to="0.4"  duration="900"/>
        <animation trigger="isvisible" type="slide" from="0,0" to="160,130"  duration="900" tween="quad" ease="easeout"/>
      </image>
      <button style="button_style_back" position="30,30" command="WindowManager.ShowPreviousWindow" visible="#script:IsMouseUsed"/>
      <image name="topbarbg" source="osd_bg_top.png" position="20,20" width="680" height="40"  visible="model.SlideShow.IsPaused"/>
      <image name="pause" source="video-pause.png" position="604,22" width="92" height="34"  visible="model.SlideShow.IsPaused"/>
      <label font="font12" position="10,29" width="200" height="30" label="[pictures.0]" visible="true"/>
      <label font="font12" position="10,89" width="200" height="30" label="[pictures.model]" visible="true"/>
      <label font="font12" position="10,119" width="500" height="30" label="[pictures.maker]" visible="true"/>
      <label font="font12" position="10,149" width="300" height="30" label="[pictures.dimension]" visible="true"/>  
      <label font="font12" position="10,179" width="300" height="30" label="[pictures.expcomp]" visible="true"/>            
      <label font="font12" position="10,209" width="300" height="30" label="[pictures.exptime]" visible="true"/>            
      <label font="font12" position="10,239" width="300" height="30" label="[pictures.metmod]" visible="true"/>      
      <label font="font12" position="10,269" width="300" height="30" label="[pictures.sspeed]" visible="true"/>            
      <label font="font12" position="10,299" width="300" height="30" label="[pictures.flash]" visible="true"/>            
      <label font="font12" position="10,329" width="300" height="30" label="[pictures.fstop]" visible="true"/>        
      <label font="font12" position="250,29" width="500" height="30" label="model.SlideShow.Info.ImgTitle" visible="true"/>
      <label font="font12" position="250,59" width="500" height="30" label="model.SlideShow.Info.Date" visible="true"/>
      <label font="font12" position="250,89" width="500" height="30" label="model.SlideShow.Info.CameraModel" visible="true"/>
      <label font="font12" position="250,119" width="500" height="30" label="model.SlideShow.Info.EquipmentMake" visible="true"/>
      <label font="font12" position="250,149" width="300" height="30" label="model.SlideShow.Info.ImgDimensions" visible="true"/>      
      <label font="font12" position="250,179" width="300" height="30" label="model.SlideShow.Info.ExposureCompensation" visible="true"/>            
      <label font="font12" position="250,209" width="300" height="30" label="model.SlideShow.Info.ExposureTime" visible="true"/>            
      <label font="font12" position="250,239" width="300" height="30" label="model.SlideShow.Info.MeteringMod" visible="true"/>            
      <label font="font12" position="250,269" width="300" height="30" label="model.SlideShow.Info.ShutterSpeed" visible="true"/>            
      <label font="font12" position="250,299" width="300" height="30" label="model.SlideShow.Info.Flash" visible="true"/>            
      <label font="font12" position="250,329" width="300" height="30" label="model.SlideShow.Info.Fstop" visible="true"/>                   
      
    </controls>
    <animation trigger="onwindowclose" type="fade" from="1" to="0"  duration="800"/>
    <animation trigger="onwindowopen" type="fade" from="0" to="1"  duration="800"/>
  </group>
  <keybinding key="Left" command="model.SlideShow.ShowPreviousPicture"/>
  <keybinding key="Right" command="modelSlideShow..ShowNextPicture"/>
  <keybinding key="Space" command="model.SlideShow.Pause"/>
</skin>