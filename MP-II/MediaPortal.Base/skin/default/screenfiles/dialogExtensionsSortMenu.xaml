<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_dialog_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text1" Resource="[system.5]"/>
    <ResourceWrapper x:Key="Dialog_Header_Text2" Resource="[music.5]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" AssemblyName="MyExtensions" ClassName="Model"/>

    <!-- ListView style -->
    <ResourceWrapper x:Key="ListViewStyle" Resource="{StaticResource MpListViewMenu}"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{StaticResource DataContext}" Path="SortOptions" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Command -->
    <ResourceWrapper x:Key="Execute_Command">
      <Command Source="{StaticResource DataContext}" Path="Sort"/>
    </ResourceWrapper>

  </Include.Resources>
</Include>
