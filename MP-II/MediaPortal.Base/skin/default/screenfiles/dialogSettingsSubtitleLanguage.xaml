<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_dialog_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text1" Resource="[system.5]"/>
    <ResourceWrapper x:Key="Dialog_Header_Text2" Resource="[playback.3]"/>

    <!-- ListView style -->
    <ResourceWrapper x:Key="ListViewStyle" Resource="{StaticResource MpListViewMenu}"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{Service Players}" Path="Settings.DefaultSubtitleLanguages" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Command -->
    <ResourceWrapper x:Key="Execute_Command">
      <Command Source="{Model AssemblyName=settings,ClassName=VideoSettings}" Path="Players.Settings.SetDefaultSubtitleLanguage"/>
    </ResourceWrapper>

  </Include.Resources>
</Include>
