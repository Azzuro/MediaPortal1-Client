<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_dialog.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text1" Resource="[system.5]"/>
    <ResourceWrapper x:Key="Dialog_Header_Text2" Resource="[weathersetup.1]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" AssemblyName="Weather" ClassName="WeatherSetupModel"/>

    <!-- Contents_Element -->
    <ResourceWrapper x:Key="Contents_Element">
      <StackPanel DataContext="{Binding Source={StaticResource DataContext}}" Orientation="Vertical">
        <Label Margin="10,5,10,5" HorizontalAlignment="Left" Text="[weathersetup.0]" Color="White"/>
        <TextBox Margin="10,5,10,5" HorizontalAlignment="Left"  BorderThickness="1" Width="250"
            Text="{Binding Path=SearchCity,Mode=OneWayToSource}"/>
    	  <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
      	  <Button Name="ButtonDone" Margin="5" Style="{StaticResource ButtonStyle}" Content="[system.done]"
      	      Command="{Command Path=SearchLocations, Parameters={Binding ElementName=SearchCity,Path=Text}}"/>
    	    <Button Name="ButtonCancel" Margin="5" Style="{StaticResource ButtonStyle}" Content="[system.cancel]"
              Command="{Command Source={Service ScreenManager},Path=CloseDialog}"/>
        </StackPanel>
      </StackPanel>
    </ResourceWrapper>
  </Include.Resources>
</Include>
