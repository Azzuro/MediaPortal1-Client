<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[extensions.myextensions]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" AssemblyName="MyExtensions" ClassName="Model"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{StaticResource DataContext}" Path="MainMenu" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element">
      <ListView DataContext="{Binding Source={StaticResource DataContext}}"
          Margin="10,0,10,0" Style="{StaticResource MpListView}" ItemsSource="{Binding Items}"
          Command="{Command Path=Select}" CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=CurrentItem}"
          ContextMenuCommand="{Command Source={Service WindowManager},Path=ShowDialog}" ContextMenuCommandParameter="dialogExtensionsContextMenu"
          SelectionChanged="{Command Path=OnSelectionChange}"/>
    </ResourceWrapper>

  </Include.Resources>
</Include>
