<?xml version="1.0" encoding="utf-8"?>
<Canvas
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding Source={Model AssemblyName=HelloWorld,ClassName=Model}}"
    FocusedElement="{Binding ElementName=BtnChangeText}">

  <Canvas Background="{StaticResource BackgroundBrush}" Width="720" Height="576">
    <StackPanel>
      <Button Margin="0,10,0,0" x:Name="BtnChangeText" Width="100" Height="40" Style="{StaticResource ButtonStyle}" Content="Click Me!">
        <Button.Command>
          <Command Path="ChangeHelloWorldString"/>
        </Button.Command>
      </Button>
      <Label Margin="0,0,0,0" FontSize="30" Text="{Binding Path=HelloString}" Width="700" Height="50"/>
    </StackPanel>
  </Canvas>
</Canvas>
