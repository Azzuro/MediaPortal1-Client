<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[settings.playback]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" AssemblyName="settings" ClassName="VideoSettings"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{StaticResource DataContext}" Path="MainMenu" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element"/>

  </Include.Resources>
</Include>
