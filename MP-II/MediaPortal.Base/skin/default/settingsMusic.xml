<?xml version="1.0" encoding="utf-8"?>
<skin defaultfocus="mainMenu">
  <models>
    <model name="model" assembly="settings" class="MusicSettings"/>
  </models>
  <styles>
    <include name="styles.xml"/>
    <include name="styles_list.xml"/>
    <include name="styles_menu.xml"/>
  </styles>

  <group name="maingroup">
    <controls>
      <include source="background.xml"/>
      <label name="header"  font="font26" position="60,15" label="[settings.music]" width="300" height="32" />
      <label name="headerReflection"  font="font26" position="60,55" label="[settings.music]" width="300" height="32">
        <animation trigger="onwindowopen" type="rotate" axis="x" from="180" to="180" duration="1" center="0,25"/>
        <opacitymask>
          <gradientstop offset="0.0" color="100" />
          <gradientstop offset="0.7" color="20" />
          <gradientstop offset="1.0" color="0" />
        </opacitymask>
      </label>

      <group name="details" position="230,97" width="220"  layout="stack">
        <controls>
          <checkbox style="checkbox_style_main" label="[music.settingsfade]" selected="model.IsEnabledFadeOut" command="" onselecteditemchanged="model.EnableFadeOut"/>
          <checkbox style="checkbox_style_main" label="[music.settingsgapless]" selected="model.IsGaplessPlayback" command="" onselecteditemchanged="model.EnableGapless"/>
        </controls>
      </group>

      <group name="menuPanel">
        <controls>
          <list name="mainMenu" position="30,97" style="style_list_menu" items="model.MainMenu" >
            <animation trigger="onwindowopen" type="fade" from="0.0" to="1"  duration="1300"/>
            <animation trigger="onwindowopen" type="slide"  from="-300.0" to="0,0"  duration="1300"/>
          </list>
        </controls>
      </group>
    </controls>
    <animation trigger="onwindowclose" type="fade" from="1" to="0"  duration="800"/>
    <animation trigger="onwindowopen" type="fade" from="0" to="1"  duration="800"/>
  </group>
</skin>