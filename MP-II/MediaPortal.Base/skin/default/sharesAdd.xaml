<?xml version="1.0" encoding="utf-8"?>
<Canvas
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding Source={Model AssemblyName=Shares,ClassName=Model},Path=Instance}"
    FocusedElement="{Binding ElementName=tree}"
    History="False">
  <Canvas.Resources>
    <ResourceDictionary Source="XamlStyle.xml"/>
  </Canvas.Resources>
  <DockPanel Background="{StaticResource backGroundBrush}" Width="720" Height="576">
    <Label Margin="60,0,0,0" DockPanel.Dock="Top" Font="font26"  Text="[shares.shares]" Height="50"/>

    <Label Margin="60,0,0,0" DockPanel.Dock="Top" Font="font26"  Text="[shares.shares]" Height="50" Opacity="0.75" RenderTransformOrigin="0.5,0.5">
      <Label.RenderTransform>
        <TransformGroup>
          <ScaleTransform ScaleX="1" ScaleY="-0.75"/>
        </TransformGroup>
      </Label.RenderTransform>
      <Label.OpacityMask>
        <LinearGradientBrush StartPoint="0.5,0.0" EndPoint="0.5,1.0">
          <GradientStop Offset="0.0" Color="#FF000000" />
          <GradientStop Offset="1.0" Color="#00000000" />
        </LinearGradientBrush>
      </Label.OpacityMask>
    </Label>
    <Label Margin="60,0,0,0" Font="font13" Text="[shares.selectsharestoadd]" Width="660" Height="32" DockPanel.Dock="Top"/>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
      <Button Style="{StaticResource MpButton}" Margin="0,0,10,0"   Width="160" Height="32" Command="{Command Source={Service WindowManager},Path=ShowWindow}" CommandParameter="sharescancel">
        <Label Font="font13" Text="[system.cancel]" Height="32" />
      </Button>
      <Button Style="{StaticResource MpButton}" Margin="10,0,10,10"  Width="160" Height="32" Command="{Command Path=Save}" >
        <Label Font="font13" Text="[system.done]" Height="32" />
      </Button>
    </StackPanel>
    <TreeView x:Name="tree" Width="480" Height="320" Margin="60,0,10,0" ItemsSource="{Binding Folders}" Style="{StaticResource MpTreeView}" Command="{Command GetSubItems}" CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=CurrentItem}"/>
  </DockPanel>
</Canvas>