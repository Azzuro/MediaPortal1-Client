<?xml version="1.0" encoding="utf-8"?>
<MyXaml >
  <Canvas xmlns:local="clr-namespace:Model;assembly=Shares"  History="False" FocusManager.FocusedElement="{Binding ElementName=btnFinish}">
    <Canvas.Resources>
      <ResourceDictionary Source="XamlStyle.xml"/>
    </Canvas.Resources>
    <DockPanel Background="{StaticResource backGroundBrush}" Width="720" Height="576">
      <Label Margin="60,0,0,0" DockPanel.Dock="Top" Font="font26"  Text="[shares.shares]" Height="50"/>

      <Label Margin="60,0,0,0" DockPanel.Dock="Top" Font="font26"  Text="[shares.shares]" Height="50" Opacity="0.75" RenderTransformOrigin="0.5,0.5">
        <Label.RenderTransform>
          <TransformGroup>
            <ScaleTransform ScaleX="1" ScaleY="-0.75"/>
          </TransformGroup>
        </Label.RenderTransform>
        <Label.OpacityMask>
          <LinearGradientBrush StartPoint="0.5,0.0" EndPoint="0.5,1.0">
            <GradientStop Offset="0.0" Color="#FF000000" />
            <GradientStop Offset="1.0" Color="#00000000" />
          </LinearGradientBrush>
        </Label.OpacityMask>
      </Label>
      <Label Margin="60,0,0,0" Font="font13" Text="[shares.refreshing]" Width="660" Height="32" DockPanel.Dock="Top"/>
      <Label Margin="60,0,0,0" Font="font12" Text="[shares.pressfinish]" Width="660" Height="32" DockPanel.Dock="Top"/>
      <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" >
        <Button Name="btnFinish" Style="{StaticResource MpButton}" Margin="0,348,10,0"  Width="160" Height="32" Command="{Binding Path=WindowManager.ShowPreviousWindow}" >
          <Label Font="font13" Text="[system.done]" Height="32" />
        </Button>
      </StackPanel>
    </DockPanel>
  </Canvas>
</MyXaml>