<?xml version="1.0" encoding="utf-8"?>
<MyXaml >
  <StackPanel Width="200">
    <Resources>
      <LinearGradientBrush Key="linearBrushRedGreenBlue" StartPoint="0.5,0" EndPoint="0.5,1.0" Opacity="1.0">
        <GradientStop Offset="0.0" Color="Red"/>
        <GradientStop Offset="0.5" Color="Green"/>
        <GradientStop Offset="1.0" Color="Blue"/>
      </LinearGradientBrush>
      <Storyboard Key="animateWidth">
        <DoubleAnimation From="100" To="50" Duration="0:0:1"  TargetName="myButton" TargetProperty="Width"/>
        <ColorAnimation From="Red" To="Yellow" Duration="0:0:1"  TargetName="borderRadius.Background.GradientStops[0]" TargetProperty="Color"/>
        <PointAnimation From="0.5,0.5" To="0.3,0.3" Duration="0:0:1"  TargetName="borderRadius.Background" TargetProperty="Center"/>
      </Storyboard>
      <Storyboard Key="animateWidthReverse">
        <DoubleAnimation From="50" To="100" Duration="0:0:1"  TargetName="myButton" TargetProperty="Width"/>
        <ColorAnimation From="Yellow" To="Red" Duration="0:0:1"  TargetName="borderRadius.Background.GradientStops[0]" TargetProperty="Color"/>
        <PointAnimation From="0.3,0.3" To="0.5,0.5" Duration="0:0:1"  TargetName="borderRadius.Background" TargetProperty="Center"/>
      </Storyboard>
    </Resources>
    <Background>
      <SolidColorBrush Color="Black" Opacity="0.6"/>
    </Background>
    <Border Width="100" Height="60" >
      <Background>
        <SolidColorBrush Color="Yellow"/>
      </Background>
    </Border>
    <Border Width="100" Height="60" BorderThickness="6" CornerRadius="10" Background="{StaticResource linearBrushRedGreenBlue}">
      <BorderBrush>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1.0" Opacity="1.0">
          <GradientStop Offset="0.0" Color="Black"/>
          <GradientStop Offset="1.0" Color="White"/>
        </LinearGradientBrush>
      </BorderBrush>
    </Border>
    <Border Name="borderRadius" Width="100" Height="60" BorderThickness="6" CornerRadius="10" >
      <Background>
        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5" Opacity="1.0">
          <GradientStop Offset="0.0" Color="#FFFF0000"/>
          <GradientStop Offset="0.5" Color="#FF00FF00"/>
          <GradientStop Offset="1.0" Color="#FF0000FF"/>
        </RadialGradientBrush>
      </Background>
    </Border>
    <Image ImageSource="key.png" Width="100"  Height="80" Stretch="Fill" Opacity="0.5"/>
    <Button Name="myButton" Width="100" Height="32" ControlTemplate="{StaticResource TemplateNormalButton}">
      <Triggers>
        <EventTrigger RoutedEvent="OnMouseEnter" Storyboard="{StaticResource animateWidth}"/>
        <EventTrigger RoutedEvent="OnMouseLeave" Storyboard="{StaticResource animateWidthReverse}"/>
      </Triggers>
    </Button>
  </StackPanel>
</MyXaml>