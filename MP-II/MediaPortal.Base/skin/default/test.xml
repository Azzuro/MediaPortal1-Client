<?xml version="1.0" encoding="utf-8"?>
<MyXaml >
  <StackPanel Width="200">
    <Resources>
      <LinearGradientBrush Key="linearBrushRedGreenBlue" StartPoint="0.5,0" EndPoint="0.5,1.0" Opacity="1.0">
        <GradientStop Offset="0.0" Color="Red"/>
        <GradientStop Offset="0.5" Color="Green"/>
        <GradientStop Offset="1.0" Color="Blue"/>
      </LinearGradientBrush>
      <Storyboard Key="animateBtnFocus">
        <ColorAnimation From="#006700" To="#00ef00" Duration="0:0:1"  TargetName="myButton.Template.Children[0].Background.GradientStops[0]" TargetProperty="Color"/>
        <ColorAnimation From="#00ef00" To="#006700" Duration="0:0:1"  TargetName="myButton.Template.Children[0].Background.GradientStops[1]" TargetProperty="Color"/>
      </Storyboard>
      <Style Key="styleButton">
        <Setter Property="Template">
          <Value>
            <Canvas>
              <Border BorderThickness="4" CornerRadius="4" >
                <Background>
                  <RadialGradientBrush GradientOrigin="0.85,0.82">
                    <RelativeTransform>
                      <TransformGroup>
                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.335" ScaleY="1.582"/>
                        <SkewTransform AngleX="0" AngleY="0" CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform X="0.027" Y="-0.006"/>
                      </TransformGroup>
                    </RelativeTransform>
                    <GradientStop Color="#FF2A5EB4" Offset="0"/>
                    <GradientStop Color="#FF2A5EB4" Offset="1"/>
                  </RadialGradientBrush>
                </Background>
                <BorderBrush>
                  <SolidColorBrush Color="#FF2866BD"/>
                </BorderBrush>
              </Border>
              <Label Text="hallo" Margin="10,0,10,0" Font="font13"/>
            </Canvas>
          </Value>
        </Setter>
      </Style>
    </Resources>
    <Background>
      <SolidColorBrush Color="Black" Opacity="0.6"/>
    </Background>
    <Border Width="100" Height="60" >
      <Background>
        <SolidColorBrush Color="Yellow"/>
      </Background>
    </Border>
    <Border Width="100" Height="60" BorderThickness="6" CornerRadius="10" Background="{StaticResource linearBrushRedGreenBlue}">
      <BorderBrush>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1.0" Opacity="1.0">
          <GradientStop Offset="0.0" Color="Black"/>
          <GradientStop Offset="1.0" Color="White"/>
        </LinearGradientBrush>
      </BorderBrush>
    </Border>
    <Border Name="borderRadius" Width="100" Height="60" BorderThickness="6" CornerRadius="10" >
      <Background>
        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5" Opacity="1.0">
          <GradientStop Offset="0.0" Color="#FFFF0000"/>
          <GradientStop Offset="0.5" Color="#FF00FF00"/>
          <GradientStop Offset="1.0" Color="#FF0000FF"/>
        </RadialGradientBrush>
      </Background>
    </Border>
    <Image ImageSource="key.png" Width="100"  Height="80" Stretch="Fill" Opacity="0.5"/>
    <Button Name="myButton" Width="100" Height="32" Style="{StaticResource styleButton}">
      <Triggers>
        <EventTrigger RoutedEvent="OnGotFocus" Storyboard="{StaticResource animateBtnFocus}"/>
      </Triggers>
    </Button>
  </StackPanel>
</MyXaml>