<?xml version="1.0" encoding="utf-8"?>
<MyXaml >
  <StackPanel Width="200">
    <Background>
      <SolidColorBrush Color="Black" Opacity="0.6"/>
    </Background>
    <Border Width="100" Height="60" >
      <Background>
        <SolidColorBrush Color="Yellow"/>
      </Background>
    </Border>
    <Border Width="100" Height="60" BorderThickness="6" CornerRadius="10" >
      <Background>
        <LinearGradientBrush>
          <GradientStop Offset="0.0" Color="Red"/>
          <GradientStop Offset="0.5" Color="Green"/>
          <GradientStop Offset="1.0" Color="Blue"/>
        </LinearGradientBrush>
      </Background>
      <BorderBrush>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1.0">
          <GradientStop Offset="0.0" Color="Black"/>
          <GradientStop Offset="1.0" Color="White"/>
        </LinearGradientBrush>
      </BorderBrush>
    </Border>
    <Border Width="100" Height="60" BorderThickness="6" CornerRadius="10" >
      <Background>
        <RadialGradientBrush>
          <GradientStop Offset="0.0" Color="Red"/>
          <GradientStop Offset="0.5" Color="Green"/>
          <GradientStop Offset="1.0" Color="Blue"/>
        </RadialGradientBrush>
      </Background>
    </Border>
    <Image ImageSource="key.png" Width="100"  Height="80" Stretch="Fill" Opacity="0.5"/>
    <Image ImageSource="key.png" Width="100"  Height="80" Stretch="UniformToFill"/>
  </StackPanel>
</MyXaml>