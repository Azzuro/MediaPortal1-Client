<?xml version="1.0" encoding="utf-8"?>
<skin defaultfocus="btnLocation">
  <models>
    <model name="model" assembly="myweather" class="WeatherViewModel"/>
  </models>
  <styles>
    <include name="styles.xml"/>
    <include name="styles_list.xml"/>
    <include name="styles_weather.xml"/>
    <include name="styles_keyboard.xml"/>
  </styles>

  <group name="maingroup">
    <controls>
      <include source="background.xml"/>
      <label name="header"  font="font26" position="70,15" label="[weather.0]" width="500" height="32" />
      <label name="header"  font="font26" position="70,55" label="[weather.0]" width="500" height="32" >
        <animation trigger="onwindowopen" type="rotate" axis="x" from="180" to="180" duration="1" center="0,25"/>
        <opacitymask>
          <gradientstop offset="0.0" color="100" />
          <gradientstop offset="0.7" color="20" />
          <gradientstop offset="1.0" color="0" />
        </opacitymask>
      </label>
      <label name="locName"  font="font13" position="200,60" label="model.CurrentLocation.Name" width="500" height="32"/>
      <image source="Media\Weather\Logos\TWClogo_64px.png" position="30,500" width="64" height="64"/>
      <group name="menuPanel">
        <controls>
          <group position="30,97" name="menu" width="190" layout="stack">
            <controls>
              <button name="btnLocation" style="button_style_main" label="[weather.1]" command="WindowManager.ShowDialog" parameter="dialogWeatherLocations"/>
              <button name="btnRefresh" style="button_style_main" label="[weather.2]" command="model.Refresh"/>
              <button name="btnRefresh" style="button_style_main" label="[weather.4]" command="WindowManager.ShowWindow" parameter="weathersetup"/>
            </controls>
            <animation trigger="onwindowopen" type="fade" from="0.0" to="1"  duration="1300"/>
            <animation trigger="onwindowopen" type="slide"  from="-300.0" to="0,0"  duration="1300"/>
          </group>
          <list name="forecasts" position="-50,400"  style="style_forecast" items="model.ForecastCollection" parameter="forecasts.#script:SelectedItem"/>
        </controls>
        <animation trigger="hasfocus(smallvideo)" type="zoom" from="1.0" to="0.96"  duration="300"/>
        <animation trigger="!hasfocus(smallvideo)" type="zoom" from="0.96" to="1.0"  duration="300" />
        <opacitymask visible="#script:HasControlFocus(smallvideo)">
          <gradientstop offset="0.0" color="255" />
          <gradientstop offset="0.4" color="30" />
          <gradientstop offset="1.0" color="0" />
        </opacitymask>
      </group>

      <group name="currentLocationLabels" layout="stack" position="100,100">
        <controls>
          <label align="right"   font="font13" label="[weather.6]" width="300" height="32" color="lightblue"/>
          <label align="right"   font="font13" label="[weather.7]" width="300" height="32" color="lightblue"/>
          <label align="right"   font="font13" label="[weather.8]" width="300" height="32" color="lightblue"/>
          <label align="right"   font="font13" label="[weather.9]" width="300" height="32" color="lightblue"/>
          <label align="right"   font="font13" label="[weather.10]" width="300" height="32" color="lightblue"/>
          <label align="right"   font="font13" label="[weather.11]" width="300" height="32" color="lightblue"/>
          <label align="right"   font="font13" label="[weather.12]" width="300" height="32" color="lightblue"/>
          <label align="right"   font="font13" label="[weather.13]" width="300" height="32" color="lightblue"/>
        </controls>
      </group>

      <group name="currentLocationData" layout="stack" position="420,100">
        <controls>
          <label align="left"   font="font13" label="model.CurrentLocation.Condition.Temperature" width="300" height="32"/>
          <label align="left"   font="font13" label="model.CurrentLocation.Condition.FeelsLikeTemp" width="300" height="32"/>
          <label align="left"   font="font13" label="model.CurrentLocation.Condition.UVIndex" width="300" height="32"/>
          <label align="left"   font="font13" label="model.CurrentLocation.Condition.Wind" width="300" height="32"/>
          <label align="left"   font="font13" label="model.CurrentLocation.Condition.Humidity" width="300" height="32"/>
          <label align="left"   font="font13" label="model.CurrentLocation.Condition.DewPoint" width="300" height="32"/>
          <label align="left"   font="font13" label="model.CurrentLocation.LocationInfo.SunRise" width="300" height="32"/>
          <label align="left"   font="font13" label="model.CurrentLocation.LocationInfo.SunSet" width="300" height="32"/>
        </controls>
      </group>

      <button name="smallvideo" style="button_small_video" visible="#script:IsVideoPlaying" position="31,450"  command="WindowManager.ShowWindow" parameter="fullscreenvideo">
        <animation trigger="hasfocus" type="zoom" from="1.0" to="1.1"  duration="300" center="104,104"/>
        <animation trigger="!hasfocus" type="zoom" from="1.1" to="1.0" duration="300" center="104,104" />
      </button>
      <include source="osd.xml"/>
    </controls>
    <animation trigger="onwindowclose" type="fade" from="1" to="0"  duration="800"/>
    <animation trigger="onwindowopen" type="fade" from="0" to="1"  duration="800"/>
  </group>
</skin>