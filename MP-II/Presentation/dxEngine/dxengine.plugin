<Plugin name        = "DirectxGui"
        author      = "Team MediaPortal"
        copyright   = "GPL"
        description = "DirectX GUI">

  <Manifest>
    <Identity name = "Presentation.dxEngine.DirectxGui"/>
  </Manifest>

  <Runtime>
    <Import assembly = "dxEngine.dll"/>
    <Import assembly = "skinengine.dll"/>
  </Runtime>

  <Register location = "/AutoStart">
    <Class id = "DirectxGui" class = "Presentation.dxEngine.DirectxGui"/>
  </Register>

  <Register location = "/Configuration/Settings/General">
    <Setting id= "system"
         text = "[configuration.system]"
         type = "Heading"/>
    <Setting id= "fullscreen"
             text = "[configuration.system.fullscreen]"
             help = "[configuration.system.fullscreen.help]"
             type = "YesNo"
             class = "Presentation.dxEngine.Settings.Fullscreen"/>
  </Register>
</Plugin>