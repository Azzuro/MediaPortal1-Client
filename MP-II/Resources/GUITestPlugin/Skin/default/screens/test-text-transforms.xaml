<Grid
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto"/>
    <ColumnDefinition Width="Auto"/>
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
  </Grid.RowDefinitions>

  <Grid.Resources>
    <ResourceWrapper x:Key="TestTextContent" Resource="Test-Text"/>
    <ResourceWrapper x:Key="TestTextColor" Resource="Blue"/>
    <ResourceWrapper x:Key="SmallTextSize" Resource="30"/>
    <ResourceWrapper x:Key="BigTextSize" Resource="60"/>

    <ResourceWrapper x:Key="TestLabelRTAngle" Resource="10"/>
    <ResourceWrapper x:Key="TestLabelLTAngle" Resource="45"/>

    <Style x:Key="BaseTestTextStyle" TargetType="{x:Type Label}">
      <Setter Property="Content" Value="{StaticResource TestTextContent}"/>
      <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
    </Style>

    <Style x:Key="SmallTextStyle" BasedOn="{StaticResource BaseTestTextStyle}">
      <Setter Property="FontSize" Value="{StaticResource SmallTextSize}"/>
    </Style>

    <Style x:Key="BigTextStyle" BasedOn="{StaticResource BaseTestTextStyle}">
      <Setter Property="FontSize" Value="{StaticResource BigTextSize}"/>
    </Style>

  </Grid.Resources>

  <!-- First row: All texts, no transformation -->

  <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Different text sizes, normal orientation"/>
  <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource SmallTextStyle}"/>
  <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource BigTextStyle}"/>

  <!-- Second row: All texts, N degrees RenderTransform -->

  <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
    <Label Content="Different text sizes, rotated by "/>
    <Label Content="{StaticResource TestLabelRTAngle}"/>
    <Label Content=" degrees (RenderTransform)"/>
  </StackPanel>
  <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource SmallTextStyle}">
    <Label.RenderTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelRTAngle}"/>
      </TransformGroup>
    </Label.RenderTransform>
  </Label>
  <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource BigTextStyle}">
    <Label.RenderTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelRTAngle}"/>
      </TransformGroup>
    </Label.RenderTransform>
  </Label>

  <!-- Third row: All texts, N degrees LayoutTransform -->

  <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
    <Label Content="Different text sizes, rotated by "/>
    <Label Content="{StaticResource TestLabelLTAngle}"/>
    <Label Content=" degrees (LayoutTransform)"/>
  </StackPanel>
  <Label Grid.Row="5" Grid.Column="0" Style="{StaticResource SmallTextStyle}">
    <Label.LayoutTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelLTAngle}"/>
      </TransformGroup>
    </Label.LayoutTransform>
  </Label>
  <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource BigTextStyle}">
    <Label.LayoutTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelLTAngle}"/>
      </TransformGroup>
    </Label.LayoutTransform>
  </Label>

  <!-- Fourth row: All texts, N degrees RenderTransform + N degrees LayoutTransform -->

  <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
    <Label Content="Different text sizes, rotated by "/>
    <Label Content="{StaticResource TestLabelRTAngle}"/>
    <Label Content=" degrees RenderTransform and "/>
    <Label Content="{StaticResource TestLabelLTAngle}"/>
    <Label Content=" degrees LayoutTransform"/>
  </StackPanel>
  <Label Grid.Row="7" Grid.Column="0" Style="{StaticResource SmallTextStyle}">
    <Label.RenderTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelRTAngle}"/>
      </TransformGroup>
    </Label.RenderTransform>
    <Label.LayoutTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelLTAngle}"/>
      </TransformGroup>
    </Label.LayoutTransform>
  </Label>
  <Label Grid.Row="7" Grid.Column="1" Style="{StaticResource BigTextStyle}">
    <Label.RenderTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelRTAngle}"/>
      </TransformGroup>
    </Label.RenderTransform>
    <Label.LayoutTransform>
      <TransformGroup>
        <RotateTransform Angle="{StaticResource TestLabelLTAngle}"/>
      </TransformGroup>
    </Label.LayoutTransform>
  </Label>
</Grid>
