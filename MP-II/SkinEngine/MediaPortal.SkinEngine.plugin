<Plugin name        = "MediaPortal.SkinEngine"
        author      = "Frodo, Albert78"
        copyright   = "GPL"
        description = "DirectX Window Manager">

  <Manifest>
    <Identity name = "MediaPortal.SkinEngine.DirectxGui"/>
  </Manifest>

  <Runtime>
    <Import assembly = "MediaPortal.SkinEngine.dll"/>
  </Runtime>

  <Register location = "/AutoStart">
    <Class id = "SkinEngine" class = "MediaPortal.SkinEngine.DirectxGui"/>
  </Register>

  <Register location = "/Configuration/Settings/General">
    <Setting id= "system"
         text = "[configuration.system]"
         type = "Heading"/>
    <Setting id= "fullscreen"
             text = "[configuration.system.fullscreen]"
             help = "[configuration.system.fullscreen.help]"
             type = "YesNo"
             class = "MediaPortal.SkinEngine.Settings.Fullscreen"/>
  </Register>
</Plugin>