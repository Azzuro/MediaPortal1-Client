<ViewDefinition Name="Movies">
  <Databases>
    <Database Name="Movies"/>
  </Databases>
  <Views>
    <View Name="Shares" type="shares">
      <SubView Name="movies" key="" operator="" map="movies-shares"/>
    </View>
    <View Name="Years" type="databases">
      <SubView Name="show unique years" key="year" operator="distinct" map="movies-database-search"/>
      <SubView Name="movies" key="" operator="" map="movies-shares"/>
    </View>
    <View Name="Genres" type="databases">
      <SubView Name="show unique genres" key="genre" operator="distinct" map="movies-database-search"/>
      <SubView Name="movies" key="" operator="" map="movies-shares"/>
    </View>
    <View Name="Actors" type="databases">
      <SubView Name="show unique actors" key="actors" operator="distinct" map="movies-database-search"/>
      <SubView Name="movies" key="" operator="" map="movies-shares"/>
    </View>
    <View Name="Movies" type="databases">
      <SubView Name="movies" key="" operator="" map="movies-shares"/>
    </View>
    <View Name="Movies 1980-2000 or 2007" type="databases">
      <SubView Name="show years 1980-2000 or 2007" map="movies-database-search">
        <Query>
          <Expression operator="or">
            <Query>
              <Expression operator="and">
                <Query key="year" operator="greaterorsame" value="1980"/>
                <Query key="year" operator="lessorsame" value="2000"/>
              </Expression>
            </Query>
            <Query key="year" operator="==" value="2007"/>
          </Expression>
        </Query>
      </SubView>
      <SubView Name="movies" key="" operator="" map="movies-shares"/>
    </View>
  </Views>
</ViewDefinition>