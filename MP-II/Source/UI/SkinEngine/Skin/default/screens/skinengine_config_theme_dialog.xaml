<?xml version="1.0" encoding="utf-8"?>

<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_configuration_dialog_wob.xaml"
    >
  <Include.Resources>
    <!-- Configuration model -->
    <Model x:Key="Model" Id="545674F1-D92A-4383-B6C1-D758CECDBDF5"/>

    <ResourceWrapper x:Key="Config_Contents_Element">
      <StackPanel Orientation="Vertical">
        <ListView x:Name="Menu" Style="{StaticResource ImageDialogListViewStyle}" ItemsSource="{Binding Source={StaticResource Model},Path=CurrentConfigSetting.AllThemes}"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CurrentItem="{Binding Source={StaticResource Model},Path=CurrentConfigSetting.ChoosenItem,Mode=TwoWay}">
          <ListView.Resources>
            <CommandList x:Key="Menu_Command">
              <Command Source="{StaticResource Model}" Path="SaveCurrentConfigItem"/>
              <Command Source="{Service ScreenManager}" Path="CloseDialog"/>
            </CommandList>
          </ListView.Resources>
        </ListView>
      </StackPanel>
    </ResourceWrapper>
  </Include.Resources>
</Include>
