<Plugin
    Version="1.0"
    Name="SkinEngine"
    Author="Frodo, Albert"
    Copyright="GPL"
    AutoActivate="true" 
    Description="DirectX Window Manager"
    PluginVersion="1.0">

  <DependsOn>
    <PluginReference Name="ConfigurationManager"/>
  </DependsOn>

  <Runtime>
    <Assembly FileName="SkinEngine.dll"/>
    <PluginStateTracker ClassName="MediaPortal.SkinEngine.SkinEnginePlugin"/>
  </Runtime>

  <Register Location="/Configuration/Settings/Appearance">
    <ConfigGroup
        Id="System"
        Redundant="true"
        Text="[configuration.system]"/>
  </Register>

  <Register Location="/Configuration/Settings/Appearance/System">
    <ConfigSetting
        Id="Fullscreen"
        Text="[configuration.system.fullscreen]"
        HelpText="[configuration.system.fullscreen.help]"
        ClassName="MediaPortal.SkinEngine.Settings.Fullscreen"/>
  </Register>
</Plugin>
