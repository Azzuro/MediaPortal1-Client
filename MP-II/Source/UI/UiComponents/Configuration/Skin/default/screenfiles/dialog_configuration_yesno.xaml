<?xml version="1.0" encoding="utf-8"?>

<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_configuration_dialog_wob.xaml"
    >
  <Include.Resources>
    <!-- Configuration model -->
    <Model x:Key="Model" Id="545674F1-D92A-4383-B6C1-D758CECDBDF5"/>

    <ResourceWrapper x:Key="Config_Contents_Element">
      <StackPanel Orientation="Vertical">
        <RadioButton x:Name="YesButton" Style="{StaticResource RadioButtonStyle}" Content="[System.Yes]" GroupName="DialogButtons"
            IsChecked="{Binding Source={StaticResource Model},Path=CurrentConfigSetting.Yes,Mode=TwoWay}">
          <RadioButton.Command>
            <CommandList>
              <Command Source="{StaticResource Model}" Path="SaveCurrentConfigItem"/>
              <Command Source="{Service ScreenManager}" Path="CloseDialog"/>
            </CommandList>
          </RadioButton.Command>
        </RadioButton>
        <RadioButton x:Name="NoButton" Style="{StaticResource RadioButtonStyle}" Content="[System.No]" GroupName="DialogButtons"
            IsChecked="{Binding Source={StaticResource Model},Path=!CurrentConfigSetting.Yes,Mode=TwoWay}">
          <RadioButton.Command>
            <CommandList>
              <Command Source="{StaticResource Model}" Path="SaveCurrentConfigItem"/>
              <Command Source="{Service ScreenManager}" Path="CloseDialog"/>
            </CommandList>
          </RadioButton.Command>
        </RadioButton>
      </StackPanel>
    </ResourceWrapper>
  </Include.Resources>
</Include>
