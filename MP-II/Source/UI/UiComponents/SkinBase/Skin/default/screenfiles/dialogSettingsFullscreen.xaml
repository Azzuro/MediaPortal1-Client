<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_dialog_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[settings.fullscreen]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" RegistrationLocation="Settings" Id="ScreenSettings"/>

    <!-- ListView style -->
    <ResourceWrapper x:Key="ListViewStyle" Resource="{StaticResource MenuListViewStyle}"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{StaticResource DataContext}" Path="FullScreen" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Command -->
    <ResourceWrapper x:Key="Execute_Command_Stencil">
      <CommandStencil Source="{StaticResource DataContext}" Path="SetFullScreen"/>
    </ResourceWrapper>

  </Include.Resources>
</Include>
