<?xml version="1.0" encoding="utf-8"?>
<Grid
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding Source={Service Players}}"
    IsVisible="{Binding Path=OSD.IsMouseUsed}"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="Auto"/>
    <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="30"/>
  </Grid.RowDefinitions>

  <Image Grid.Row="1" Grid.Column="1" Source="osd_background.png" Height="10" Width="198"
      VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding Path=OSD.IsVideo}"/>
  <Image Grid.Row="1" Grid.Column="1" Source="osd_background.png" Height="10" Width="198"
      VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding Path=OSD.IsAudio}"/>
  <Canvas Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
      IsVisible="{Binding Path=OSD.IsVideo}">
    <Button Style="{StaticResource Style_button_rewind}" Canvas.Left="0" Canvas.Top="0" Command="{Command Path=Rewind}"/>
    <Button Style="{StaticResource Style_button_stop}" Canvas.Left="34" Canvas.Top="0" Command="{Command Path=Stop}"/>
    <Button Style="{StaticResource Style_button_pause}" Canvas.Left="68" Canvas.Top="0" Command="{Command Path=TogglePause}"/>
    <Button Style="{StaticResource Style_button_forward}" Canvas.Left="102" Canvas.Top="0" Command="{Command Path=Forward}"/>
    <Button Style="{StaticResource Style_button_mute}"  Canvas.Left="136" Canvas.Top="0" Command="{Command Path=Mute}"/>
  </Canvas>
  <Canvas Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
      IsVisible="{Binding Path=OSD.IsAudio}">
    <Button Style="{StaticResource Style_button_rewind}" Canvas.Left="0" Canvas.Top="0" Command="{Command Path=Rewind}"/>
    <Button Style="{StaticResource Style_button_stop}" Canvas.Left="34" Canvas.Top="0" Command="{Command Path=Stop}"/>
    <Button Style="{StaticResource Style_button_pause}" Canvas.Left="68" Canvas.Top="0" Command="{Command Path=TogglePause}"/>
    <Button Style="{StaticResource Style_button_forward}" Canvas.Left="102" Canvas.Top="0" Command="{Command Path=Forward}"/>
    <Button Style="{StaticResource Style_button_mute}"  Canvas.Left="136" Canvas.Top="0" Command="{Command Path=Mute}"/>
  </Canvas>
</Grid>
