<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[movies.onlineresult]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" RegistrationLocation="Movies" Id="Model"/>

    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element">
      <DockPanel DataContext="{Binding Source={StaticResource DataContext}}"
          Margin="10,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Label Margin="60,0,0,0" DockPanel.Dock="Top" Font="font13" Content="{Binding ImdbMovietile}" Height="50"/>
        <ListView x:Name="MovieMenu" Height="300" Width="600" Style="{StaticResource MenuListViewStyle}" ItemsSource="{Binding ImdbResultMovies}">
          <ListView.Resources>
            <ResourceWrapper x:Key="Menu_Command" Resource="{Binding Path=Command,Mode=OneTime}"/>
          </ListView.Resources>
        </ListView>
      </DockPanel>
    </ResourceWrapper>

  </Include.Resources>
</Include>
