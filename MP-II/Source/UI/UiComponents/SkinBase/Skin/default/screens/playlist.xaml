<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[playlists.playlist]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" RegistrationLocation="PlayList" Id="PlayList"/>

    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element">
      <ListView DataContext="{Binding Source={StaticResource DataContext}}"
          Margin="10,0,10,0" Style="{ThemeResource PlayListViewStyle}" ItemsSource="{Binding PlayListItems}"
          SelectionChanged="{CommandStencil Path=OnSelectionChange}">
        <ListView.Resources>
          <Command x:Key="Menu_Command" Source="{StaticResource DataContext}" Path="PlayItem" Parameters="{LateBoundValue Value={Binding}}"/>
        </ListView.Resources>
      </ListView>
    </ResourceWrapper>

  </Include.Resources>
</Include>
