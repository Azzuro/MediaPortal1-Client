<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master.xaml"
    >
  <Include.Resources>

    <!-- Header_Text -->
    <ResourceWrapper x:Key="Header_Text" Resource="[settings.shares]"/>

    <!-- Focused_Element -->
    <ResourceWrapper x:Key="Focused_Element" Resource="{Binding ElementName=btnFinish}"/>

    <!-- Client_Element -->
    <ResourceWrapper x:Key="Client_Element">
      <DockPanel>
        <Label Margin="60,0,0,0" FontSize="30" Content="[shares.refreshing]" Width="660" Height="32" DockPanel.Dock="Top"/>
        <Label Margin="60,0,0,0" FontSize="30" Content="[shares.pressfinish]" Width="660" Height="32" DockPanel.Dock="Top"/>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" DockPanel.Dock="Bottom">
          <Button x:Name="btnFinish" Style="{StaticResource ButtonStyle}" Margin="0,348,10,0" Width="160" Height="32"
              Command="{Command Source={Service ScreenManager},Path=ShowPreviousScreen}">
            <Label FontSize="30" Content="[system.done]" Height="32"/>
          </Button>
        </StackPanel>
      </DockPanel>
    </ResourceWrapper>

  </Include.Resources>
</Include>
