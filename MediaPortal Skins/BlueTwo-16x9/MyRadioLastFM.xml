<window>
	<id>7890</id>
	<defaultcontrol>10</defaultcontrol>
  	<allowoverlay>no</allowoverlay>
	<define>#header.label:last.fm</define>
	<define>#header.text:music</define>
	<define>#header.hover:hover_my radio.png</define>
	<define>#selecteditem:-</define>
    <controls>
	<import>common.window.tv.xml</import>
	<control>
		<type>image</type>
		<description>artist art image</description>
		<id>112</id>
         	<posX>920</posX>
         	<posY>97</posY>
         	<width>300</width>
         	<height>300</height>
		<texture>#Play.Current.ArtistThumb</texture>
		<visible>yes</visible>
		<centered>yes</centered>
	</control>
	<control>
		<type>group</type>
		<description>group element</description>
		<animation>FlyInFromLeft</animation>
		<layout>StackLayout(2)</layout>
		<control>
			<description>start a stream</description>
			<type>button</type>
			<id>10</id>
			<label>34001</label>
			<onleft>10</onleft>
			<onright>50</onright>
			<onup>666</onup>
			<ondown>20</ondown>
		</control>
		<control>
			<description>chose tag</description>
			<type>button</type>
			<id>20</id>
			<label>Tags</label>
			<onleft>20</onleft>
			<onright>50</onright>
			<onup>10</onup>
			<ondown>30</ondown>
		</control>			
		<control>
			<description>chose friend</description>
			<type>button</type>
			<id>30</id>
			<label>Friends</label>
			<onleft>30</onleft>
			<onright>50</onright>
			<onup>20</onup>
			<ondown>30</ondown>
		</control>
	</control>			
	<control>
		<type>fadelabel</type>
		<description>track label</description>
		<id>0</id>
         	<posX>400</posX>
         	<posY>97</posY>
		<width>500</width>
		<height>20</height>
		<label>#Play.Current.Title</label>
		<font>font18</font>
		<disabledcolor>ff808080</disabledcolor>
	</control>
	<control>
		<type>fadelabel</type>
		<description>artist label</description>
		<id>0</id>
         	<posX>400</posX>
         	<posY>133</posY>
		<width>500</width>
		<label>#Play.Current.Artist</label>
		<font>font18</font>
		<disabledcolor>ff808080</disabledcolor>
	</control>
      	<control>
         	<type>label</type>
         	<description>album label</description>
         	<id>0</id>
         	<posX>400</posX>
         	<posY>169</posY>
         	<width>500</width>
         	<label>#Play.Current.Album</label>
         	<font>font14</font>
         	<textcolor>ffffffff</textcolor>
      	</control>
     	<control>
         	<type>label</type>
         	<description>track progress label</description>
         	<id>0</id>
         	<posX>630</posX>
         	<posY>282</posY>
         	<label>#currentplaytime</label>
         	<font>font16</font>
         	<align>center</align>
         	<textcolor>80ffffff</textcolor>
      </control>
      <control>
         	<type>label</type>
         	<description>track duration label</description>
         	<id>0</id>
         	<posX>860</posX>
         	<posY>266</posY>
         	<label>#duration</label>
         	<font>font12</font>
          	<align>right</align>
         	<textcolor>80ffffff</textcolor>
      	</control>
      	<control>
         	<type>textbox</type>
         	<description>Similar artists box</description>
         	<id>0</id>
		<posX>400</posX>
         	<posY>400</posY>
		<width>240</width>
		<height>300</height>
         	<label>#Play.Current.Lastfm.SimilarArtists</label>
         	<align>left</align>
         	<textcolor>80ffffff</textcolor>
      </control>
      <control>
         	<type>textbox</type>
         	<description>Track tags box</description>
         	<id>0</id>
		<posX>800</posX>
         	<posY>400</posY>
		<width>240</width>
		<height>300</height>
         	<label>#Play.Current.Lastfm.TrackTags</label>
         	<align>left</align>
         	<textcolor>80ffffff</textcolor>
      </control>

