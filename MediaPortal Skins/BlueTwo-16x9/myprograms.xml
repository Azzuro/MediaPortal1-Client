<window>
	<id>3</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<define>#header.label:0</define>
	<define>#header.text:programs</define>
	<define>#header.hover:hover_my programs.png</define>
	<controls>
		<import>common.window.default.xml</import>
		<control>
			<description>Number of Files Label</description>
			<type>label</type>
			<id>1</id>
			<posX>420</posX>
			<posY>639</posY>
			<label>#itemcount</label>
		</control>
		<control>
			<type>group</type>
			<description>group element</description>
			<animation>FlyInFromLeft</animation>
			<layout>StackLayout(2)</layout>
			<posX>60</posX>
			<posY>97</posY>
			<control>
				<description>View-As button</description>
				<type>button</type>
				<id>2</id>
				<label>100</label>
				<onleft>2</onleft>
				<onright>50</onright>
				<onup>3</onup>
				<ondown>4</ondown>
			</control>	
			<control>
				<description>Switch-view button</description>
				<type>button</type>
				<id>4</id>
				<label>457</label>
				<onleft>4</onleft>
				<onright>50</onright>
				<onup>2</onup>
				<ondown>3</ondown>
			</control>
			<control>
				<description>Refresh Button</description>
				<type>button</type>
				<id>3</id>
				<label>184</label>
				<onleft>3</onleft>
				<onright>50</onright>
				<onup>4</onup>
				<ondown>2</ondown>
			</control>
		</control>
		<control>
			<description>Screenshot</description> 
			<type>image</type> 
			<id>6</id> 
			<posX>60</posX> 
			<posY>205</posY> 
			<width>300</width> 
			<height>300</height> 
			<texture>-</texture> 
			<colorkey>FFFF00FF</colorkey> 
			<colordiffuse>FFFFFFFF</colordiffuse>
			<keepaspectratio>yes</keepaspectratio>
		</control>
		<import>common.facade.default.xml</import>
	</controls>
</window>