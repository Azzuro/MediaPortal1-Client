          <spinWidth>20</spinWidth>
          <spinHeight>20</spinHeight>
          <spinPosX>1160</spinPosX>
          <spinPosY>610</spinPosY>
          <spinAlign>Right</spinAlign>
          <spinColor>ffffffff</spinColor>
