          <subtype>album</subtype>
          <id>50</id>
          <posX>5</posX>
          <posY>125</posY>
          <height>410</height>
          <width>320</width>
          <IconXOff>20</IconXOff>
          <IconYOff>2</IconYOff>
          <spaceBetweenItems>2</spaceBetweenItems>
          <remoteColor>FFa6c3e1</remoteColor>
