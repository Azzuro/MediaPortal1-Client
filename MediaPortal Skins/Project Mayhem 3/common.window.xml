<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>720</width>
      <height>576</height>
      <texture>#background.image</texture>
    </control>
    <control>
      <description>header image</description>
      <type>image</type>
      <id>1</id>
      <width>720</width>
      <height>107</height>
      <texture>#header.image</texture>
    </control>
    <control>
      <description>e.g. Setup TV</description>
      <type>label</type>
      <id>1</id>
      <posX>190</posX>
      <posY>70</posY>
      <label>#header.label</label>
      <font>font18</font>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
    </control>
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>545</posX>
      <posY>526</posY>
      <label>#itemcount</label>
      <align>right</align>
      <font>font13</font>
      <visible>Control.IsVisible(50)</visible>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
    </control>
  </controls>
</window>