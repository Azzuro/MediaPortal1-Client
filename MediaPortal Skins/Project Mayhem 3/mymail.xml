<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>8000</id>
  <defaultcontrol>20</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#background.image:background3.png</define>
  <define>#header.image:Back_email.png</define>
  <define>#header.label:8000</define>
  <controls>
    <import>common.window.xml</import>
    <control>
      <description>Number of Mails/Mailboxes Label</description>
      <type>label</type>
      <id>1</id>
      <posX>260</posX>
      <posY>530</posY>
      <label>#itemcount</label>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>label</type>
      <id>1</id>
      <posX>60</posX>
      <posY>70</posY>
      <width>400</width>
      <label>#selecteditem</label>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>
    <control>
      <description>button group</description>
      <type>group</type>
      <posX>5</posX>
      <posY>125</posY>
      <layout>StackLayout</layout>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <control>
        <description>refresh mailbox</description>
        <type>button</type>
        <id>20</id>
        <label>8001</label>
        <onleft>20</onleft>
        <onright>50</onright>
        <onup>17</onup>
        <ondown>21</ondown>
      </control>
      <control>
        <description>AutocheckMail</description>
        <type>togglebutton</type>
        <id>21</id>
        <label>8007</label>
        <onleft>21</onleft>
        <onright>50</onright>
        <onup>20</onup>
        <ondown>22</ondown>
      </control>
      <control>
        <description>delete known mails list</description>
        <type>button</type>
        <id>22</id>
        <label>8009</label>
        <onleft>20</onleft>
        <onright>50</onright>
        <onup>21</onup>
        <ondown>20</ondown>
      </control>
    </control>
    <control>
      <description>textarea</description>
      <type>textbox</type>
      <id>23</id>
      <posX>280</posX>
      <posY>100</posY>
      <onleft>20</onleft>
      <onright>20</onright>
      <onup>20</onup>
      <ondown>20</ondown>
    </control>
    <control>
      <description>listcontrol</description>
      <type>listcontrol</type>
      <id>50</id>
      <width>490</width>
      <onleft>20</onleft>
      <onright>20</onright>
      <onup>20</onup>
      <ondown>20</ondown>
      <textcolor>FFFFFFFF</textcolor>
    </control>
  </controls>
</window>