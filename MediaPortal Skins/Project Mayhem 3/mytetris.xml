<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>19000</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>
    <import>common.time.xml</import>
    <control>
      <description>BackGround</description>
      <type>image</type>
      <id>1</id>
      <width>720</width>
      <height>576</height>
      <texture>background3.png</texture>
    </control>
    <control>
      <description> label</description>
      <type>label</type>
      <id>1</id>
      <posX>250</posX>
      <posY>50</posY>
      <label>19001</label>
      <font>font16</font>
      <align>right</align>
      <textcolor>ffffffff</textcolor>
    </control>

    <control>
      <description>button group</description>
      <type>group</type>
      <layout>StackLayout</layout>
      <posX>5</posX>
      <posY>125</posY>
      <animation>FlyInFromLeft</animation>
      <control>
        <description>New Game</description>
        <type>button</type>
        <id>2</id>
        <label>19002</label>
        <onleft>2</onleft>
        <onright>10</onright>
        <onup>17</onup>
        <ondown>4</ondown>
      </control>
      <control>
        <description>Sounds</description>
        <type>togglebutton</type>
        <id>4</id>
        <label>19004</label>
        <onleft>4</onleft>
        <onright>10</onright>
        <onup>2</onup>
        <ondown>2</ondown>
      </control>
    </control>

    <control>
      <description>scoreboard</description>
      <type>group</type>
      <layout>GridLayout(2, 4, 200, 50, 0)</layout>
      <posX>40</posX>
      <posY>300</posY>
      <animation>FlyInFromLeft</animation>
      <control>
        <description>Score: label</description>
        <type>label</type>
        <id>201</id>
        <label>19005</label>
      </control>
      <control>
        <description>Score</description>
        <type>label</type>
        <id>202</id>
        <label>#tetris_score</label>
        <align>right</align>
      </control>
      <control>
        <description>Level: label</description>
        <type>label</type>
        <id>203</id>
        <label>19006</label>
      </control>
      <control>
        <description>Level</description>
        <type>label</type>
        <id>204</id>
        <label>#tetris_level</label>
        <align>right</align>
      </control>
      <control>
        <description>Lines: label</description>
        <type>label</type>
        <id>205</id>
        <label>19007</label>
      </control>
      <control>
        <description>Lines</description>
        <type>label</type>
        <id>206</id>
        <label>#tetris_lines</label>
        <align>right</align>
      </control>
      <control>
        <description>Highscore: label</description>
        <type>label</type>
        <id>205</id>
        <label>19008</label>
      </control>
      <control>
        <description>Highscore</description>
        <type>label</type>
        <id>206</id>
        <label>#tetris_highscore</label>
        <align>right</align>
      </control>
    </control>

    <control>
      <description>group for animation of tetris control</description>
      <type>group</type>
      <animation>FlyInFromTop</animation>
      <control>
        <description>Tetris control</description>
        <type>tetris</type>
        <id>10</id>
        <posX>250</posX>
        <posY>125</posY>
        <width>430</width>
        <height>385</height>
        <font>font16</font>
        <textcolor>ffffffff</textcolor>
        <onback>2</onback>
        <onleft>2</onleft>
        <onright>10</onright>
        <onup>10</onup>
        <ondown>10</ondown>
        <colordiffuse>60ffffff</colordiffuse>
        <texture>tetris\background.png</texture>
        <texturefocus>tetris\background_focus.png</texturefocus>
        <textureLeft>tetris\guide.png</textureLeft>
        <textureRight>tetris\guide.png</textureRight>
        <nextblockx>155</nextblockx>
        <nextblocky>368</nextblocky>
      </control>
    </control>
  </controls>
</window>