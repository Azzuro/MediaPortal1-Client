<window>
   <id>611</id>

   <defaultcontrol>2</defaultcontrol>

   <allowoverlay>no</allowoverlay>

   <define>#header.label:895</define>

   <controls>
      <import>common.window.xml</import>

      <import>common.time.xml</import>

      <control>
         <description>BG</description>

         <type>image</type>

         <id>1</id>

         <posX>0</posX>

         <posY>0</posY>

         <width>720</width>

         <height>576</height>

         <texture>background3.png</texture>
      </control>

      <control>
         <description>Enable auto compress</description>

         <type>checkmark</type>

         <id>2</id>

         <posX>288</posX>

         <posY>218</posY>

         <label>994</label>

         <textcolor>FFFFFFFF</textcolor>

         <onleft>2</onleft>

         <onright>2</onright>

         <onup>17</onup>

         <ondown>5</ondown>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>         
      </control>

      <control>
         <description>Auto compress label</description>

         <type>label</type>

         <id>4</id>

         <posX>288</posX>

         <posY>252</posY>

         <label>895</label>

         <font>font13</font>

         <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>         
      </control>

      <control>
         <description>Auto compress select</description>

         <type>spincontrol</type>

         <id>5</id>

         <posX>560</posX>

         <posY>252</posY>

         <reverse>yes</reverse>

         <onup>2</onup>

         <ondown>7</ondown>

         <onleft>5</onleft>

         <onright>5</onright>

         <align>right</align>

         <textcolor>FFFFFFFF</textcolor>

         <showrange>no</showrange>

         <spintype>text</spintype>

         <subitems>
            <subitem>1 Hour</subitem>

            <subitem>2 Hour</subitem>

            <subitem>3 Hour</subitem>

            <subitem>4 Hour</subitem>

            <subitem>5 Hour</subitem>

            <subitem>6 Hour</subitem>

            <subitem>7 Hour</subitem>

            <subitem>8 Hour</subitem>
         </subitems>

         <textureUp>arrow_round_right_nofocus.png</textureUp>

         <textureDown>arrow_round_left_nofocus.png</textureDown>

         <textureUpFocus>arrow_round_right_focus.gif</textureUpFocus>

         <textureDownFocus>arrow_round_left_focus.gif</textureDownFocus>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>         
      </control>

      <control>
         <description>Delete original file</description>

         <type>checkmark</type>

         <id>7</id>

         <posX>288</posX>

         <posY>286</posY>

         <label>992</label>

         <textcolor>FFFFFFFF</textcolor>

         <onleft>15</onleft>

         <onright>15</onright>

         <onup>5</onup>

         <ondown>99</ondown>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>         
      </control>
   </controls>
</window>

