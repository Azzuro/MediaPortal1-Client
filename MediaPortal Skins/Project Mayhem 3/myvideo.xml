<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>6</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#background.image:background3.png</define>
  <define>#header.image:Back_video.png</define>
  <define>#header.label:134</define>
  <controls>
    <import>common.window.xml</import>
    <control>
      <description>button group</description>
      <type>group</type>
      <posX>5</posX>
      <posY>125</posY>
      <layout>StackLayout</layout>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <control>
        <description>View-As button</description>
        <type>button</type>
        <id>2</id>
        <label>100</label>
        <onup>17</onup>
        <onright>50</onright>
      </control>
      <control>
        <type>sortbutton</type>
        <id>3</id>
        <label>103</label>
      </control>
      <control>
        <description>Switch view</description>
        <type>button</type>
        <id>5</id>
        <label>457</label>
      </control>
      <control>
        <description>Playlist button</description>
        <type>button</type>
        <id>20</id>
        <label>136</label>
        <action>33</action>
      </control>
      <control>
        <description>Play DVD</description>
        <type>button</type>
        <id>6</id>
        <label>341</label>
        <ondown>7</ondown>
      </control>
      <control>
        <description>TV Shows</description>
        <type>button</type>
        <id>7</id>
        <hyperlink>9811</hyperlink>
        <label>1300</label>
        <ondown>8</ondown>
        <visible>plugin.isenabled(MP-TV Series)</visible>
      </control>
      <control>
        <description>Trailers</description>
        <type>button</type>
        <id>8</id>
        <hyperlink>5900</hyperlink>
        <label>5906</label>
        <ondown>99</ondown>
        <visible>plugin.isenabled(My Trailers)</visible>
      </control>
    </control>
    <control>
      <type>group</type>
      <description>group element</description>
      <animation>FlyInFromTop</animation>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <onleft>2</onleft>
          <onright>51</onright>
          <!--           <onup>2</onup>
          <ondown>2</ondown> -->
          <image>video-focus.png</image>
          <textcolor>FFFFFFFF</textcolor>
        </control>
        <control>
          <description>Thumbnail Panel</description>
          <type>thumbnailpanel</type>
          <id>51</id>
          <onleft>2</onleft>
          <onright>52</onright>
          <!--           <onup>2</onup>
          <ondown>2</ondown> -->
          <image>video-focus.png</image>
        </control>
        <control>
          <description>Filmstrip view</description>
          <type>filmstrip</type>
          <id>50</id>
          <onleft>2</onleft>
          <onright>2</onright>
          <!--           <onup>2</onup>
          <ondown>2</ondown> -->
        </control>
      </control>
    </control>
  </controls>
</window>