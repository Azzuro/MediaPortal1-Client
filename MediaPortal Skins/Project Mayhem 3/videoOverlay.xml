<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>3000</id>
  <defaultcontrol>2</defaultcontrol>
  <controls>
    <control>
      <description>video rectangle</description>
      <type>image</type>
      <id>0</id>
      <posY>468</posY>
      <width>-</width>
      <height>-</height>
      <texture>Overlayback.png</texture>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
    <control>
      <description>play time label</description>
      <type>label</type>
      <id>2</id>
      <posX>149</posX>
      <posY>530</posY>
      <label>#currentplaytime</label>
      <align>right</align>
      <textcolor>ffffffff</textcolor>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
    <control>
      <type>label</type>
      <description>track duration label</description>
      <id>10</id>
      <posX>320</posX>
      <posY>530</posY>
      <label>#duration</label>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
    <control>
      <description>album/artist/genre etc info label</description>
      <type>fadelabel</type>
      <width>248</width>
      <height>30</height>
      <posX>97</posX>
      <posY>485</posY>
      <label>#Play.Current.Title</label>
      <textcolor>FFFFFFFF</textcolor>
      <id>5</id>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
    <control>
      <description>scrolling info label</description>
      <type>fadelabel</type>
      <width>248</width>
      <height>30</height>
      <posX>97</posX>
      <posY>510</posY>
      <font>font10</font>
      <label>#Play.Current.Genre\r#Play.Current.Year\r#Play.Current.Director</label>
      <id>9</id>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
    <control>
      <description>Progress Bar</description>
      <type>progress</type>
      <id>0</id>
      <posX>140</posX>
      <posY>531</posY>
      <width>177</width>
      <height>20</height>
      <texturebg>osd_progress_back.png</texturebg>
      <label>#percentage</label>
      <visible>yes</visible>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>150</posX>
      <posY>534</posY>
      <width>167</width>
      <height>15</height>
      <texture>progress_over.png</texture>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
    <control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>1</id>
      <posX>10</posX>
      <posY>483</posY>
      <width>80</width>
      <height>70</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <action>18</action>
      <textureFocus>tv_green_border.png</textureFocus>
      <animation effect="slide" start="-403,0" time="500">WindowOpen</animation>
      <animation effect="slide" end="-403,0" time="500">WindowClose</animation>
    </control>
  </controls>
</window>