<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>4711</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#background.image:background3.png</define>
  <define>#header.image:Back_wikipedia.png</define>
  <define>#header.label:</define>
  <controls>
    <import>common.window.xml</import>
    <control>
      <type>label</type>
      <description>Article title/searchterm</description>
      <id>4</id>
      <posX>250</posX>
      <posY>70</posY>
      <label>Wikipedia</label>
      <font>font16</font>
      <align>right</align>
    </control>
    <control>
      <type>label</type>
      <description>Image description</description>
      <id>5</id>
      <posX>250</posX>
      <posY>70</posY>
      <label>Wikipedia</label>
      <font>font16</font>
      <align>right</align>
      <visible>no</visible>
    </control>
    <control>
      <description>button group</description>
      <type>group</type>
      <posX>5</posX>
      <posY>125</posY>
      <layout>StackLayout</layout>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <control>
        <description>Search Button</description>
        <type>button</type>
        <id>10</id>
        <onleft>20</onleft>
        <onright>20</onright>
        <onup>17</onup>
        <ondown>11</ondown>
        <label>137</label>
      </control>
      <control>
        <description>Select local Wikipedia Button</description>
        <type>button</type>
        <id>11</id>
        <onleft>20</onleft>
        <onright>20</onright>
        <onup>10</onup>
        <ondown>14</ondown>
        <label>200025</label>
      </control>
      <control>
        <description>Back to the text (when viewing an image)</description>
        <type>button</type>
        <id>14</id>
        <onleft>20</onleft>
        <onright>20</onright>
        <onup>11</onup>
        <ondown>12</ondown>
        <label>2514</label>
        <visible>no</visible>
      </control>
      <control>
        <description>Links Button</description>
        <type>button</type>
        <id>12</id>
        <onleft>20</onleft>
        <onright>20</onright>
        <onup>14</onup>
        <ondown>13</ondown>
        <label>2511</label>
      </control>
      <control>
        <type>button</type>
        <description>Images Button</description>
        <id>13</id>
        <posX>5</posX>
        <posY>261</posY>
        <onleft>20</onleft>
        <onright>20</onright>
        <onup>12</onup>
        <ondown>10</ondown>
        <label>2515</label>
      </control>
    </control>
    <control>
      <description>Here is the article text displayed</description>
      <type>textbox</type>
      <id>20</id>
      <posX>264</posX>
      <posY>120</posY>
      <width>440</width>
      <height>420</height>
      <text />
      <SpinPosX>264</SpinPosX>
      <SpinPosY>538</SpinPosY>
    </control>
    <control>
      <description>Article Image</description>
      <type>image</type>
      <id>25</id>
      <posX>264</posX>
      <posY>72</posY>
      <width>440</width>
      <height>466</height>
      <texture />
      <visible>no</visible>
      <colorkey>00000000</colorkey>
      <colordiffuse>White</colordiffuse>
      <centered>yes</centered>
      <keepaspectratio>yes</keepaspectratio>
    </control>
  </controls>
</window>