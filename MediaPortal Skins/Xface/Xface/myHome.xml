      <textureBackground>-</textureBackground>
      <onright>13</onright>
      <onleft>10</onleft>
      <hover flipY="true" diffuse="Thumb_Mask.png"></hover>
    </control>
    <control>
      <type>image</type>
      <posX>1060</posX>
      <posY>670</posY>
      <width>169</width>
      <height>58</height>
      <texture>mplogo.png</texture>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
     <control>
      <description>Widgetbackground</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>300</width>
      <height>768</height>
      <texture>Backslide.png</texture>
      <visible>Player.HasMedia</visible>
      <animation effect="fade" time="550">Visible</animation>
      <animation effect="fade" time="550">WindowOpen</animation>
    </control>
    <!-- Date and Time -->
    <control>
      <type>image</type>
      <posX>230</posX>
      <posY>50</posY>
      <width>40</width>
      <height>40</height>
      <texture>Clock.png</texture>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
    <control>
      <description>Date</description>
      <type>label</type>
      <id>200</id>
      <posX>210</posX>
      <posY>70</posY>
      <label>#date</label>
      <align>right</align>
      <font>font12</font>
      <textcolor>ff969696</textcolor>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
    <control>
      <description>Time</description>
      <type>label</type>
      <id>201</id>
      <posX>210</posX>
