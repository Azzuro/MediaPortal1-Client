<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>0</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <autohidetopbar>yes</autohidetopbar>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>1366</width>
      <height>768</height>
      <texture>background5.png</texture>
    </control>
    <control>
      <description>Menu</description>
      <type>menu</type>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="zoom" start="50,50" end="100,100" center="640,360" time="500">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" center="640,360" time="500">WindowClose</animation>
      <id>50</id>
      <posX>400</posX>
      <posY>10</posY>
      <width>439</width>
      <textcolor>ffffffff</textcolor>
      <textColorNoFocus>60ffffff</textColorNoFocus>
      <dimColor>80ffffff</dimColor>
      <buttonTextXOff>11</buttonTextXOff>
      <buttonTextYOff>60</buttonTextYOff>
      <buttonOffset>25</buttonOffset>
      <buttonFont>font16</buttonFont>
      <buttonHeight>136</buttonHeight>
      <spaceBetweenButtons>0</spaceBetweenButtons>
      <numberOfButtons>5</numberOfButtons>
