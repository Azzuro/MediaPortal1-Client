<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>3000</id>
  <defaultcontrol>2</defaultcontrol>
  <controls>
    <control>
       <description>play time label</description>
      <type>label</type>
      <id>2</id>
      <posX>107</posX>
      <posY>707</posY>
      <label>#currentplaytime</label>
      <align>left</align>
      <font>font12</font>
      <textcolor>ffffffff</textcolor>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
   <control>
      <description>play logo</description>
      <type>image</type>
      <id>3</id>
      <posX>28</posX>
      <posY>605</posY>
      <texture>logo_play.png</texture>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>Pause logo</description>
      <type>image</type>
      <id>4</id>
      <posX>28</posX>
      <posY>605</posY>
      <texture>logo_pause.png</texture>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>FF logo</description>
      <type>image</type>
      <id>7</id>
      <posX>28</posX>
      <posY>605</posY>
      <texture>logo_fastforward.png</texture>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>RW logo</description>
      <type>image</type>
      <id>8</id>
      <posX>28</posX>
      <posY>605</posY>
      <texture>logo_rewind.png</texture>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>scrolling info label</description>
      <type>fadelabel</type>
      <width>170</width>
      <height>40</height>
      <posX>170</posX>
      <posY>705</posY>
      <font>font13</font>
      <label>#Play.Current.Title\r#Play.Current.Genre\r#Play.Current.Year\r#Play.Current.Director</label>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
      <id>5</id>
    </control>
    <control>
      <description>video rectangle</description>
     <type>image</type>
		<id>0</id>
		<posX>48</posX>
		<posY>515</posY>
		<width>330</width>
		<height>195</height>
		  <texture flipY="true" diffuse="Thumb_Mask.png">playback_background.png</texture>
		 <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>1</id>
     <posX>100</posX>
			<posY>543</posY>
			<width>234</width>
			<height>131</height>
			<keepaspectratio>yes</keepaspectratio>
			<centered>yes</centered>
			 <action>18</action>
			<textureFocus>tv_green_border.png</textureFocus>
    </control>
  </controls>
</window>