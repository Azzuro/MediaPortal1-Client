<?xml version="1.0" standalone="yes"?>
<window>
	<id>35</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control>
			<description>BG</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>720</width>
			<height>576</height>
			<texture>dance back.png</texture>
		</control>
		<control>
			<type>label</type>
			<posX>40</posX>
			<posY>60</posY>
			<visible>Player.HasMedia</visible>
			<label>#Play.Current.Artist</label>
			<align>left</align>
			<font>font14</font>
			<textcolor>ffeaeaea</textcolor>
			<animation effect="fade" time="800" delay="250">WindowOpen</animation>
			<animation effect="fade" time="800" delay="250">WindowClose</animation>
		</control>
		<control>
			<type>label</type>
			<posX>40</posX>
			<posY>80</posY>
			<visible>Player.HasMedia</visible>
			<label>#Play.Current.Album</label>
			<align>left</align>
			<font>font13</font>
			<textcolor>ffd4d4d4</textcolor>
			<animation effect="fade" time="800" delay="250">WindowOpen</animation>
			<animation effect="fade" time="800" delay="250">WindowClose</animation>
		</control>
		<control>
			<type>label</type>
			<posX>40</posX>
			<posY>100</posY>
			<visible>Player.HasMedia</visible>
			<label>#Play.Current.Duration</label>
			<align>left</align>
			<font>font13</font>
			<textcolor>ffd4d4d4</textcolor>
			<animation effect="fade" time="800" delay="250">WindowOpen</animation>
			<animation effect="fade" time="800" delay="250">WindowClose</animation>
		</control>
		<control>

      <type>fadelabel</type>
			<posX>60</posX>
			<posY>530</posY>
			<visible>!Player.HasMedia</visible>
			<label>Santa Claus take a break
			 hrmm, what does he read there!
			 Play a song and come back,
			 see what happens here ;)</label>
			<width>230</width>
			<align>left</align>
			<font>font13</font>
			<textcolor>ffd4d4d4</textcolor>
			<animation effect="fade" time="800" delay="250">WindowOpen</animation>
			<animation effect="fade" time="800" delay="250">WindowClose</animation>
		</control>
		<control>
			<type>label</type>
			<posX>40</posX>
			<posY>120</posY>
			<visible>Player.HasMedia</visible>
			<label>#Play.Current.Title</label>
			<align>left</align>
			<font>font13</font>
			<textcolor>ffd4d4d4</textcolor>
			<animation effect="fade" time="800" delay="250">WindowOpen</animation>
			<animation effect="fade" time="800" delay="250">WindowClose</animation>
		</control>
		<control>
			<description>BG</description>
			<type>image</type>
			<id>1</id>
			<posX>200</posX>
			<posY>280</posY>
			<width>230</width>
			<height>168</height>
			<texture>Elche.png</texture>
		</control>
		<control>
			<description>BG</description>
			<type>image</type>
			<id>1</id>
			<posX>300</posX>
			<posY>410</posY>
			<width>210</width>
			<height>150</height>
			<visible>!player.playing</visible>
			<animation effect="fade" time="400" reversible="false">VisibleChange</animation>
			<texture>Santaplay.png</texture>
		</control>
		<control>
      		<type>multiimage</type>
      		<id>1</id>
     		<posX>120</posX>
			<posY>370</posY>
      		<width>400</width>
     		<height>194</height>
      		<imagepath>Nikolaus</imagepath>
      		<timeperimage>50</timeperimage>
      		<fadetime>10</fadetime>
      		<loop>no</loop>
      		<randomize>false</randomize>
      		<visible>Player.HasAudio</visible>
      		<animation effect="fade" time="10" reversible="false">VisibleChange</animation>
    	</control>
    	<control>
      		<type>multiimage</type>
      		<id>1</id>
     		<posX>120</posX>
			<posY>370</posY>
      		<width>400</width>
     		<height>194</height>
      		<imagepath>Nikolaus1</imagepath>
      		<timeperimage>50</timeperimage>
      		<fadetime>10</fadetime>
      		<loop>yes</loop>
      		<randomize>true</randomize>
      		<visible>Player.HasAudio + Player.playing</visible>
      		<animation effect="fade" time="10" delay="4500"  reversible="false">WindowOpen</animation>
    	</control>

		<control>
			<description>music logo</description>
			<type>image</type>
			<id>1</id>
			<posX>629</posX>
			<posY>332</posY>
			<width>55</width>
			<height>85</height>
			<keepaspectratio>no</keepaspectratio>
			<centered>yes</centered>
			<visible>Player.HasMedia</visible>
			<texture>#Play.Current.Thumb</texture>
			<colordiffuse>90ffffff</colordiffuse>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="500">WindowClose</animation>
		</control>

		<control>
			<type>image</type>
			<id>1</id>
			<posX>144</posX>
			<posY>416</posY>
			<texture>-</texture>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="500">WindowClose</animation>
		</control>
		<control>
			<type>image</type>
			<id>1</id>
			<posX>60</posX>
			<posY>20</posY>
			<texture>-</texture>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="500">WindowClose</animation>
		</control>
	</controls>
</window>