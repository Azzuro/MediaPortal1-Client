<window>
	<id>790</id>
	<defaultcontrol>3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<define>#header.label:My DVDS</define>
	<define>#header.text:videos</define>
	<define>#header.hover:hover_my videos.png</define>
	<define>#moviename:#selecteditem</define>
	<define>#selecteditem:-</define>
	<controls>
		<import>common.window.tv.xml</import>
		<control>
			<type>group</type>
			<description>group element</description>
			<animation>FlyInFromLeft</animation>
			<layout>StackLayout(2)</layout>
			<posX>60</posX>
			<posY>97</posY>
			<control>
				<description>Previous button</description>
				<type>button</type>
				<id>3</id>
				<label>210</label>
				<onleft>5</onleft>
				<onright>20</onright>
				<onup>6</onup>
				<ondown>6</ondown>
			</control>
			<control>
				<description>Play DVD</description>
				<type>button</type>
				<id>6</id>
				<label>341</label>
				<onleft>5</onleft>
				<onright>10</onright>
				<onup>3</onup>
				<ondown>20</ondown>
			</control>
		</control>
		<control>
  			<description>DVD Jacket image</description> 
  			<type>image</type> 
  			<id>1000</id> 
  			<posX>400</posX> 
  			<posY>97</posY>
			<width>140</width>
			<height>200</height> 
  			<texture>-</texture> 
  			<visible>yes</visible>
			<keepaspectratio>yes</keepaspectratio> 
  		</control>
		<control>
			<description>Selected DVD</description>
			<type>fadelabel</type>
			<id>1</id>
			<posX>560</posX>
			<posY>97</posY>
			<width>400</width>
			<label>#moviename</label>
			<font>font24</font>
			<align>left</align>
			<textcolor>99ffffff</textcolor>
		</control>
		<control>
			<description>DVD Genre</description>
			<type>label</type>
			<id>1</id>
			<posX>560</posX>
			<posY>150</posY>
			<label>#DVDgenre</label>
			<font>font14</font>
			<textcolor>ffffffff</textcolor>
		</control>
		<control>
			<description>DVD Year</description>
			<type>label</type>
			<id>1</id>
			<posX>560</posX>
			<posY>180</posY>
			<label>#DVDyear</label>
			<font>font14</font>
			<textcolor>ffffffff</textcolor>
		</control>
		<control>
			<description>DVD Changer Slot Number</description>
			<type>fadelabel</type>
			<id>1</id>
			<posX>560</posX>
			<posY>210</posY>
			<width>500</width>
			<label>#slotnumber</label>
			<font>font14</font>
			<textcolor>ffffffff</textcolor>
		</control>
		<control>
			<description>DVD details</description>
			<type>textbox</type>
			<id>20</id>
			<posX>400</posX>
			<posY>320</posY>
			<width>800</width>
			<height>370</height>
			<onleft>11</onleft>
			<onright>11</onright>
			<onup>2</onup>
			<ondown>2</ondown>
		</control>	
    	</controls>
</window>