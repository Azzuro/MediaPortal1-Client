<window>
<id>4711</id>
<defaultcontrol>10</defaultcontrol>
<allowoverlay>yes</allowoverlay>
	<define>#header.label:Wikipedia</define>
	<define>#header.text:wikipedia</define>
	<define>#header.hover:hover_wikipedia.png</define>
    <controls>
<!--	<import>common.window.default.xml</import> -->
    <control>
        <type>image</type>
        <description>Background</description>
        <id>1</id>
        <posX>0</posX>
        <posY>0</posY>
        <width>1280</width>
        <height>720</height>
		<texture>background.png</texture>
    </control>
    <control>
        <type>image</type>
        <description>wikipedia text logo</description>
        <id>2</id>
        <posX>60</posX>
        <posY>20</posY>
        <texture>wikipedia_logo.png</texture>
    </control>
    <control>
        <type>image</type>
        <description>Reading buddy</description>
        <id>3</id>
        <posX>75</posX>
        <posY>370</posY>
        <texture>hover_wikipedia.png</texture>
    </control>
    <control>
        <type>label</type>
        <description>Article title/searchterm</description>
        <id>4</id>
        <posX>250</posX>
        <posY>70</posY>
        <label>Wikipedia</label>
        <font>font16</font>
        <align>right</align>
    </control>
	<control>
        <type>label</type>
        <description>Image description</description>
        <id>5</id>
        <posX>250</posX>
        <posY>70</posY>
        <label>Wikipedia</label>
        <font>font16</font>
        <align>right</align>
		<visible>no</visible>		
    </control>
	<control>
		<type>group</type>
		<description>group element</description>
		<animation>FlyInFromLeft</animation>
		<layout>StackLayout(2)</layout>
    		<control>
         		<type>button</type>
         		<description>Search Button</description>
         		<id>10</id>
         		<onleft>20</onleft>
         		<onright>20</onright>
         		<onup>14</onup>
         		<ondown>11</ondown>
         		<label>137</label>
      		</control>
      		<control>
         		<type>button</type>
         		<description>Select local Wikipedia Button</description>
         		<id>11</id>
         		<onleft>20</onleft>
         		<onright>20</onright>
         		<onup>10</onup>
         		<ondown>14</ondown>
         		<label>200025</label>
      		</control>
		<control>
        		<type>button</type>
        		<description>Back to the text (when viewing an image)</description>
        		<id>14</id>
        		<onleft>20</onleft>
        		<onright>20</onright>
        		<onup>11</onup>
        		<ondown>12</ondown>
			<label>2514</label>
			<visible>no</visible>
    		</control>
		<control>
        		<type>button</type>
        		<description>Links Button</description>
        		<id>12</id>
        		<onleft>20</onleft>
        		<onright>20</onright>
        		<onup>14</onup>
        		<ondown>13</ondown>
        		<label>2511</label>
    		</control>
    		<control>
        		<type>button</type>
        		<description>Images Button</description>
        		<id>13</id>
        		<onleft>20</onleft>
        		<onright>20</onright>
        		<onup>12</onup>
        		<ondown>10</ondown>
        		<label>2515</label>
    		</control>
	</control>
    	<control>
		<description>Here is the article text displayed</description>
        	<type>textbox</type>
        	<id>20</id>
		<posX>400</posX>
		<posY>97</posY>
		<width>820</width>
		<height>576</height>
		<spinWidth>26</spinWidth>
		<spinHeight>27</spinHeight>
		<spinPosX>1110</spinPosX>
		<spinPosY>639</spinPosY>
        	<image>icon-folder.png</image>
        	<text></text>
      	</control>
	<control>		
		<description>Article Image</description>
		<type>image</type>
		<id>25</id>
		<posX>400</posX>
		<posY>97</posY>
		<width>820</width>
		<height>576</height>
		<texture></texture>
		<visible>no</visible>
		<colorkey>00000000</colorkey>
		<colordiffuse>White</colordiffuse>
		<filtered>yes</filtered>
		<centered>yes</centered>
		<keepaspectratio>yes</keepaspectratio>
	</control>	
</controls>
</window>