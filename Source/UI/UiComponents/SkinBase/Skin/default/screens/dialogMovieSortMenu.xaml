<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\simple_dialog_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[movies.5]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" RegistrationLocation="Movies" Id="Model"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{StaticResource DataContext}" Path="SortOptions" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Command -->
    <ResourceWrapper x:Key="Execute_Command_Stencil">
      <CommandStencil Source="{StaticResource DataContext}" Path="Sort"/>
    </ResourceWrapper>

  </Include.Resources>
</Include>
