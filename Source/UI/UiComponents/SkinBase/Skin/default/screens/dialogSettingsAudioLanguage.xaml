<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\simple_dialog_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[playback.4]"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{Service Players}" Path="Settings.DefaultAudioLanguages" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Command -->
    <ResourceWrapper x:Key="Execute_Command_Stencil">
      <CommandStencil Source="{Model RegistrationLocation=Settings,Id=VideoSettings}" Path="Players.Settings.SetDefaultAudioLanguage"/>
    </ResourceWrapper>

  </Include.Resources>
</Include>
