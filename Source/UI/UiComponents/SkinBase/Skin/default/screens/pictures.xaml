<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[pictures.3]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" RegistrationLocation="Pictures" Id="PictureModel"/>

    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element">
      <ListView DataContext="{Binding Source={StaticResource DataContext}}"
          Margin="10,0,10,0" Style="{ThemeResource ContentsMenuListViewStyle}" ItemsSource="{Binding Pictures}"
          SelectionChanged="{CommandStencil Path=OnSelectionChange}">
        <ListView.Resources>
          <Command x:Key="Menu_Command" Source="{StaticResource DataContext}" Path="Select" Parameters="{LateBoundValue Value={Binding}}"/>
        </ListView.Resources>
      </ListView>
    </ResourceWrapper>

  </Include.Resources>
</Include>
