    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>260</posX>
      <posY>530</posY>
      <label>#selectedindex/#itemcount #currentmodule</label>
      <align>left</align>
      <textcolor>White</textcolor>
	  <visible>string.equals(#selectedindex)+string.equals(#itemcount)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>660</posX>
      <posY>70</posY>
      <width>400</width>
      <label>#selecteditem</label>
      <font>font14</font>
      <align>right</align>
      <textcolor>White</textcolor>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>image</type>
      <id>1</id>
      <posX>77</posX>
      <posY>400</posY>
      <width>161</width>
      <height>158</height>
      <texture>#header.hover</texture>
      <visible>!videoplayer.usingoverlays</visible>
      <animation effect="slide" time="350" end="-300,0">hidden</animation>
        <animation effect="slide" time="450" start="-300,0">visible</animation>
    </control>
  </controls>
</window>