<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>601</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:646</define>
  <define>#header.image:television_logo.png</define>
  <define>#header.hover:-</define>
  <controls>
    <import>common.time.xml</import>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <width>720</width>
      <height>576</height>
    </control>
    <control>
      <type>image</type>
      <id>1</id>
      <posX>60</posX>
      <posY>10</posY>
      <texture>television_logo.png</texture>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Scheduler Text Label</description>
      <type>label</type>
      <id>1</id>
      <posX>268</posX>
      <posY>77</posY>
      <width>400</width>
      <label>646</label>
      <align>left</align>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>12</id>
      <posX>260</posX>
      <posY>530</posY>
      <label>#selectedindex/#itemcount #itemtype</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <visible>string.equals(#selectedindex)+string.equals(#itemcount)</visible>
    </control>
    <control>
      <type>group</type>
      <description>group element</description>
      <posX>40</posX>
      <posY>97</posY>
      <layout>StackLayout</layout>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <control>
        <type>sortbutton</type>
        <id>2</id>
        <label>620</label>
        <onleft>10</onleft>
        <onright>10</onright>
        <onup>17</onup>
        <ondown>11</ondown>
      </control>
      <control>
        <description>Toggle button series</description>
        <type>togglebutton</type>
        <id>11</id>
        <label>3019</label>
        <onleft>10</onleft>
        <onright>10</onright>
        <onup>2</onup>
        <ondown>6</ondown>
      </control>
      <control>
        <description>New button</description>
        <type>button</type>
        <id>6</id>
        <label>617</label>
        <onleft>10</onleft>
        <onright>10</onright>
        <onup>11</onup>
        <ondown>7</ondown>
      </control>
      <control>
        <description>Cleanup</description>
        <type>button</type>
        <id>7</id>
        <label>624</label>
        <onleft>10</onleft>
        <onright>10</onright>
        <onup>6</onup>
        <ondown>8</ondown>
      </control>
      <control>
        <description>Priorities</description>
        <type>button</type>
        <id>8</id>
        <label>877</label>
        <hyperlink>607</hyperlink>
        <onleft>10</onleft>
        <onright>10</onright>
        <onup>7</onup>
        <ondown>9</ondown>
      </control>
      <control>
        <description>Conflicts</description>
        <type>button</type>
        <id>9</id>
        <label>892</label>
        <hyperlink>608</hyperlink>
        <onleft>10</onleft>
        <onright>10</onright>
        <onup>8</onup>
        <ondown>99</ondown>
      </control>
    </control>
    <control>
      <type>group</type>
      <description>group element</description>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <control>
        <description>scheduler recordings listcontrol</description>
        <type>listcontrol</type>
        <id>10</id>
        <posX>260</posX>
        <posY>97</posY>
        <height>310</height>
        <width>425</width>
        <textXOff>0</textXOff>
        <textYOff>2</textYOff>
        <textXOff2>420</textXOff2>
        <textYOff2>25</textYOff2>
        <textXOff3>80</textXOff3>
        <textYOff3>27</textYOff3>
        <IconXOff>5</IconXOff>
        <IconYOff>4</IconYOff>
        <PinIconWidth>20</PinIconWidth>
        <PinIconHeight>15</PinIconHeight>
        <PinIconXOff>50</PinIconXOff>
        <PinIconYOff>29</PinIconYOff>
        <spinWidth>26</spinWidth>
        <spinHeight>27</spinHeight>
        <spinPosX>625</spinPosX>
        <spinPosY>530</spinPosY>
        <itemWidth>40</itemWidth>
        <itemHeight>40</itemHeight>
        <textureFocus>album_background_focus.png</textureFocus>
        <textureNoFocus>album_background_nofocus.png</textureNoFocus>
        <spaceBetweenItems>4</spaceBetweenItems>
        <keepaspectratio>yes</keepaspectratio>
        <textureHeight>50</textureHeight>
        <font2>font10</font2>
        <font3>font10</font3>
        <onleft>2</onleft>
        <onright>2</onright>
        <onup>2</onup>
        <ondown>2</ondown>
      </control>
    </control>
    <control>
      <type>image</type>
      <posX>260</posX>
      <posY>399</posY>
      <width>45</width>
      <height>45</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <zoom>no</zoom>
      <texture>#selectedthumb</texture>
    </control>
    <control>
      <description>channel</description>
      <id>17</id>
      <type>fadelabel</type>
      <posX>310</posX>
      <posY>394</posY>
      <width>375</width>
      <align>left</align>
      <textcolor>FFB2D4F5</textcolor>
      <label>#TV.Scheduled.Channel</label>
      <font>font12</font>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Current program time</description>
      <id>14</id>
      <type>label</type>
      <posX>310</posX>
      <posY>411</posY>
      <width>180</width>
      <label>#TV.Scheduled.Time</label>
      <align>left</align>
      <font>font12</font>
      <textcolor>FFB2D4F5</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Current program genre</description>
      <type>label</type>
      <id>0</id>
      <posX>683</posX>
      <posY>411</posY>
      <width>195</width>
      <label>#TV.Scheduled.Genre</label>
      <align>right</align>
      <font>font12</font>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <visible>!string.equals(#TV.Scheduled.Genre,-)</visible>
    </control>
    <control>
      <description>Current program title</description>
      <type>fadelabel</type>
      <id>13</id>
      <posX>310</posX>
      <posY>428</posY>
      <width>375</width>
      <label>#TV.Scheduled.Title</label>
      <font>font12</font>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Description1</description>
      <type>textboxscrollup</type>
      <id>15</id>
      <posX>260</posX>
      <posY>455</posY>
      <height>68</height>
      <width>425</width>
      <label>#TV.Scheduled.Description</label>
      <font>font11</font>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
  </controls>
</window>
