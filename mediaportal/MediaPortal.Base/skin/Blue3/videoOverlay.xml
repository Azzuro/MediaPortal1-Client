<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--version="1.0" encoding="utf-8" standalone="yes"-->
<window>
  <id>3000</id>
  <defaultcontrol>2</defaultcontrol>
  <controls>
    <control>
      <description>play time label</description>
      <type>label</type>
      <id>2</id>
      <posX>219</posX>
      <posY>481</posY>
      <label>#currentplaytime</label>
      <align>left</align>
      <font>font60</font>
      <textcolor>20ffffff</textcolor>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
    </control>
    <control>
      <description>play logo</description>
      <type>image</type>
      <id>3</id>
      <posX>169</posX>
      <posY>472</posY>
      <width>29</width>
      <height>41</height>
      <texture>logo_play.png</texture>
      <visible>player.playing</visible>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
    </control>
    <control>
      <description>Pause logo</description>
      <type>image</type>
      <id>4</id>
      <posX>169</posX>
      <posY>472</posY>
      <width>29</width>
      <height>41</height>
      <texture>logo_pause.png</texture>
      <visible>player.paused</visible>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
    </control>
    <control>
      <description>FF logo</description>
      <type>image</type>
      <id>7</id>
      <posX>169</posX>
      <posY>472</posY>
      <width>29</width>
      <height>41</height>
      <texture>logo_fastforward.png</texture>
      <visible>player.forwarding</visible>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
    </control>
    <control>
      <description>RW logo</description>
      <type>image</type>
      <id>8</id>
      <posX>169</posX>
      <posY>472</posY>
      <width>29</width>
      <height>41</height>
      <texture>logo_rewind.png</texture>
      <visible>player.rewinding</visible>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
    </control>
    <control>
      <description>scrolling info label</description>
      <type>fadelabel</type>
      <width>139</width>
      <height>29</height>
      <posX>43</posX>
      <posY>546</posY>
      <font>font12</font>
      <label>#Play.Current.Title\r#Play.Current.Genre\r#Play.Current.Year\r#Play.Current.Director</label>
      <textcolor>EFFFFFFF</textcolor>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
      <id>5</id>
    </control>
    <control>
      <description>video rectangle</description>
      <type>image</type>
      <id>0</id>
      <posX>43</posX>
      <posY>442</posY>
      <width>123</width>
      <height>99</height>
      <texture>Picture_cover.png</texture>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
    </control>
    <control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>1</id>
      <posX>48</posX>
      <posY>446</posY>
      <width>114</width>
      <height>92</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <action>18</action>
      <textureFocus>tv_green_border.png</textureFocus>
      <animation effect="fade" time="150">WindowClose</animation>
      <animation effect="fade" time="150">WindowOpen</animation>
    </control>
  </controls>
</window>