    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>462</posX>
      <posY>682</posY>
      <label>#selectedindex/#itemcount #currentmodule</label>
      <align>left</align>
      <textcolor>White</textcolor>
      <font>font10</font>
	  <visible>string.equals(#selectedindex)+string.equals(#itemcount)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>1244</posX>
      <posY>67</posY>
      <width>711</width>
      <label>#selecteditem</label>
      <font>font13</font>
      <align>right</align>
      <textcolor>White</textcolor>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>image</type>
      <id>1</id>
      <posX>136</posX>
      <posY>500</posY>
      <width>252</width>
      <height>227</height>
      <texture>#header.hover</texture>
      <visible>!videoplayer.usingoverlays</visible>
      <animation effect="slide" time="250" end="-300,0">hidden</animation>
      <animation effect="slide" time="250" start="-300,0">visible</animation>
    </control>
