<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>group element</description>
      <type>group</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="0,-300">WindowOpen</animation>
      <animation effect="slide" time="250" end="800,0">WindowClose</animation>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <scrollOffset>2</scrollOffset>
        </control>
        <control>
          <description>album view listcontrol</description>
          <type>listcontrol</type>
          <subtype>album</subtype>
          <id>50</id>
          <font>font16</font>
          <font2>font13</font2>
          <selectedColor>FFFF6600</selectedColor>
          <textcolor>white</textcolor>
          <textalign>center</textalign>
          <selectedColor2>FFFF6600</selectedColor2>
          <textcolor2>FFB2D4F5</textcolor2>
          <textXOff>30</textXOff>
          <textYOff>32</textYOff>
          <textXOff2>700</textXOff2>
          <textYOff2>80</textYOff2>
          <itemWidth>102</itemWidth>
          <itemHeight>102</itemHeight>
          <spaceBetweenItems>5</spaceBetweenItems>
          <textureHeight>132</textureHeight>
          <scrollOffset>1</scrollOffset>
          <onleft>2</onleft>
          <onright>50</onright>
          <onup>2</onup>
          <ondown>2</ondown>
        </control>
        <control>
          <description>Thumbnail Panel</description>
          <type>thumbnailpanel</type>
          <id>50</id>
          <scrollOffset>1</scrollOffset>
        </control>
        <control>
          <description>Filmstrip view</description>
          <type>filmstrip</type>
          <id>50</id>
          <onup>2</onup>
          <!-- needs fine tuning, these values are from references.xml
        <itemWidth>120</itemWidth>
        <itemHeight>136</itemHeight>
        <textureWidth>112</textureWidth>
        <textureHeight>112</textureHeight>
        <thumbWidth>85</thumbWidth>
        <thumbHeight>85</thumbHeight>
        <thumbPosX>13</thumbPosX>
        <thumbPosY>13</thumbPosY>
          -->
          <imageFolder>icon_empty_nofocus_music.png</imageFolder>
          <imageFolderFocus>icon_empty_focus_music.png</imageFolderFocus>
          <frame>icon_empty_nofocus_music.png</frame>
          <frameFocus>-</frameFocus>
          <!-- needs fine tuning, these values are from references.xml
        <backgroundx>672</backgroundx>
        <backgroundy>126</backgroundy>
        <backgroundwidth>427</backgroundwidth>
        <backgroundheight>446</backgroundheight>
          -->
          <thumbs flipY="true" diffuse="Thumb_Mask.png"/>
          <InfoImage flipY="true" diffuse="Thumb_Mask.png"/>
          <showFrame>yes</showFrame>
          <showFolder>yes</showFolder>
          <showBackGround>no</showBackGround>
          <showInfoImage>yes</showInfoImage>
          <enableFocusZoom>no</enableFocusZoom>
          <thumbAnimation effect="zoom" start="100,100" end="150,150" time="250">focus</thumbAnimation>
          <thumbAnimation effect="zoom" start="150,150" end="100,100" time="150">unfocus</thumbAnimation>
        </control>
        <control>
          <description>playlist listcontrol</description>
          <type>playlistcontrol</type>
          <id>50</id>
          <scrollOffset>2</scrollOffset>
        </control>
      </control>
    </control>
  </controls>
</window>
