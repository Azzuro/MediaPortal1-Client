<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <!-- these elements need condition visibility for OSD IS VISIBLE -->
    <control>
      <description>osd background on top</description>
      <type>image</type>
      <posX>21</posX>
      <posY>20</posY>
      <width>679</width>
      <height>40</height>
      <texture>osd_bg_top.png</texture>
      <visible>window.isosdvisible|player.paused|player.rewinding|player.forwarding|Control.IsVisible(10)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>progress bar background</description>
      <type>image</type>
      <posX>109</posX>
      <posY>29</posY>
      <width>404</width>
      <height>20</height>
      <texture>osd_progress_background.png</texture>
      <visible>window.isosdvisible|player.paused|player.rewinding|player.forwarding|Control.IsVisible(10)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>progress bar</description>
      <type>progress</type>
      <id>1</id>
      <posX>99</posX>
      <posY>30</posY>
      <width>401</width>
      <height>20</height>
      <label>#play.progressbar.percentage</label>
      <visible>window.isosdvisible|player.paused|player.rewinding|player.forwarding|Control.IsVisible(10)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>Start Time Info</description>
      <type>label</type>
      <posX>70</posX>
      <posY>40</posY>
      <label>#play.progressbar.currentplaytime</label>
      <align>center</align>
      <font>font14</font>
      <textcolor>white</textcolor>
      <visible>window.isosdvisible|player.paused|player.rewinding|player.forwarding|Control.IsVisible(10)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>End Time Info</description>
      <type>label</type>
      <posX>560</posX>
      <posY>40</posY>
      <label>#play.progressbar.currentremaining</label>
      <align>center</align>
      <font>font14</font>
      <textcolor>white</textcolor>
      <visible>window.isosdvisible|player.paused|player.rewinding|player.forwarding|Control.IsVisible(10)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    
    
    <control>
      <description>Current Time Info</description>
      <type>label</type>
      <posX>650</posX>
      <posY>40</posY>
      <label>#time</label>
      <align>center</align>
      <font>font14</font>
      <textcolor>black</textcolor>
      <visible>window.isosdvisible+!player.paused+!player.rewinding+!player.forwarding+!Control.IsVisible(10)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <!-- END OF these elements need condition visibility for OSD IS VISIBLE -->
