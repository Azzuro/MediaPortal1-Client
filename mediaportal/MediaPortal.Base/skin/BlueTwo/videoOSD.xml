<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>2901</id>
  <defaultcontrol>213</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#play.progressbar.percentage:#percentage</define>
  <define>#play.progressbar.currentplaytime:#currentplaytime</define>
  <define>#play.progressbar.currentremaining:#currentremaining</define>
  <define>#play.osd.background:osd_bg_video.png</define>
  <controls>
    // progressbar should be removed if we get a new conditional visibility statement which represents _isOsdVisible
    <import>common.play.progressbar.xml</import>
    <import>common.play.osd.xml</import>
    <control>
      <description>TV Logo</description>
      <type>image</type>
      <id>102</id>
      <posX>40</posX>
      <posY>350</posY>
      <width>50</width>
      <height>68</height>
      <texture>#Play.Current.Thumb</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>Movie Name</description>
      <id>36</id>
      <type>fadelabel</type>
      <width>290</width>
      <height>30</height>
      <posX>110</posX>
      <posY>350</posY>
      <font>font13</font>
      <label>#Play.Current.Title</label>
      <textcolor>FFB2D4F5</textcolor>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>Plot</description>
      <type>textboxscrollup</type>
      <posX>110</posX>
      <posY>375</posY>
      <width>290</width>
      <height>170</height>
      <label>#Play.Current.Plot</label>
      <font>font13</font>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
  </controls>
</window>