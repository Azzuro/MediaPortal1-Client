      <textcolor>FF000000</textcolor>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>End Time Info</description>
      <type>label</type>
      <posX>455</posX>
      <posY>358</posY>
      <label>#currentremaining</label>
      <align>left</align>
      <font>font14</font>
