        <type>image</type>
        <posY>0</posY>
        <width>163</width>
        <height>614</height>
        <texture>menu_slide_background.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="10" start="-300,0">visible</animation>
        <animation effect="slide" time="10" end="-300,0">hidden</animation>
      </control>
      <control>
        <type>group</type>
        <description>group element</description>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="10" end="-300,0">hidden</animation>
        <animation effect="slide" time="10" start="-300,0">visible</animation>
        <posX>11</posX>
        <posY>64</posY>
        <layout>StackLayout</layout>
        <control>
          <description>Refresh Button</description>
          <type>button</type>
          <id>2</id>
          <label />
          <onleft>2</onleft>
          <onright>50</onright>
          <onup>17</onup>
          <ondown>4</ondown>
        </control>
        <control>
          <description>RSS feed select</description>
          <type>button</type>
          <id>4</id>
          <label />
          <onleft>4</onleft>
          <onright>50</onright>
          <onup>2</onup>
          <ondown>5</ondown>
        </control>
        <control>
          <description>All feeds</description>
          <type>button</type>
          <id>5</id>
          <label />
          <onleft>5</onleft>
          <onright>50</onright>
          <onup>4</onup>
          <ondown>2</ondown>
        </control>
      </control>
    </control>
    <control>
      <type>group</type>
