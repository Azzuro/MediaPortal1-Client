<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<window>
  <id>34</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <disabletopbar>yes</disabletopbar>
  <define>#selecteditem:</define>
  <define>#selectedindex:</define>
  <define>#indexcount:</define>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>720</width>
      <height>576</height>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>Clock</description>
      <type>image</type>
      <id>0</id>
      <posX>340</posX>
      <posY>15</posY>
      <width>40</width>
      <height>40</height>
      <texture>clock.png</texture>
      <visible>yes</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>340</posX>
      <posY>16</posY>
      <width>40</width>
      <height>40</height>
      <texture>clockHandMinute.png</texture>
      <animation effect="rotate" clockhandle="minute" time="150" condition="true" loop="true">Conditional</animation>
      <visible>yes</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>340</posX>
      <posY>16</posY>
      <width>40</width>
      <height>40</height>
      <texture>clockHandHour.png</texture>
      <animation effect="rotate" clockhandle="hour" time="150" condition="true" loop="true">Conditional</animation>
      <visible>yes</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>340</posX>
      <posY>16</posY>
      <width>40</width>
      <height>40</height>
      <texture>clockHandSecond.png</texture>
      <animation effect="rotate" clockhandle="second" time="150" condition="true" loop="true">Conditional</animation>
      <visible>yes</visible>
    </control>
    <control>
      <description>Menu</description>
      <type>menu</type>
      
      
      <animation effect="zoom" start="20,20" end="100,100" center="640,360" time="150">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" center="640,360" time="150">WindowClose</animation>
      <id>50</id>
      <posX>378</posX>
      <posY>128</posY>
      <width>281</width>
      <textcolor>ffffffff</textcolor>
      <textColorNoFocus>ffa9d0f7</textColorNoFocus>
      <dimColor>80ffffff</dimColor>
      <buttonTextXOff>38</buttonTextXOff>
      <buttonTextYOff>8</buttonTextYOff>
      <buttonOffset>22</buttonOffset>
      <buttonFont>font18</buttonFont>
      <buttonHeight>61</buttonHeight>
      <spaceBetweenButtons>0</spaceBetweenButtons>
      <numberOfButtons>5</numberOfButtons>
      <textureButtonFocus>hp_selectionbar_focus.png</textureButtonFocus>
      <textureButtonNoFocus>-</textureButtonNoFocus>
      <hoverX>79</hoverX>
      <hoverY>180</hoverY>
      <hoverWidth>213</hoverWidth>
      <hoverHeight>363</hoverHeight>
      <hoverKeepAspectratio>yes</hoverKeepAspectratio>
      <scrollTime>120</scrollTime>
      <scrollTimeMin>50</scrollTimeMin>
      <textureBackground>emtpy.png</textureBackground>
      <onright>10</onright>
      <onleft>12</onleft>
    </control>
    <!-- TOPBAR Buttons -->
    <control>
      <description>basichome button button</description>
      <type>button</type>
      
      <animation effect="zoom" start="20,20" end="100,100" time="150">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="150">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>10</id>
      <posX>398</posX>
      <posY>80</posY>
      <width>52</width>
      <height>52</height>
      <textureFocus>Basic_focus.png</textureFocus>
      <textureNoFocus>Basic_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>115</action>
      <onleft>13</onleft>
      <onright>11</onright>
      <onup>10</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>videowallpaper button</description>
      <type>button</type>
      
      <animation effect="zoom" start="20,20" end="100,100" time="150">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="150">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>11</id>
      <posX>458</posX>
      <posY>80</posY>
      <width>52</width>
      <height>52</height>
      <textureFocus>button_tvdesktop_focus.png</textureFocus>
      <textureNoFocus>button_tvdesktop_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>101</action>
      <onleft>10</onleft>
      <onright>12</onright>
      <onup>11</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>Exit button</description>
      <type>button</type>
      
      <animation effect="zoom" start="20,20" end="100,100" time="150">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="150">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>12</id>
      <posX>518</posX>
      <posY>80</posY>
      <width>52</width>
      <height>52</height>
      <textureFocus>button_close_focus.png</textureFocus>
      <textureNoFocus>button_close_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>97</action>
      <onleft>11</onleft>
      <onright>13</onright>
      <onup>12</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>Shutdown button</description>
      <type>button</type>
      
      <animation effect="zoom" start="20,20" end="100,100" time="150">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="150">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>13</id>
      <posX>578</posX>
      <posY>80</posY>
      <width>52</width>
      <height>52</height>
      <textureFocus>button_shutdown_focus.png</textureFocus>
      <textureNoFocus>button_shutdown_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>99</action>
      <onleft>12</onleft>
      <onright>10</onright>
      <onup>13</onup>
      <ondown>50</ondown>
    </control>
  </controls>
</window>
