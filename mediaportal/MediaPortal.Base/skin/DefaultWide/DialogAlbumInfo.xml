<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>2001</id>
  <defaultcontrol>5</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#selecteditem:</define>
  <define>#useSelectedFanart:Yes</define>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>0</id>
      <width>1280</width>
      <height>720</height>
    </control>
    <import>common.music.fanart.xml</import>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>30</posY>
      <width>1280</width>
      <height>720</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <description>Overlay artist info</description>
      <id>0</id>
      <type>image</type>
      <posX>265</posX>
      <posY>156</posY>
      <width>720</width>
      <height>465</height>
      <texture mask="cdthumbmask.png">black.png</texture>
      <colordiffuse>60ffffff</colordiffuse>
    </control>
    <control Style="NoShadow">
      <description>Album value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>0</posX>
      <posY>93</posY>
      <width>1280</width>
      <align>center</align>
      <label>#AlbumInfo.Title</label>
      <font>font16</font>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Artist</description>
      <type>label</type>
      <id>0</id>
      <posX>285</posX>
      <posY>180</posY>
      <label>171</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Date of Release</description>
      <type>label</type>
      <id>0</id>
      <posX>285</posX>
      <posY>205</posY>
      <label>201</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Rating</description>
      <type>label</type>
      <id>0</id>
      <posX>285</posX>
      <posY>230</posY>
      <label>173</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Genre</description>
      <type>label</type>
      <id>0</id>
      <posX>285</posX>
      <posY>255</posY>
      <label>174</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Tones</description>
      <type>label</type>
      <id>0</id>
      <posX>285</posX>
      <posY>280</posY>
      <label>175</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Styles</description>
      <type>label</type>
      <id>0</id>
      <posX>285</posX>
      <posY>305</posY>
      <label>176</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Artist value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>485</posX>
      <posY>180</posY>
      <label>#AlbumInfo.Artist</label>
      <font>font13</font>
      <textcolor>ivory</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Date of Release value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>485</posX>
      <posY>205</posY>
      <label>#AlbumInfo.Year</label>
      <font>font13</font>
      <textcolor>ivory</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Rating value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>485</posX>
      <posY>230</posY>
      <label>#AlbumInfo.Rating</label>
      <font>font13</font>
      <textcolor>ivory</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Genre value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>485</posX>
      <posY>255</posY>
      <label>#AlbumInfo.Genre</label>
      <font>font13</font>
      <textcolor>ivory</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Tones value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>485</posX>
      <posY>280</posY>
      <width>480</width>
      <label>#AlbumInfo.Tones</label>
      <font>font13</font>
      <textcolor>ivory</textcolor>
    </control>
    <control Style="NoShadow">
      <description>Styles value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>485</posX>
      <posY>305</posY>
      <width>480</width>
      <label>#AlbumInfo.Styles</label>
      <font>font13</font>
      <textcolor>ivory</textcolor>
    </control>
    <control Style="NoShadow">
      <description>textarea</description>
      <type>textbox</type>
      <id>0</id>
      <posX>285</posX>
      <posY>350</posY>
      <width>680</width>
      <height>250</height>
      <onleft>5</onleft>
      <onright>5</onright>
      <onup>5</onup>
      <ondown>5</ondown>
      <font>font12</font>
      <spinPosX>880</spinPosX>
      <spinPosY>590</spinPosY>
    </control>
    <control>
      <id>0</id>
      <type>image</type>
      <posX>1000</posX>
      <posY>180</posY>
      <width>240</width>
      <height>240</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <texture mask="cdthumbmask.png">missing_coverart.png</texture>
      <zoom>yes</zoom>
    </control>
    <control>
      <description>Album art (Thumb)</description>
      <type>image</type>
      <id>0</id>
      <posX>1000</posX>
      <posY>180</posY>
      <width>240</width>
      <height>240</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <texture mask="picturethumbmask.png">#AlbumInfo.Thumb</texture>
      <zoom>yes</zoom>
      <colorkey>FFFFFFFF</colorkey>
    </control>
    <control>
      <description>CD-Case</description>
      <type>image</type>
      <id>0</id>
      <posX>1000</posX>
      <posY>180</posY>
      <width>240</width>
      <height>240</height>
      <texture>cdthumbframe.png</texture>
    </control>    
    <control Style="NoShadow">
      <description>textarea</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>285</posX>
      <posY>350</posY>
      <width>680</width>
      <height>250</height>      
      <onleft>5</onleft>
      <onright>5</onright>
      <onup>5</onup>
      <ondown>5</ondown>
      <font>font13</font>
      <spinPosX>880</spinPosX>
      <spinPosY>590</spinPosY>
	  <label>#AlbumInfo.Review</label>
      <visible>skin.hassetting(#AlbumInfo.ShowTracks)</visible>
    </control>
    <control Style="NoShadow">
      <description>textarea</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>285</posX>
      <posY>350</posY>
      <width>680</width>
      <height>250</height>      
      <onleft>5</onleft>
      <onright>5</onright>
      <onup>5</onup>
      <ondown>5</ondown>
      <font>font13</font>
      <spinPosX>880</spinPosX>
      <spinPosY>590</spinPosY>
	  <label>#AlbumInfo.Tracks</label>
      <visible>!skin.hassetting(#AlbumInfo.ShowTracks)</visible>
    </control>	
    <control Style="NoShadow">
      <description>Tracks/Review</description>
      <type>button</type>
      <id>5</id>
      <posX>50</posX>
      <posY>180</posY>
      <width>200</width>
      <label>182</label>
      <onleft>4</onleft>
      <onright>4</onright>
      <onup>6</onup>
      <ondown>6</ondown>
      <onclick>#(skin.togglesetting('#AlbumInfo.ShowTracks'))</onclick>
	  <label>#(L(183)) /#(L(182))</label>
    </control>
    <control Style="NoShadow">
      <description>Refresh</description>
      <type>button</type>
      <id>6</id>
      <posX>50</posX>
      <posY>220</posY>
      <width>200</width>
      <label>184</label>
      <font>font13</font>
      <onleft>4</onleft>
      <onright>4</onright>
      <onup>5</onup>
      <ondown>5</ondown>
    </control>
  </controls>
</window>
