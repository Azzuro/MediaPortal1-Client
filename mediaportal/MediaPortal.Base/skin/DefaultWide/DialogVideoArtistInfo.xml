      <type>label</type>
      <id>1</id>
      <posX>30</posX>
      <posY>10</posY>
      <label>#currentmodule</label>
      <font>font16</font>
      <align>left</align>
      <textcolor>White</textcolor>
    </control>           
    <control>
      <description>Background Image</description>
      <type>image</type>
      <id>1</id>
      <width>1280</width>
      <height>720</height>
    </control>        	
    <import>common.time.xml</import>
    <import>common.video.fanart.xml</import>
