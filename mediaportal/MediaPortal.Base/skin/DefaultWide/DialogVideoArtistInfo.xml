      <description>Actors Movies List</description>
      <type>listcontrol</type>
      <id>24</id>
      <posX>285</posX>      
      <posY>175</posY>
      <width>960</width>
      <height>393</height>
      <onleft>4</onleft>
      <onright>4</onright>
      <scrollOffset>4</scrollOffset>
      <spinPosX>1148</spinPosX>
      <spinPosY>495</spinPosY>
      <spinCanFocus>no</spinCanFocus>
      <unfocusedAlpha>160</unfocusedAlpha>
