      <onleft>3</onleft>
      <onright>3</onright>
      <onup>2</onup>
      <ondown>4</ondown>
    </control>    
    <control>
      <description>Movies Button</description>
      <type>togglebutton</type>
      <id>4</id>
      <posX>30</posX>
      <posY>513</posY>
      <width>200</width>
      <label>342</label>
      <textcolor>ffffffff</textcolor>
      <colordiffuse>ffffffff</colordiffuse>
      <font>font13</font>
      <onleft>24</onleft>
      <onright>24</onright>
      <onup>3</onup>
      <ondown>4755</ondown>
    </control>
    <control>
      <description>IMDb Trailer Button (Online Videos)</description>
      <type>button</type>
      <id>4755</id>
      <posX>30</posX>
      <posY>558</posY>
      <width>200</width>
      <label>IMDb Trailers</label>
      <font>font13</font>
      <hyperlink>4755</hyperlink>
      <hyperlinkParameter>site:IMDb Movie Trailers|search:#(iif(neq(#imdbnumber,''),#imdbnumber,#title))|return:Locked</hyperlinkParameter>
      <onup>4</onup>
      <ondown>4756</ondown>
      <onleft>24</onleft>
      <onright>24</onright>
      <visible>plugin.isenabled(OnlineVideos)+control.isvisible(24)</visible>
    </control>		
    <control>
      <description>iTunes Trail Button (Online Videos)</description>
      <type>button</type>
      <id>4756</id>
      <posX>30</posX>
      <posY>603</posY>
      <width>200</width>
      <label>iTunes Trailers</label>
      <font>font13</font>
      <hyperlink>4755</hyperlink>
      <hyperlinkParameter>site:iTunes Movie Trailers|search:#Actor.MovieTitle|return:Locked</hyperlinkParameter>
      <visible>plugin.isenabled(OnlineVideos)+control.isvisible(24)</visible>
      <onup>4755</onup>
      <ondown>3</ondown>
      <onleft>24</onleft>
      <onright>24</onright>
    </control>
