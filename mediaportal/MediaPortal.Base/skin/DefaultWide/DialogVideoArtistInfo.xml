      <textcolor>FFB2D4F5</textcolor>
    </control>   
    <!--  **********  Cast / Movie Actor Image **********  -->
    <control>
      <description>Cast Image Missing Art</description>
      <id>1</id>
      <type>image</type>
      <posX>35</posX>
      <posY>175</posY>
      <width>190</width>
      <height>270</height>      
      <keepaspectratio>no</keepaspectratio>
      <texture flipY="true" mask="videothumbmask.png">defaultActorBig.png</texture>                    
    </control>
    <control>
      <description>Cast Image</description>
      <type>image</type>
      <id>21</id>
      <posX>35</posX>
      <posY>175</posY>
      <width>190</width>
      <height>270</height>      
      <colorkey>FFFF00FF</colorkey>
      <colordiffuse>FFFFFFFF</colordiffuse>
      <keepaspectratio>no</keepaspectratio>
      <texture flipY="true" mask="videothumbmask.png">#thumb</texture>            
    </control>    
    <control>
      <description>Actor Movie Image</description>
      <type>image</type>
      <id>25</id>
      <posX>35</posX>
      <posY>175</posY>
      <width>190</width>
      <height>270</height>      
      <colorkey>FFFF00FF</colorkey>
      <colordiffuse>FFFFFFFF</colordiffuse>
      <keepaspectratio>no</keepaspectratio>
      <texture flipY="true" mask="videothumbmask.png">#Actor.MovieImage</texture>      
      <visible>control.isvisible(24)</visible>
    </control>
    <control>
      <description>Actor Movie Image</description>
      <type>image</type>
      <id>1</id>
      <posX>35</posX>
      <posY>175</posY>
      <width>190</width>
      <height>270</height>
      <texture flipY="true" mask="videothumbmask.png">Videothumbframe.png</texture>
      <visible>control.isvisible(24)</visible>
    </control>    
    <!--  **********  Button Group **********  -->
    <control>
      <description>Biography Button</description>
      <type>togglebutton</type>
