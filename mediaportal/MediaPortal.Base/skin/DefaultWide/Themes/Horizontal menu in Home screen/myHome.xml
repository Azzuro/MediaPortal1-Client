<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>0</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <disabletopbar>yes</disabletopbar>
  <define>#selecteditem:</define>
  <define>#selectedindex:</define>
  <define>#indexcount:</define>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>1280</width>
      <height>720</height>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>Menu Bg</description>
      <id>0</id>
      <type>image</type>
      <posX>-30</posX>
      <posY>460</posY>
      <width>1350</width>
      <height>63</height>
      <texture>list_sub_focus.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
      <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
    </control>
    <control>
      <description>Menu</description>
      <type>menu</type>
      <animation effect="fade" time="300">WindowOpen</animation>
      <animation effect="fade" time="300">WindowClose</animation>
      <id>50</id>
      <posX>20</posX>
      <posY>450</posY>
      <width>1260</width>
      <textcolor>ivory</textcolor>
      <textColorNoFocus>60ffffff</textColorNoFocus>
      <textAlign>center</textAlign>
      <dimColor>80ffffff</dimColor>
      <buttonTextXOff>0</buttonTextXOff>
      <buttonTextYOff>0</buttonTextYOff>
      <buttonOffset>3</buttonOffset>
      <buttonFont>font17</buttonFont>
      <buttonHeight>80</buttonHeight>
      <buttonWidth>250</buttonWidth>
      <spaceBetweenButtons>10</spaceBetweenButtons>
      <numberOfButtons>5</numberOfButtons>
      <textureButtonFocus mask="picturethumbmask.png">tvguide_button_selected_middle.png</textureButtonFocus>
      <textureButtonNoFocus>-</textureButtonNoFocus>
      <hoverX>420</hoverX>
      <hoverY>60</hoverY>
      <hoverWidth>420</hoverWidth>
      <hoverHeight>420</hoverHeight>
      <hoverKeepAspectratio>yes</hoverKeepAspectratio>
      <scrollTime>250</scrollTime>
      <scrollTimeMin>50</scrollTimeMin>
      <textureBackground>-</textureBackground>
      <onright>50</onright>
      <onleft>50</onleft>
      <onup>10</onup>
      <ondown>50</ondown>
      <horizontal>yes</horizontal>
      <shadowAngle>45</shadowAngle>
      <shadowDistance>1</shadowDistance>
      <shadowColor>00000000</shadowColor>
      <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
    </control>
    <!-- TOPBAR Buttons -->
    <control>
      <type>image</type>
      <id>1</id>
      <texture>topbar_background.png</texture>
      <posX>505</posX>
      <posY>-1</posY>
      <width>250</width>
      <height>70</height>
    </control>
    <control>
      <description>group element</description>
      <type>group</type>
      <posX>515</posX>
      <posY>6</posY>
      <layout>StackLayout(2, Horizontal)</layout>
      <control>
        <description>basichome button button</description>
        <type>button</type>
        <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
        <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
        <id>10</id>
        <posX>708</posX>
        <posY>100</posY>
        <width>55</width>
        <height>55</height>
        <textureFocus>Basic_focus.png</textureFocus>
        <textureNoFocus>Basic_nofocus.png</textureNoFocus>
        <label>-</label>
        <action>115</action>
        <onleft>13</onleft>
        <onright>11</onright>
        <onup>10</onup>
        <ondown>50</ondown>
      </control>
      <control>
        <description>videowallpaper button</description>
        <type>button</type>
        <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
        <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
        <id>11</id>
        <posX>815</posX>
        <posY>100</posY>
        <width>55</width>
        <height>55</height>
        <textureFocus>button_tvdesktop_focus.png</textureFocus>
        <textureNoFocus>button_tvdesktop_nofocus.png</textureNoFocus>
        <label>-</label>
        <action>101</action>
        <onleft>10</onleft>
        <onright>12</onright>
        <onup>11</onup>
        <ondown>50</ondown>
      </control>
      <control>
        <description>Exit button</description>
        <type>button</type>
        <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
        <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
        <id>12</id>
        <posX>922</posX>
        <posY>100</posY>
        <width>55</width>
        <height>55</height>
        <textureFocus>button_close_focus.png</textureFocus>
        <textureNoFocus>button_close_nofocus.png</textureNoFocus>
        <label>-</label>
        <action>97</action>
        <onleft>11</onleft>
        <onright>13</onright>
        <onup>12</onup>
        <ondown>50</ondown>
      </control>
      <control>
        <description>Shutdown button</description>
        <type>button</type>
        <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
        <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
        <id>13</id>
        <posX>1028</posX>
        <posY>100</posY>
        <width>55</width>
        <height>55</height>
        <textureFocus>button_shutdown_focus.png</textureFocus>
        <textureNoFocus>button_shutdown_nofocus.png</textureNoFocus>
        <label>-</label>
        <action>99</action>
        <onleft>12</onleft>
        <onright>10</onright>
        <onup>13</onup>
        <ondown>50</ondown>
      </control>
    </control>
    <!--    *******************************************************************************************  -->
    <!--    *************************  RSS-FEED ON BASIC HOME  **************************************  -->
    <!--    *******************************************************************************************  -->
    <control Style="BasicHomeFade">
      <description>RSS Feed Background</description>
      <type>image</type>
      <id>1</id>
      <posX>80</posX>
      <posY>630</posY>
      <width>1100</width>
      <texture>list_sub_focus.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
      <visible>plugin.isenabled(InfoService)+string.equals(#infoservice.feed.enabled, true)</visible>
    </control>
    <control Style="BasicHomeFade">
      <description>Feed items</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>100</posX>
      <posY>640</posY>
      <width>1060</width>
      <align>left</align>
      <font>font11</font>
      <textcolor>ivory</textcolor>
      <label>#infoservice.feed.titles</label>
      <animation effect="fade" time="250">VisibleChange</animation>
      <wrapString>: : :</wrapString>
      <visible>plugin.isenabled(InfoService)+string.equals(#infoservice.feed.enabled, true)</visible>
    </control>
  </controls>
</window>
