<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <!--#################   THIS IS THE EXPANDING OSD BACKGROUND     ##################-->
    <control>
      <description>background top</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>363</posY>
      <width>1290</width>
      <height>500</height>
      <texture>blue.png</texture>
      <visible>Control.HasFocus(1237)</visible>
      <colordiffuse>eeffffff</colordiffuse>
      <!--animation effect="slide" start="0,-500" end="0,0" time="50" reversible="false">visible</animation-->
    </control>
    <!--###################     HERE ARE THE DISPLAYED OSD DATA    ###################################-->
    <control>
      <description>Time Info</description>
      <type>label</type>
      <id>110</id>
      <posX>1250</posX>
      <posY>370</posY>
      <label>#time</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ff6FAFE1</textcolor>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>background</description>
      <type>image</type>
      <id>1</id>
      <posX>160</posX>
      <posY>451</posY>
      <width>645</width>
      <height>25</height>
      <texture>osd_progress_background.png</texture>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>TV Progress Bar</description>
      <type>tvprogress</type>
      <id>1</id>
      <posX>160</posX>
      <posY>455</posY>
      <width>645</width>
      <height>18</height>
      <toptexture>osd_progress_indicator.png</toptexture>
      <TextureOffsetY>21</TextureOffsetY>
      <bottomtexture>-</bottomtexture>
      <texturetick>-</texturetick>
      <lefttexture>-</lefttexture>
      <midtexture>-</midtexture>
      <righttexture>-</righttexture>
      <logotexture>-</logotexture>
      <fillbackgroundtexture>-</fillbackgroundtexture>
      <fillbgxoff>0</fillbgxoff>
      <fillbgyoff>0</fillbgyoff>
      <filltexture1>osd_progress_mid_red.png</filltexture1>
      <filltexture2>osd_progress_mid_green.png</filltexture2>
      <filltexture3>osd_progress_mid_orange.png</filltexture3>
      <markertexture>osd_progress_mid_orange.png</markertexture>
      <fillheight>18</fillheight>
      <label>#TV.Record.percent1</label>
      <label1>#TV.Record.percent2</label1>
      <label2>#TV.Record.percent3</label2>
      <labelmarkerstarts>#TV.Record.jumppoints</labelmarkerstarts>
	    <labelmarkerends>#TV.Record.chapters</labelmarkerends>
      <startlabel />
      <endlabel />
      <toplabel />
      <font>font13</font>
      <textcolor>FF000000</textcolor>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>End Time Info</description>
      <type>label</type>
      <posX>915</posX>
      <posY>448</posY>
      <label>#currentremaining</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffffffff</textcolor>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>Start Time Info</description>
      <type>label</type>
      <posX>40</posX>
      <posY>448</posY>
      <label>#currentplaytime</label>
      <align>left</align>
      <font>font14</font>
      <textcolor>ffffffff</textcolor>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>horizontal divider</description>
      <type>image</type>
      <id>1</id>
      <posX>40</posX>
      <posY>490</posY>
      <height>1</height>
      <width>1210</width>
      <texture>hbar1white.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>Plot</description>
      <type>textboxscrollup</type>
      <id>1</id>
      <posX>40</posX>
      <posY>505</posY>
      <width>1210</width>
      <height>200</height>
      <align>left</align>
      <label>#TV.View.description</label>
      <seperator>&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;	&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;	&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;&#8901;</seperator>
      <font>font12</font>
      <textcolor>ivory</textcolor>
      <visible>control.hasfocus(1237)</visible>
      <shadowAngle>0</shadowAngle>
      <shadowDistance>0</shadowDistance>
    </control>
    <control>
      <description>On tv NOW</description>
      <id>1</id>
      <type>fadelabel</type>
      <width>770</width>
      <height>30</height>
      <posX>120</posX>
      <posY>406</posY>
      <align>left</align>
      <label>#TV.View.title</label>
      <font>font18</font>
      <textcolor>ff6FAFE1</textcolor>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>TV Logo</description>
      <type>image</type>
      <id>1</id>
      <posX>40</posX>
      <posY>380</posY>
      <width>62</width>
      <height>62</height>
      <texture>#TV.View.thumb</texture>
      <centered>yes</centered>
      <keepaspectratio>yes</keepaspectratio>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>Current channel</description>
      <type>label</type>
      <id>1</id>
      <posX>120</posX>
      <posY>377</posY>
      <width>770</width>
      <label>#TV.View.channel</label>
      <align>left</align>
      <font>font14</font>
      <textcolor>ivory</textcolor>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>vertical divider</description>
      <type>image</type>
      <id>1</id>
      <posX>940</posX>
      <posY>375</posY>
      <height>104</height>
      <width>1</width>
      <texture>slider_vertical.png</texture>
      <colordiffuse>90ffffff</colordiffuse>
      <visible>control.hasfocus(1237)</visible>
    </control>
    <control>
      <description>rec logo</description>
      <type>image</type>
      <id>1</id>
      <posX>860</posX>
      <posY>380</posY>
      <width>40</width>
      <height>40</height>
      <texture>tv_is_recording.png</texture>
      <animation effect="zoom" start="100,100" end="110,110" time="70" condition="true" pulse="true">conditional</animation>
      <visible>player.recording+control.hasfocus(1237)</visible>
    </control>
  </controls>
</window>
