<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>background.png</texture>
      <width>1280</width>
      <height>720</height>
    </control>
     <control>
      <description>background top overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>270</height>
      <texture>overlay_top.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
    </control>
    <control>
      <type>label</type>
      <id>1</id>
      <posX>30</posX>
      <posY>10</posY>
      <label>#(iif(and(neq(L(102012), #currentmodule), neq(L(102002), #currentmodule), neq(L(100100), #currentmodule), neq(L(102015), #currentmodule)), #currentmodule, ' '))</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ivory</textcolor>
    </control>
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>1244</posX>
      <posY>40</posY>
      <label>#selectedindex/#itemcount #(iif(and(neq(L(102012), #currentmodule), neq(L(102002), #currentmodule), neq(L(100100), #currentmodule), neq(L(102015), #currentmodule)), #currentmodule, ' '))</label>
      <align>right</align>
      <textcolor>ivory</textcolor>
      <font>font10</font>
      <visible>string.equals(#selectedindex)+string.equals(#itemcount)</visible>
    </control>
    <control>
      <description>Total duration Label</description>
      <type>label</type>
      <id>1</id>
      <posX>1140</posX>
      <posY>60</posY>
      <label>180</label>
      <align>right</align>
      <textcolor>ivory</textcolor>
      <font>font10</font>
      <visible>string.equals(#totalduration)+[window.isvisible(500)|window.isvisible(501)|window.isvisible(504)]</visible>
    </control>
    <control>
      <description>Total duration Label</description>
      <type>label</type>
      <id>1</id>
      <posX>1244</posX>
      <posY>60</posY>
      <label>#totalduration</label>
      <align>right</align>
      <textcolor>ivory</textcolor>
      <font>font10</font>
      <visible>string.equals(#totalduration)+[window.isvisible(500)|window.isvisible(501)|window.isvisible(504)]</visible>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>30</posX>
      <posY>40</posY>
      <width>711</width>
      <label>#selecteditem</label>
      <font>font13</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
      <visible>!window.isvisible(6)+!window.isvisible(25)</visible>
    </control>
    <control>
      <description>Date Time</description>
      <type>label</type>
      <id>0</id>
      <posX>1244</posX>
      <posY>10</posY>
      <label>#date | #time</label>
      <align>right</align>
      <font>font11</font>
      <textcolor>ff6FAFE1</textcolor>
    </control>
  </controls>
</window>
