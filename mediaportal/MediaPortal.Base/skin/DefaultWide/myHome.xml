<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>0</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <disabletopbar>yes</disabletopbar>
  <define>#selecteditem:</define>
  <define>#selectedindex:</define>
  <define>#indexcount:</define>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>1280</width>
      <height>720</height>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>Clock</description>
      <type>image</type>
      <id>0</id>
      <posX>605</posX>
      <posY>19</posY>
      <width>70</width>
      <height>70</height>
      <texture>clock.png</texture>
      <visible>yes</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>605</posX>
      <posY>20</posY>
      <width>70</width>
      <height>70</height>
      <texture>clockHandMinute.png</texture>
      <animation effect="rotate" clockhandle="minute" time="70" condition="true" loop="true" >Conditional</animation>
      <visible>yes</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>605</posX>
      <posY>20</posY>
      <width>70</width>
      <height>70</height>
      <texture>clockHandHour.png</texture>
      <animation effect="rotate" clockhandle="hour" time="70" condition="true" loop="true" >Conditional</animation>
      <visible>yes</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>605</posX>
      <posY>20</posY>
      <width>70</width>
      <height>70</height>
      <texture>clockHandSecond.png</texture>
      <animation effect="rotate" clockhandle="second" time="70" condition="true" loop="true" >Conditional</animation>
      <visible>yes</visible>
    </control>
    <control>
      <description>Menu</description>
      <type>menu</type>
      <animation effect="zoom" start="20,20" end="100,100" center="640,360" time="70">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" center="640,360" time="70">WindowClose</animation>
      <id>50</id>
      <posX>672</posX>
      <posY>160</posY>
      <width>500</width>
      <textcolor>ffffffff</textcolor>
      <textColorNoFocus>ffa9d0f7</textColorNoFocus>
      <dimColor>80ffffff</dimColor>
      <buttonTextXOff>38</buttonTextXOff>
      <buttonTextYOff>10</buttonTextYOff>
      <buttonOffset>28</buttonOffset>
      <buttonFont>font18</buttonFont>
      <buttonHeight>77</buttonHeight>
      <spaceBetweenButtons>0</spaceBetweenButtons>
      <numberOfButtons>5</numberOfButtons>
      <textureButtonFocus>hp_selectionbar_focus.png</textureButtonFocus>
      <textureButtonNoFocus>-</textureButtonNoFocus>
      <hoverX>141</hoverX>
      <hoverY>155</hoverY>
      <hoverWidth>380</hoverWidth>
      <hoverHeight>454</hoverHeight>
      <hoverKeepAspectratio>yes</hoverKeepAspectratio>
      <scrollTime>120</scrollTime>
      <scrollTimeMin>50</scrollTimeMin>
      <textureBackground>emtpy.png</textureBackground>
      <onright>13</onright>
      <onleft>10</onleft>
    </control>
    <!-- TOPBAR Buttons -->
    <control>
      <description>basichome button button</description>
      <type>button</type>
      <animation effect="zoom" start="20,20" end="100,100" time="70">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="70">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>10</id>
      <posX>708</posX>
      <posY>100</posY>
      <width>65</width>
      <height>65</height>
      <textureFocus>Basic_focus.png</textureFocus>
      <textureNoFocus>Basic_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>115</action>
      <onleft>13</onleft>
      <onright>11</onright>
      <onup>10</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>videowallpaper button</description>
      <type>button</type>
      <animation effect="zoom" start="20,20" end="100,100" time="70">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="70">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>11</id>
      <posX>815</posX>
      <posY>100</posY>
      <width>65</width>
      <height>65</height>
      <textureFocus>button_tvdesktop_focus.png</textureFocus>
      <textureNoFocus>button_tvdesktop_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>101</action>
      <onleft>10</onleft>
      <onright>12</onright>
      <onup>11</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>Exit button</description>
      <type>button</type>
      <animation effect="zoom" start="20,20" end="100,100" time="70">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="70">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>12</id>
      <posX>922</posX>
      <posY>100</posY>
      <width>65</width>
      <height>65</height>
      <textureFocus>button_close_focus.png</textureFocus>
      <textureNoFocus>button_close_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>97</action>
      <onleft>11</onleft>
      <onright>13</onright>
      <onup>12</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>Shutdown button</description>
      <type>button</type>
      <animation effect="zoom" start="20,20" end="100,100" time="70">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="1,1" time="70">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" time="200">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" time="200">unfocus</animation>
      <id>13</id>
      <posX>1028</posX>
      <posY>100</posY>
      <width>65</width>
      <height>65</height>
      <textureFocus>button_shutdown_focus.png</textureFocus>
      <textureNoFocus>button_shutdown_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>99</action>
      <onleft>12</onleft>
      <onright>10</onright>
      <onup>13</onup>
      <ondown>50</ondown>
    </control>
  </controls>
</window>
