<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>704</id>
  <defaultcontrol>22</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <rememberLastFocusedControl>yes</rememberLastFocusedControl>
  <controls>
    <import>common.settings.xml</import>
    <control>
      <description>background</description>
      <type>image</type>
      <id>1</id>
      <posX>435</posX>
      <posY>120</posY>
      <height>520</height>
      <width>435</width>
      <texture>backslide.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
    </control>
    <control>
      <description>buttons</description>
      <type>group</type>
      <animation effect="slide" time="70" start="-300,0">WindowOpen</animation>
      <animation effect="slide" time="70" end="-300,0">WindowClose</animation>
      <posX>465</posX>
      <posY>160</posY>
      <layout>StackLayout(0, Horizontal, True)</layout>
      <control>
        <description>Enable Subtitles</description>
        <type>checkbutton</type>
        <id>22</id>
        <label>*Enable Subtitles</label>
        <width>350</width>
        <onup>17</onup>
      </control>
      <control>
        <description>Enable Closed Caption</description>
        <type>checkbutton</type>
        <id>31</id>
        <label>*Enable Closed Captions</label>
        <width>350</width>
      </control>
      <control>
        <description>Turn Off DXVA</description>
        <type>checkbutton</type>
        <id>23</id>
        <label>*Turn off DXVA</label>
        <width>350</width>
      </control>
      <control>
        <description>Video</description>
        <type>button</type>
        <id>24</id>
        <label>*Video codecs</label>
        <width>350</width>
      </control>
      <control>
        <description>Audio</description>
        <type>button</type>
        <id>25</id>
        <label>*Audio codecs</label>
        <width>350</width>
        <ondown>22</ondown>
      </control>
    </control>
  </controls>
</window>
