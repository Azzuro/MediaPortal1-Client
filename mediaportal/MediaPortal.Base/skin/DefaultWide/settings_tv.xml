<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>700</id>
  <defaultcontrol>24</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:6014</define>
  <define>#header.hover:hover_my tv.png</define>
  <controls>
    <import>common.settings.xml</import>
    <control>
      <description>buttons</description>
      <type>group</type>
      <animation effect="slide" time="70" start="800,0">WindowOpen</animation>
      <animation effect="slide" time="70" end="800,0">WindowClose</animation>
      <posX>99</posX>
      <posY>188</posY>
      <layout>GridLayout(2, 6, 52, 2, 1)</layout>
      <control>
        <description>Automatically turn TV on</description>
        <type>button</type>
        <id>30</id>
        <label>6006</label>
        <width>450</width>
      </control>
      <control>
        <description>De-interlacing</description>
        <type>button</type>
        <id>27</id>
        <label>6003</label>
        <width>450</width>
      </control>
      <control>
        <description>Apect Ratio</description>
        <type>button</type>
        <id>28</id>
        <label>6004</label>
        <width>450</width>
      </control>
      <control>
        <description>Use guide colors for genre</description>
        <type>checkbutton</type>
        <id>41</id>
        <label>Enable Colored Genres In TV Guide</label>
        <width>450</width>
        <selected>#(skin.hassetting('#skin.tvguide.usecolorsforgenre'))</selected>
        <onclick>#(skin.togglesetting('#skin.tvguide.usecolorsforgenre'))</onclick>
      </control>
      <control>
        <description>Use highlight</description>
        <type>checkbutton</type>
        <id>42</id>
        <label>Border Selected Program In TV Guide</label>
        <width>450</width>
        <selected>#(skin.hassetting('#skin.tvguide.useborderhighlight'))</selected>
        <onclick>#(skin.togglesetting('#skin.tvguide.useborderhighlight'))</onclick>
      </control>
      <control>
        <description>Show genre color key</description>
        <type>checkbutton</type>
        <id>43</id>
        <label>Show Genre Color Key In TV Guide</label>
        <width>450</width>
        <selected>#(skin.hassetting('#skin.tvguide.showgenrekey'))</selected>
        <onclick>#(skin.togglesetting('#skin.tvguide.showgenrekey'))</onclick>
      </control>
      <control>
        <description>MPEG-2 Video Codecs</description>
        <type>button</type>
        <id>24</id>
        <label>6000</label>
        <width>450</width>
      </control>
      <control>
        <description>H.264 Video Codecs</description>
        <type>button</type>
        <id>35</id>
        <label>6036</label>
        <width>450</width>
      </control>
      <control>
        <description>Audio Codecs</description>
        <type>button</type>
        <id>25</id>
        <label>6001</label>
        <width>450</width>
      </control>
      <control>
        <description>LATM AAC Audio Codecs</description>
        <type>button</type>
        <id>36</id>
        <label>6039</label>
        <width>450</width>
      </control>
      <control>
        <description>Audio Renderer</description>
        <type>button</type>
        <id>33</id>
        <label>6002</label>
        <width>450</width>
      </control>
    </control>
  </controls>
</window>
