        <SectionTemplate tags="T">

          <!-- Template of the Listing information -->
          <TemplateText>
            &lt;tr&gt;&lt;td valign="top" width="50"&gt;&lt;#START&gt;&lt;/td&gt;&lt;td&gt;&lt;b&gt;&lt;#TITLE&gt;&lt;/b&gt;&lt;br&gt;&lt;#SUBTITLE&gt;&lt;br&gt; &lt;/td&gt;&lt;/tr&gt;
          </TemplateText>
        </SectionTemplate>
      </Template>
      <Template name="details">
        <SectionTemplate tags="TPB">
          <TemplateText>
            &lt;td&gt; - &lt;#END&gt; &lt;#VALUE&gt; Kategori:&lt;#GENRE&gt; Episode (&lt;#EPISODE&gt;)&lt;p&gt;&lt;#DESCRIPTION&gt;&lt;p&gt;Medvirkende: &lt;#ACTORS&gt;&lt;/td&gt;
          </TemplateText>
        </SectionTemplate>
      </Template>
      <Sublinks>
        <Sublink search="visprogram" template="details">
          <Link url="http://www.ahot.dk/tv/[1]" post="" external="false" encoding="" />
        </Sublink>
      </Sublinks>
    </Html>
