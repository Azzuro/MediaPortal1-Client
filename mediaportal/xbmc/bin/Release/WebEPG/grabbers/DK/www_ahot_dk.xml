  <!-- Formating of Listing -->
  <Listing type="Html">
    <Site url="http://www.ahot.dk/tv/kanal.asp?kanal=[ID]&amp;Dato=[DD]-[MM]-[YYYY]" post="" external="false" encoding="" delay="500" />
    <Search maxlistings="250" listStart="1" />
