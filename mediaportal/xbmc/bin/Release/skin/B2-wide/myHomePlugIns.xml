<window>
  <id>34</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <autohidetopbar>yes</autohidetopbar>
  <controls>
      <control>
        <description>background image</description>
        <type>image</type>
        <id>1</id>
        <posX>0</posX>
        <posY>0</posY>
        <width>1366</width>
        <height>768</height>
        <texture>background.png</texture>
      </control>
      <control>
        <description>menu background image</description>
        <type>image</type>
        <id>1</id>
        <posX>45</posX>
        <posY>190</posY>
        <width>500</width>
        <height>466</height>
        <texture>background_glass_hoover_area.png</texture>
      </control>
  
      <control>
        <description>Menu</description>
        <type>menu</type>
        <id>50</id>
        <posX>700</posX>
        <posY>180</posY>
        <width>488</width>
        <dimColor>80ffffff</dimColor>
        <buttonTextXOff>77</buttonTextXOff>
        <buttonTextYOff>10</buttonTextYOff>
        <buttonOffset>25</buttonOffset>
        <buttonFont>font16</buttonFont>
        <buttonHeight>65</buttonHeight>
        <spaceBetweenButtons>18</spaceBetweenButtons>
        <numberOfButtons>5</numberOfButtons>
        <textureButtonFocus>hp_selectionbar.png</textureButtonFocus>
        <textureButtonNoFocus>-</textureButtonNoFocus>
        <hoverX>180</hoverX>
        <hoverY>285</hoverY>
        <hoverWidth>300</hoverWidth>
        <hoverHeight>350</hoverHeight>
        <scrollTime>140</scrollTime>
        <scrollTimeMin>80</scrollTimeMin>
        <textureBackground>background_glass_menu_area.png</textureBackground>
        <onright>13</onright>
        <onleft>10</onleft>
      </control>
      <!-- Date and Time -->
      <control>
        <description>Date</description>
        <type>label</type>
        <id>200</id>
        <posX>590</posX>
        <posY>188</posY>
        <label>#date</label>
        <align>right</align>
        <font>font14</font>
        <textcolor>ffa9d0f7</textcolor>
      </control>
      <control>
        <description>Time</description>
        <type>label</type>
        <id>201</id>
        <posX>590</posX>
        <posY>232</posY>
        <label>#time</label>
        <align>right</align>
        <font>font16</font>
        <textcolor>ffffffff</textcolor>
      </control>
  </controls>
</window>
