<window>

  <id>5623</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:Netflix Manager</define>
  <define>#header.text:videos</define>
  <define>#header.hover:hover_my videos.png</define>

  <controls>
  	<import>common.window.default.xml</import>
	<control>
		<type>group</type>
		<description>group element</description>
		<animation>FlyInFromLeft</animation>
		<layout>StackLayout(2)</layout>
   		<control>
      			<description>Refresh Queue</description>
      			<type>button</type>
      			<id>2</id>
      			<label>Refresh Queue</label>
      			<onleft>2</onleft>
      			<onright>5</onright>
      			<onup>2</onup>
      			<ondown>3</ondown>
    		</control>
    		<control>
      			<description>Get Recomendations</description>
      			<type>button</type>
      			<id>3</id>
      			<label>Recomendations</label>
      			<onleft>3</onleft>
      			<onright>5</onright>
      			<onup>2</onup>
      			<ondown>4</ondown>
    		</control>
    		<control>
      			<description>RSS Feeds</description>
      			<type>button</type>
      			<id>4</id>
      			<label>Browse</label>
      			<onleft>4</onleft>
      			<onright>5</onright>
      			<onup>3</onup>
      			<ondown>8</ondown>
    		</control>
    		<control>
      			<description>Search</description>
      			<type>button</type>
      			<id>8</id>
      			<label>Search</label>
      			<onleft>8</onleft>
      			<onright>5</onright>
      			<onup>4</onup>
      			<ondown>9</ondown>
    		</control>
    		<control>
      			<description>Award Winners</description>
      			<type>button</type>
      			<id>9</id>
      			<label>Award Winners</label>
      			<onleft>9</onleft>
      			<onright>5</onright>
      			<onup>8</onup>
      			<ondown>2</ondown>
    		</control>
	</control>
	<control>
      		<type>listcontrol</type>
      		<description>listview</description>
      		<id>5</id>
      		<height>340</height>
		<spinPosY>397</spinPosY>
      		<onleft>2</onleft>
      		<onright>3</onright>
      		<onup>3</onup>
      		<ondown>3</ondown>
    	</control>
    	<control>
      		<type>image</type>
      		<description>Cover Art Image</description>
      		<id>6</id>
		<posX>160</posX>
		<posY>283</posY>
		<width>200</width>
		<height>240</height>
      		<texture>#thumb</texture>
		<align>right</align>
      		<keepaspectratio>yes</keepaspectratio>
    	</control>
    	<control>
      		<type>textboxscrollup</type>
    		<description>Description</description>
      		<id>7</id>
		<posX>400</posX>
		<posY>475</posY>
		<width>800</width>
		<height>200</height>
		<seperator>----------------------------------------------------------------------------------------------</seperator>
		<font>font14</font>
	</control>
  </controls>

</window>
