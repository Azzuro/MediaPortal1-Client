<window>
  <controls>
    <control>
      <type>group</type>
      <animation effect="slide" time="400" start="0,-300">WindowOpen</animation>
      <animation effect="slide" time="400" end="800,0" >WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <description>group element</description>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <scrollOffset>2</scrollOffset>
        </control>
        <control>
          
          <description>Thumbnail Panel</description>
          <type>thumbnailpanel</type>
          <id>50</id>
          <scrollOffset>1</scrollOffset>
          <onleft>2</onleft>
          <onright>2</onright>
          <itemWidth>72</itemWidth>
          <itemHeight>108</itemHeight>
          <textureWidth>58</textureWidth>
          <textureHeight>80</textureHeight>
          <thumbWidth>44</thumbWidth>
          <thumbHeight>62</thumbHeight>
          <thumbPosX>7</thumbPosX>
          <thumbPosY>9</thumbPosY>
          <textureWidthBig>85</textureWidthBig>
          <textureHeightBig>116</textureHeightBig>
          <itemWidthBig>108</itemWidthBig>
          <itemHeightBig>138</itemHeightBig>
          <thumbWidthBig>64</thumbWidthBig>
          <thumbHeightBig>90</thumbHeightBig>
          <thumbPosXBig>10</thumbPosXBig>
          <thumbPosYBig>12</thumbPosYBig>
        </control>
        <control>
          <description>Filmstrip view</description>
          <type>filmstrip</type>
          <id>50</id>
          <onleft>2</onleft>
          <onright>2</onright>
          <onup>2</onup>
          <ondown>2</ondown>
          <backgroundx>354</backgroundx>
          <backgroundy>99</backgroundy>
          <backgroundwidth>218</backgroundwidth>
          <backgroundheight>316</backgroundheight>
          <InfoImage>-</InfoImage>
          <InfoImagex>366</InfoImagex>
          <InfoImagey>118</InfoImagey>
          <InfoImagewidth>187</InfoImagewidth>
          <InfoImageheight>264</InfoImageheight>
        </control>
        <control>
          <description>playlist listcontrol</description>
          <type>playlistcontrol</type>
          <id>50</id>
          <scrollOffset>1</scrollOffset>
        </control>

      </control>
    </control>
  </controls>
</window>
