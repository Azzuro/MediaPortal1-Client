<?xml version="1.0" encoding="UTF-8"?>
<window>
  <controls>
    <control>
	<description>progressbar background</description>
      <type>image</type>
      <id>104</id>
      <posX>20</posX>
      <posY>20</posY>
      <width>680</width>
      <height>40</height>
      <texture>osd_bg_top.png</texture>
      <visible>no</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
	<description>background</description>
      <type>image</type>
      <id>105</id>
      <posX>86</posX>
      <posY>29</posY>
      <width>450</width>
      <height>20</height>
      <texture>osd_progress_background.png</texture>
      <visible>no</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>Progress Bar</description>
      <type>progress</type>
      <id>1</id>
      <posX>76</posX>
      <posY>30</posY>
      <width>470</width>
      <height>20</height>
      <texturebg>osd_progress_background.png</texturebg>
      <lefttexture>osd_progress_left.png</lefttexture>
      <midtexture>osd_progress_mid.png</midtexture>
      <righttexture>osd_progress_right.png</righttexture>
      <visible>no</visible>
      <label>#percentage</label>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
    </control>
    <control>
      <description>Start Time Info</description>
      <type>label</type>
      <id>101</id>
      <posX>34</posX>
      <posY>30</posY>
      <label>#currentplaytime</label>
      <align>left</align>
      <font>font13</font>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
      <visible>no</visible>
    </control>
    <control>
      <description>End Time Info</description>
      <type>label</type>
      <id>102</id>
      <posX>550</posX>
      <posY>30</posY>
      <label>#currentremaining</label>
      <align>left</align>
      <font>font13</font>
      <textcolor>FFFFFFFF</textcolor>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">windowopen</animation>
      <visible>no</visible>
    </control>

