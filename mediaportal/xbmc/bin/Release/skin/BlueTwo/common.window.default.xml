<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<controls>
		<control>
			<description>BG</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
		</control>
		<control>
			<type>label</type>
			<id>1</id>
			<posX>60</posX>
			<posY>20</posY>
			<font>font48</font>
			<textcolor>33ffffff</textcolor>
			<label>#header.text</label>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
		</control>
		<control>
			<description>Page text label</description>
			<type>label</type>
			<id>1</id>
			<label>#header.label</label>
			<posX>250</posX>
			<posY>70</posY>
			<font>font16</font>
			<align>right</align>
			<textcolor>White</textcolor>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
		</control>
		<control>
			<description>Selected item Label</description>
			<type>fadelabel</type>
			<id>1</id>
			<posX>670</posX>
			<posY>70</posY>
			<width>400</width>
			<label>#selecteditem</label>
			<font>font14</font>
			<textcolor>White</textcolor>
			<align>right</align>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
		</control>
		<control>
			<type>image</type>
			<id>1</id>
			<posX>75</posX>
			<posY>370</posY>
			<texture>#header.hover</texture>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
		</control>
		<control>
			<description>Number of Files Label</description>
			<type>label</type>
			<id>1</id>
			<posX>260</posX>
			<posY>530</posY>
			<label>#itemcount</label>
			<align>left</align>
			<textcolor>ffffffff</textcolor>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
		</control>
		<control>
			<description>Date</description>
			<type>label</type>
			<id>1</id>
			<posX>670</posX>
			<posY>30</posY>
			<label>#date</label>
			<align>right</align>
			<font>font14</font>
			<textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
		</control>
		<control>
			<description>Time</description>
			<type>label</type>
			<id>1</id>
			<posX>670</posX>
			<posY>50</posY>
			<label>#time</label>
			<align>right</align>
			<font>font14</font>
			<textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
		</control>	
	</controls>
