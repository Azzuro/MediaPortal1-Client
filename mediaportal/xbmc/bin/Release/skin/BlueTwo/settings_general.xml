<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>705</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:128</define>
  <define>#header.hover:hover_settings.png</define>
  <controls>
    <import>common.settings.xml</import>
    <control>
      <description>group element</description>
      <type>group</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="slide" time="250" start="-300,0">WindowOpen</animation>
      <animation effect="slide" time="500" end="800,0">WindowClose</animation>
      <posX>60</posX>
      <posY>131</posY>
      <layout>StackLayout</layout>
      <!-- topmost item needs an onup with a value of 17 for topbar to work -->
      <control>
        <description>Skin</description>
        <type>selectbutton</type>
        <id>10</id>
        <width>210</width>
        <label>166</label>
        <onup>17</onup>
      </control>
      <control>
        <description>Language</description>
        <type>selectbutton</type>
        <id>11</id>
        <width>210</width>
        <label>248</label>
      </control>
      <control>
        <description>Start in fullscreen mode</description>
        <type>togglebutton</type>
        <id>12</id>
        <width>210</width>
        <label>1047</label>
      </control>
      <control>
        <description>Screensaver</description>
        <type>togglebutton</type>
        <id>13</id>
        <width>210</width>
        <label>360</label>
      </control>
      <control>
        <description>Skip steps screen button</description>
        <type>button</type>
        <id>21</id>
        <width>210</width>
        <label>6024</label>
        <hyperlink>708</hyperlink>
        <ondown>99</ondown>
      </control>
    </control>
    <control>
      <description>Skin Preview</description>
      <type>image</type>
      <id>20</id>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <animation effect="slide" time="250" start="-300,0">WindowOpen</animation>
      <animation effect="slide" time="500" end="800,0">WindowClose</animation>
      <posX>281</posX>
      <posY>131</posY>
      <width>400</width>
      <height>300</height>
      <texture />
    </control>
  </controls>
</window>