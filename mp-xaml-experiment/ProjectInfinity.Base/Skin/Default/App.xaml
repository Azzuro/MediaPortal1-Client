<!-- 
     ==============================================================
     ==============================================================
	 ====   DO NOT REMOVE THIS FILE FROM THE BLEND PROJECT !!! ====
	 ====    THE PAGES WILL NOT BE ABLE TO LOAD THE RESOURCES  ====
	 ====        THAT ARE DECLARED IN THE THEME.XAML FILE      ====
	 ====                                                      ====
	 ==============================================================
	 ==============================================================
--> 
<Application
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="InfinitySkin.App"
	StartupUri="Window1.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
	 			<!-- 
				    We link the theme.xaml file here so that all resources
		    		in it are scoped at the Application level and can be 
					found by all views.
		 		-->
				<ResourceDictionary Source="theme.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>