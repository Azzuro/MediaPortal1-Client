<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="clr-namespace:MyVideos;assembly=MyVideos"
    xmlns:controls="clr-namespace:ProjectInfinity.Controls;assembly=ProjectInfinity.Controls"
    FocusManager.FocusedElement="{Binding ElementName=btnShares}">

  <Label Name="labelHeader" Style="{StaticResource LabelHeaderStyle}" Content="{Binding HeaderLabel}" />
  
  <Label x:Name="labelDate" Style="{StaticResource LabelNormalStyle}" HorizontalAlignment="Right" Margin="0,20,20,0" Content="{Binding Path=DateLabel}" />

  <controls:Button Name="btnShares" Command="{Binding Path=Shares}" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" Margin="31,126,0,0" VerticalAlignment="Top" Width="176" Height="33" Style="{DynamicResource MpButton}" Content="{Binding Path=FoldersLabel,Mode=OneWay}"/>
  <controls:Button Name="btnExtensions" Command="{Binding Path=Extensions}" Grid.Column="0" Grid.Row="5" Width="176" Height="33" Content="{Binding Path=ExtensionsLabel}" Style="{DynamicResource MpButton}" HorizontalAlignment="Left" Margin="31,159,0,0" VerticalAlignment="Top"/>
  <controls:Button Name="btnThumbs" Command="{Binding Path=Thumbnails}"  Grid.Column="0" Grid.Row="6" Width="176" Height="33" Content="{Binding Path=ThumbnailsLabel}" Style="{DynamicResource MpButton}" HorizontalAlignment="Left" Margin="31,192,0,0" VerticalAlignment="Top"/>

</Grid>