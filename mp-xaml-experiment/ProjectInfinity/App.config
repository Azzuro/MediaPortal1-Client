<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.diagnostics>
    <switches>
      <!-- 
      Tell the XMLSerializer NOT to delete its temporary files.
      This way we can debug them

      This setting seems also to fix the "Cannot cast List<type> to List<type>"
      exceptions in the configuration manager.
      -->
      <add value="4" name="XmlSerialization.Compilation"/>
    </switches>
  </system.diagnostics>
</configuration>
